<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_t"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/A1">

    <LinearLayout
        android:id="@+id/deep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d29"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tap_iv_1"
                    android:layout_width="@dimen/d53"
                    android:layout_height="@dimen/d53"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d20" />

                <ImageView
                    android:id="@+id/tap_iv_2"
                    android:layout_width="@dimen/d53"
                    android:layout_height="@dimen/d53"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d20"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/tap_iv_3"
                    android:layout_width="@dimen/d53"
                    android:layout_height="@dimen/d53"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d20"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tap_ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tap_iv_4"
                    android:layout_width="@dimen/d53"
                    android:layout_height="@dimen/d53"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d20" />

                <ImageView
                    android:id="@+id/tap_iv_5"
                    android:layout_width="@dimen/d53"
                    android:layout_height="@dimen/d53"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d20" />

                <com.my.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/tap_iv_6"
                    android:layout_width="@dimen/d53"
                    android:layout_height="@dimen/d53"
                    android:layout_marginLeft="@dimen/d20"
                    android:layout_marginRight="@dimen/d20"
                    android:gravity="top|center_horizontal"
                    android:text="..."
                    android:textColor="@color/A8"
                    android:textSize="@dimen/s30"
                    android:visibility="invisible"
                     />
            </LinearLayout>
        </LinearLayout>

        <com.my.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/tap_deep_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d24"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:gravity="center"
            android:text="@string/tap_deep"
            android:textColor="@color/A8"
            android:textSize="@dimen/s13"
             />

        <Button
            android:id="@+id/deep_ok"
            android:layout_width="@dimen/d168"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d8"
            android:background="@drawable/shape_tap_deep"
            android:text="@string/ram_button"
            android:textColor="@color/A1"
            android:textSize="@dimen/s17" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/lot_tap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@color/A8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="@dimen/d10">

            <ImageView
                android:id="@+id/ad_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d146"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:tag="ad_image" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:tag="ad_choices" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ad" />

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ad_image"
                android:layout_marginTop="@dimen/d10"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ad_icon"
                    android:layout_width="@dimen/d48"
                    android:layout_height="@dimen/d48"
                    android:layout_marginLeft="@dimen/d5"
                    android:tag="ad_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d5"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/ad_title"
                        tools:text="Your see"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif-regular"
                        android:singleLine="true"
                        android:tag="ad_title"
                        android:textColor="#425f78"
                        android:textSize="@dimen/s17" />

                    <TextView
                        android:id="@+id/ad_subtitle"
                        tools:text="Your see Your see Your see Your see"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll"
                        android:layout_marginTop="@dimen/d6"
                        android:fontFamily="sans-serif-light"
                        android:lines="1"
                        android:tag="ad_desc"
                        android:textColor="#7a90b3"
                        android:textSize="@dimen/s11" />

                </LinearLayout>
            </LinearLayout>


            <TextView
                android:id="@+id/ad_action"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d37"
                android:layout_below="@id/ll"
                android:layout_marginTop="@dimen/d10"
                android:background="@drawable/select_text_ad"
                android:gravity="center"
                android:tag="ad_action"
                android:text="Install"
                android:textColor="#fff"
                android:textSize="@dimen/s21" />
        </RelativeLayout>
    </FrameLayout>

</FrameLayout>
