<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A4"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d127"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.my.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/junk_size_all"
                android:layout_width="@dimen/d146"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d82"
                android:gravity="center"
                android:lines="1"
                android:text="0"
                android:textColor="#ffffff"
                android:textSize="@dimen/s60"
                 />

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">


                <com.my.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/junk_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/junk_title_clean"
                    android:textColor="@color/A6"
                    android:textSize="@dimen/s16"
                     />

                <com.my.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/junk_fangxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:text="B"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/s22"
                     />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A7"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ListView
                android:id="@+id/junk_list_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/A7"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1px" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@mipmap/yinying" />
        </FrameLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:layout_gravity="bottom"
            android:background="@color/A7">

            <Button
                android:id="@+id/junk_button_clean"
                android:layout_width="@dimen/d250"
                android:layout_height="@dimen/d40"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_button"
                android:text="@string/ram_button"
                android:textAllCaps="false"
                android:textColor="@color/A7"
                android:textSize="@dimen/s16"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>