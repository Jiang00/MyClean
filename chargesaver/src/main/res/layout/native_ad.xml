<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@color/white_100"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:tag="ad_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal"
            android:tag="ad_choices" />

        <com.eos.module.charge.saver.view.ADLabel
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            lv:charge_background_color="#32000000"
            lv:charge_gravity="TOP_LEFT"
            lv:charge_text="AD"
            lv:charge_text_size="9dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="sans-serif-regular"
                android:lines="1"
                android:maxLength="45"
                android:paddingLeft="@dimen/native_4"
                android:tag="ad_title"
                android:text="expalin"
                android:textColor="#000000"
                android:textSize="@dimen/native_text_14" />

            <TextView
                android:id="@+id/customerTypefaceTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:lines="1"
                android:paddingLeft="@dimen/native_one_4"
                android:tag="ad_subtitle"
                android:text="expalin"
                android:textColor="#CC000000"
                android:textSize="@dimen/native_text_10" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingBottom="6dp"
            android:paddingRight="4dp"
            android:paddingTop="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/ad_green"
                android:gravity="center"
                android:padding="4dp"
                android:tag="ad_action"
                android:text="1111"
                android:textColor="#fff"
                android:textSize="14sp" />
        </FrameLayout>

    </LinearLayout>

</LinearLayout>