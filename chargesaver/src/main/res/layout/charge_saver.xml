<?xml version="1.0" encoding="utf-8"?>
<com.easy.module.charge.saver.protectview.ProtectBatteryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battery_charge_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/battery_beijing">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--泡泡-->
        <com.easy.module.charge.saver.protectview.BubbleLayout
            android:id="@+id/battery_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--开关-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d56"
                android:layout_marginTop="@dimen/d24">

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/battery_inner_icon"
                    android:visibility="gone" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/battery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/d16"
                    android:layout_toRightOf="@id/battery_icon"
                    android:text="@string/app_name"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s18"
                    app:typeface="ROBOTO-REGULAR.TTF" />

                <LinearLayout
                    android:id="@+id/battery_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16">

                    <ImageView
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:src="@mipmap/battery_more" />
                </LinearLayout>
            </RelativeLayout>
            <!--小时和电池动画-->
            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/battery_now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="17:24"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s38"
                app:typeface="ROBOTO-REGULAR.TTF" />

            <!--年月日星期,充电多少-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d8"
                android:orientation="horizontal">
                <!--年-->
                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/battery_now_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="ROBOTO-REGULAR.TTF" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d6"
                    android:text="/  "
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="ROBOTO-REGULAR.TTF" />
                <!--月-->
                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/battery_now_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="ROBOTO-REGULAR.TTF" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d6"
                    android:text="/"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="ROBOTO-REGULAR.TTF" />
                <!--日-->
                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/battery_now_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d6"
                    android:text="03"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="ROBOTO-REGULAR.TTF" />
                <!--星期-->
                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/battery_now_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d12"
                    android:text="Fri"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="ROBOTO-REGULAR.TTF" />
            </LinearLayout>
            <!--充满时间-->
            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/battery_now_battery_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="@dimen/d95"
                android:text="1h 39min left"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s13"
                android:visibility="gone"
                app:typeface="ROBOTO-REGULAR.TTF" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--电池动画-->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d16"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d65"
                    android:layout_height="@dimen/d133"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/battery_di" />

                <com.easy.module.charge.saver.protectview.BatteryView
                    android:id="@+id/batteryview"
                    android:layout_width="@dimen/d52"
                    android:layout_height="@dimen/d112"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginBottom="@dimen/d6"
                    android:visibility="visible" />
            </FrameLayout>
            <!--电量-->
            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d5"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="@dimen/s16"
                android:visibility="gone"
                app:typeface="ROBOTO-REGULAR.TTF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d14"
                android:orientation="vertical">

                <com.easy.module.charge.saver.protectview.CharingView
                    android:id="@+id/charging_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/d100"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/charging_1"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s11" />

                    <TextView
                        android:layout_width="@dimen/d100"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/charging_2"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s11" />

                    <TextView
                        android:layout_width="@dimen/d100"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/charging_3"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s11" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/battery_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:gravity="center_horizontal"
                android:orientation="vertical" />
        </FrameLayout>

        <!--解锁提示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/d30"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jiantou" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:text="@string/unlock"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s18"
                app:typeface="ROBOTO-REGULAR.TTF" />
        </LinearLayout>
        <!--粒子-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/time_top"
        android:layout_marginTop="@dimen/switch_top"
        android:background="@drawable/rectangle_back_ad"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/title_p"
        android:paddingRight="@dimen/time_top"
        android:paddingTop="@dimen/title_p"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/time_top"
            android:text="@string/charge_screen_save"
            android:textColor="@color/white_100" />

        <CheckBox
            android:id="@+id/battery_switch_check"
            style="@style/SettingCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/time_top" />
    </LinearLayout>
</com.easy.module.charge.saver.protectview.ProtectBatteryView>