<?xml version="1.0" encoding="utf-8"?>
<com.privacy.module.charge.saver.protectview.ProtectBatteryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battery_charge_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/battery_beijing">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--泡泡-->
        <com.privacy.module.charge.saver.protectview.BubbleLayoutPrivacy
            android:id="@+id/battery_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--开关-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d78"
            android:layout_marginTop="@dimen/d18">

            <ImageView
                android:id="@+id/battery_icon"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/battery_icon1" />

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/battery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d16"
                android:layout_toRightOf="@id/battery_icon"
                android:text="@string/app_name"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s13" />

            <LinearLayout
                android:id="@+id/battery_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d16">

                <ImageView
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d20"
                    android:src="@mipmap/battery_more" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--小时和电池动画-->
            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/battery_now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="17:24"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s60" />

            <!--年月日星期,充电多少-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d14"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <!--星期-->
                <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                    android:id="@+id/battery_now_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s18" />
                <!--日-->
                <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                    android:id="@+id/battery_now_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/d6"
                    android:text="03"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s18" />
                <!--月-->
                <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                    android:id="@+id/battery_now_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s18" />

            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.privacy.module.charge.saver.protectview.PrivacyBatteryView
                android:id="@+id/batteryview"
                android:layout_width="@dimen/d120"
                android:layout_height="@dimen/d54"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d85" />

            <ImageView
                android:id="@+id/battery_now_battery"
                android:layout_width="@dimen/d130"
                android:layout_height="@dimen/d61"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d82"
                android:src="@mipmap/battery" />

            <ImageView
                android:id="@+id/battery_shandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d98"
                android:src="@mipmap/battery_shandian" />
            <!--充满时间-->
            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/battery_now_battery_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/battery_now_battery"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d6"
                android:text="1h 39min left"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s10" />

            <LinearLayout
                android:id="@+id/battery_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d176"
                android:layout_below="@+id/battery_now_battery"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:layout_marginTop="@dimen/d24"
                android:gravity="center_horizontal"
                android:orientation="vertical" />
        </RelativeLayout>

        <!--解锁提示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/d30"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d17"
                android:layout_height="@dimen/d17"
                android:src="@mipmap/jiantou" />

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:text="@string/unlock"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s24" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/time_top"
        android:layout_marginTop="@dimen/switch_top"
        android:background="@drawable/rectangle_back_ad"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/title_p"
        android:paddingRight="@dimen/time_top"
        android:paddingTop="@dimen/title_p"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/time_top"
            android:text="@string/charge_screen_save"
            android:textColor="@color/white_100" />

        <CheckBox
            android:id="@+id/battery_switch_check"
            style="@style/SettingCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/time_top" />
    </LinearLayout>
</com.privacy.module.charge.saver.protectview.ProtectBatteryView>