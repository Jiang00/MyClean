<?xml version="1.0" encoding="utf-8"?>
<com.eifmobi.charge.saver.Aview.BatteryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battery_charge_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg_b">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.eifmobi.charge.saver.Aview.BubbleLayout
            android:id="@+id/battery_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top">

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d16"
                    android:src="@mipmap/battery_inner_icon" />

                <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                    android:id="@+id/battery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/title_p"
                    android:layout_toRightOf="@id/battery_icon"
                    android:text="@string/app_name"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s16" />

                <LinearLayout
                    android:id="@+id/battery_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/icon_h"
                    android:paddingRight="@dimen/icon_h">

                    <ImageView
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:src="@mipmap/battery_more" />
                </LinearLayout>
            </RelativeLayout>

            <FrameLayout
                android:layout_width="@dimen/d266"
                android:layout_height="@dimen/d266"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d36">

                <com.eifmobi.charge.saver.Aview.ChargingView
                    android:id="@+id/kedu_pregress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <View
                    android:layout_width="@dimen/d242"
                    android:layout_height="@dimen/d242"
                    android:layout_gravity="center"
                    android:background="@drawable/shape_charging" />

                <FrameLayout
                    android:id="@+id/qiu_zhuan"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d6"
                        android:src="@mipmap/charging_zhuan" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                        android:id="@+id/battery_now_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="17"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s90"
                        app:typeface="ROBOTO-THIN_0.TTF" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/battery_now_time"
                        android:orientation="vertical">

                        <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                            android:id="@+id/battery_now_time_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":17"
                            android:textColor="@color/white_100"
                            android:textSize="@dimen/s24"
                            app:typeface="ROBOTO-THIN_0.TTF" />

                        <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                            android:id="@+id/battery_now_week"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fri"
                            android:textColor="#cdffffff"
                            android:textSize="@dimen/s15"
                            app:typeface="ROBOTO-THIN_0.TTF" />

                        <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                            android:id="@+id/battery_now_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBaseline="@id/battery_now_time"
                            android:layout_below="@id/battery_now_week"
                            android:layout_toRightOf="@id/battery_now_time"
                            android:text="09/03"
                            android:textColor="#cdffffff"
                            android:textSize="@dimen/s15"
                            app:typeface="ROBOTO-THIN_0.TTF" />
                    </LinearLayout>


                </RelativeLayout>

            </FrameLayout>


            <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/battery_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d24"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16" />

            <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/battery_now_battery_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:paddingTop="@dimen/txt_top_4"
                android:text="1h 39min left"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16"
                android:visibility="gone" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/battery_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:gravity="center_horizontal"
                android:orientation="vertical" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/d19"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">


            <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/unlock"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d12"
                android:src="@mipmap/unlock" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/time_top"
        android:layout_marginTop="@dimen/switch_top"
        android:background="@drawable/rectangle_back_ad"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/title_p"
        android:paddingRight="@dimen/time_top"
        android:paddingTop="@dimen/title_p"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/time_top"
            android:text="@string/charge_screen_save"
            android:textColor="@color/white_100" />

        <CheckBox
            android:id="@+id/battery_switch_check"
            style="@style/SettingCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/time_top" />
    </LinearLayout>

</com.eifmobi.charge.saver.Aview.BatteryView>