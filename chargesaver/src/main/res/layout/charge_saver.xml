<?xml version="1.0" encoding="utf-8"?>
<com.fast.module.charge.saver.view.BatteryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battery_charge_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/battery_shutter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/shape_backg" />

        <com.fast.module.charge.saver.view.BubbleLayout
            android:id="@+id/battery_bubble_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top"
                android:paddingLeft="@dimen/icon_p">

                <ImageView
                    android:id="@+id/battery_icon"
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/battery_inner_icon" />

                <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/battery_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/title_p"
                    android:layout_toRightOf="@id/battery_icon"
                    android:text="Cleaner"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s15"
                    app:typeface="Roboto-Light.ttf" />

                <LinearLayout
                    android:id="@+id/battery_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d8"
                    android:padding="@dimen/d8">

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@mipmap/battery_more" />
                </LinearLayout>
            </RelativeLayout>

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/battery_now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d33"
                android:layout_marginTop="@dimen/d33"
                android:text="17:24"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s20"
                app:typeface="Roboto-Light.ttf" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d33"
                android:layout_marginTop="@dimen/d9"
                android:orientation="horizontal">

                <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/battery_now_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fri"
                    android:textColor="#ffc600"
                    android:textSize="@dimen/s20"
                    app:typeface="Roboto-Light.ttf" />

                <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/battery_now_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d16"
                    android:text="09/03"
                    android:textColor="#ffc600"
                    android:textSize="@dimen/s20"
                    app:typeface="Roboto-Light.ttf" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d33"
                android:layout_marginTop="@dimen/d46"
                android:background="@color/white_100">

                <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/battery_level"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s16"
                    android:visibility="gone"
                    app:typeface="Roboto-Light.ttf" />

                <com.fast.module.charge.saver.view.MainWaterView
                    android:id="@+id/charing_water"
                    android:layout_width="@dimen/d133"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:id="@+id/level_all"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/level_0"
                        android:layout_width="@dimen/d46"
                        android:layout_height="match_parent"
                        android:background="@mipmap/charging_1"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/level_1"
                        android:layout_width="@dimen/d46"
                        android:layout_height="match_parent"
                        android:background="@mipmap/charging_0" />

                    <ImageView
                        android:id="@+id/level_2"
                        android:layout_width="@dimen/d46"
                        android:layout_height="match_parent"
                        android:background="@mipmap/charging_0" />

                    <ImageView
                        android:layout_width="@dimen/d46"
                        android:layout_height="match_parent"
                        android:background="@mipmap/charging_b" />
                </LinearLayout>

                <ImageView
                    android:layout_width="@dimen/d23"
                    android:layout_height="@dimen/d23"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/d16"
                    android:background="@mipmap/charging_s" />

            </FrameLayout>

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/battery_now_battery_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d33"
                android:layout_marginTop="@dimen/d17"
                android:text="@string/left"
                android:textColor="#ffc600"
                android:textSize="@dimen/s14"
                app:typeface="Roboto-Light.ttf" />

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/battery_now_battery_left_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d33"
                android:text="1h 39m"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s28"
                app:typeface="Roboto-Light.ttf" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/battery_ad_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d176"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:gravity="center_horizontal"
            android:orientation="vertical" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d61"
            android:layout_gravity="center_horizontal|bottom">


            <LinearLayout
                android:id="@+id/battery_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/bottom_8"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="@dimen/d8"
                android:visibility="visible">

                <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/unlock"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s13"
                    app:typeface="Roboto-Light.ttf" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d8"
                    android:src="@mipmap/unlock" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_switch"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d30"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/d16"
        android:layout_marginTop="@dimen/d44"
        android:background="@drawable/shape_ad"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/battery_switch_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:text="@string/close"
            android:textColor="#272b57"
            android:textSize="@dimen/s13" />

        <CheckBox

            style="@style/SettingCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/time_top"
            android:visibility="gone" />
    </LinearLayout>

</com.fast.module.charge.saver.view.BatteryView>