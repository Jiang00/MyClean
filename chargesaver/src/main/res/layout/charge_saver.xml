<?xml version="1.0" encoding="utf-8"?>
<com.myboost.module.charge.saver.protectview.ProtectBatteryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/battery_charge_save"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_beijing1">

    <!--泡泡-->
    <com.myboost.module.charge.saver.protectview.BubbleLayoutBoost
        android:id="@+id/battery_bubble_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--开关-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:layout_marginTop="@dimen/d24">

            <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                android:id="@+id/battery_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d16"
                android:text="@string/app_name"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s18" />

            <LinearLayout
                android:id="@+id/battery_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/d16">

                <ImageView
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"
                    android:src="@mipmap/battery_more" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--小时和电池动画-->
            <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                android:id="@+id/battery_now_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d24"
                android:text="17:24"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s50" />

            <!--年月日星期,充电多少-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d14"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <!--年-->
                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/battery_now_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="17"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14" />
                <!--月-->
                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/battery_now_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14" />
                <!--日-->
                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/battery_now_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14" />
                <!--星期-->
                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/battery_now_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d8"
                    android:text="Fri"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/d56"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="@dimen/d56"
                        android:layout_height="@dimen/d56">

                        <ImageView
                            android:layout_width="@dimen/d56"
                            android:layout_height="@dimen/d56"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_black" />

                        <com.myboost.module.charge.saver.protectview.MWaterView
                            android:id="@+id/battery_ram"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d10"
                        android:text="@string/ram"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/d56"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d40"
                    android:layout_marginRight="@dimen/d40"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="@dimen/d56"
                        android:layout_height="@dimen/d56">

                        <ImageView
                            android:layout_width="@dimen/d56"
                            android:layout_height="@dimen/d56"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_black" />

                        <com.myboost.module.charge.saver.protectview.AWaterView
                            android:id="@+id/battery_le"
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_gravity="center" />
                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d10"
                        android:text="@string/charging_ing"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s9" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/d56"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="@dimen/d56"
                        android:layout_height="@dimen/d56">

                        <ImageView
                            android:layout_width="@dimen/d56"
                            android:layout_height="@dimen/d56"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_black" />

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:layout_gravity="center"
                            android:background="@drawable/shape_w" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@mipmap/charging_tem" />

                            <TextView
                                android:id="@+id/battery_temp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s8" />
                        </LinearLayout>

                    </FrameLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d10"
                        android:text="@string/temp"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s9" />
                </LinearLayout>
            </LinearLayout>


            <!--充满时间-->
            <LinearLayout
                android:id="@+id/battery_charge_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d24"
                android:visibility="gone">

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/charging_time_title"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/battery_now_battery_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textColor="#51dcff"
                    android:textSize="@dimen/s30" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/charging_time_h"
                    android:textColor="#51dcff"
                    android:textSize="@dimen/s14" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/battery_now_battery_left2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="39"
                    android:textColor="#51dcff"
                    android:textSize="@dimen/s30" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/charging_time_m"
                    android:textColor="#51dcff"
                    android:textSize="@dimen/s14" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/battery_ad_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:layout_marginTop="@dimen/d8"
                android:gravity="center_horizontal"
                android:orientation="vertical" />
        </LinearLayout>

        <!--解锁提示-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/d16"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d18"
                android:src="@mipmap/jiantou" />

            <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d15"
                android:text="@string/unlock"
                android:textColor="#80ffffff"
                android:textSize="@dimen/s21" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/battery_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/time_top"
        android:layout_marginTop="@dimen/switch_top"
        android:background="@drawable/rectangle_back_ad"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/title_p"
        android:paddingRight="@dimen/time_top"
        android:paddingTop="@dimen/title_p"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/time_top"
            android:text="@string/charge_screen_save"
            android:textColor="@color/white_100" />

        <CheckBox
            android:id="@+id/battery_switch_check"
            style="@style/SettingCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/time_top" />
    </LinearLayout>
</com.myboost.module.charge.saver.protectview.ProtectBatteryView>