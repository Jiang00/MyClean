<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.easy.junk">


    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" />
    <!--IMEI-->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 读写SDCard权限 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <!--获取最上层包名-->
    <uses-permission android:name="android.permission.GET_TASKS" />
    <!--可以访问使用量数据-->
    <uses-permission
        android:name="android.permission.PACKAGE_USAGE_STATS"
        tools:ignore="ProtectedPermissions" />
    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.KILL_BACKGROUND_PROCESSES" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!--快捷方式-->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />
    <uses-permission android:name="com.android.launcher.permission.UNINSTALL_SHORTCUT" />


    <uses-permission android:name="android.permission.GET_PACKAGE_SIZE" />
    <uses-permission android:name="android.permission.CLEAR_APP_CACHE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_SETTINGS" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <!--开机自启-->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <uses-permission
        android:name="android.permission.WRITE_MEDIA_STORAGE"
        tools:ignore="ProtectedPermissions" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />


    <application
        android:name="com.easy.junk.easyactivity.MyApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppTheme"
        tools:replace="android:theme,android:supportsRtl,android:icon">
        <activity
            android:name="com.easy.junk.easyactivity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"></activity>

        <activity
            android:name="com.easy.junk.easyactivity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.PICK" />
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="android.intent.action.MEDIA_MOUNTED" />
                <action android:name="android.intent.action.MEDIA_UNMOUNTED" />

                <data android:scheme="file" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.easy.junk.easyactivity.EasyBatteriesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyRubbishActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyRubbishAndRamActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyApplicationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyHardwareActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyMemoryAvtivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasySettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasySucceedActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyWhiteAvtivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyWhiteAddActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyDeepingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyNotifingAnimationActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyPermissingActivity"
            android:allowTaskReparenting="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Dialog" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyNotifingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyNotifingSettingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyFloatActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyUnloadingResidualActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent" />

        <activity
            android:name="com.easy.junk.easyactivity.EasyPictActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyPictHuiActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyGoodGameActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.CREATE_SHORTCUT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.easy.junk.easyactivity.EasyShortCutingActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:theme="@style/Transparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <receiver android:name="com.easy.junk.easybroadcasts.EasyUnloadResidualBroadcast">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_REMOVED" />
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REPLACED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.easy.junk.easyservices.EasySuspensionBallService"
            android:excludeFromRecents="true" />
        <service
            android:name="com.easy.junk.easyservices.EasyNotificationService"
            android:enabled="true"
            android:excludeFromRecents="true" />

        <activity
            android:name="com.easy.junk.easyactivity.EasyFileManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.easy.junk.easyactivity.EasyFileActivity"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.easy.junk.easyactivity.EasyDocActivity"
            android:screenOrientation="portrait" />

    </application>

</manifest>