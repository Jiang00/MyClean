<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A10"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d30"
            android:src="@mipmap/pullup_icon_big" />

        <ImageView
            android:id="@+id/iv_shuaxin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d30"
            android:src="@mipmap/loading"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_success"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d30"
            android:src="@mipmap/load_succeed"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>