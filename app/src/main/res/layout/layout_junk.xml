<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/junk_title_backg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <include layout="@layout/layout_title" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d100"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:id="@+id/junk_size_all"
                        android:layout_width="@dimen/d133"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:lines="1"
                        android:text="0"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/s53"
                        app:typeface="Roboto-Light.ttf" />

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:id="@+id/junk_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/junk_size_all"
                        android:layout_toRightOf="@id/junk_size_all"
                        android:text="B"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/s18"
                        app:typeface="Roboto-Light.ttf" />
                </RelativeLayout>

                <com.vector.module.mView.CustomerTypefaceTextView
                    android:id="@+id/junk_fangxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/junk_title_clean"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14"
                    app:typeface="Roboto-Light.ttf" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/junk_list_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="0px"
                    android:visibility="gone" />

                <com.vector.cleaner.myview.MyScrollView
                    android:id="@+id/junk_scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_100"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/junk_button_system"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d56"
                                android:orientation="horizontal">


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/d16"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/junk_system"
                                    android:textColor="@color/Z1"
                                    android:textSize="@dimen/s16" />


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:id="@+id/junk_system_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/d16"
                                    android:text="10.0M"
                                    android:textColor="@color/Z2"
                                    android:textSize="@dimen/s14" />


                                <ImageView
                                    android:id="@+id/junk_system_jiantou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/d16"
                                    android:rotation="-90"
                                    android:src="@mipmap/junk_right"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.vector.cleaner.myview.ListViewForScrollView
                            android:id="@+id/junk_system_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_100"
                            android:divider="@drawable/list_divider"
                            android:dividerHeight="0px" />

                        <LinearLayout
                            android:id="@+id/junk_button_apk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d56"
                                android:orientation="horizontal">


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/d16"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/junk_apk"
                                    android:textColor="@color/Z1"
                                    android:textSize="@dimen/s16" />

                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:id="@+id/junk_apk_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/d16"
                                    android:gravity="center"
                                    android:text="10.0M"
                                    android:textColor="@color/Z2"
                                    android:textSize="@dimen/s14" />


                                <ImageView
                                    android:id="@+id/junk_apk_jiaotou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/d16"
                                    android:rotation="-90"
                                    android:src="@mipmap/junk_right"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.vector.cleaner.myview.ListViewForScrollView
                            android:id="@+id/junk_apk_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_100"
                            android:divider="@drawable/list_divider"
                            android:dividerHeight="0px" />

                        <LinearLayout
                            android:id="@+id/junk_button_unload"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d56"
                                android:orientation="horizontal">


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/d16"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/junk_unload"
                                    android:textColor="@color/Z1"
                                    android:textSize="@dimen/s16" />


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:id="@+id/junk_unload_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/d16"
                                    android:gravity="center"
                                    android:text="10.0M"
                                    android:textColor="@color/Z2"
                                    android:textSize="@dimen/s14" />


                                <ImageView
                                    android:id="@+id/junk_unload_jiantou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/d16"
                                    android:rotation="-90"
                                    android:src="@mipmap/junk_right"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.vector.cleaner.myview.ListViewForScrollView
                            android:id="@+id/junk_unload_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_100"
                            android:divider="@drawable/list_divider"
                            android:dividerHeight="0px" />

                        <LinearLayout
                            android:id="@+id/junk_button_log"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d56"
                                android:orientation="horizontal">


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/d16"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/junk_log"
                                    android:textColor="@color/Z1"
                                    android:textSize="@dimen/s16" />


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:id="@+id/junk_log_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/d16"
                                    android:gravity="center"
                                    android:text="10.0M"
                                    android:textColor="@color/Z2"
                                    android:textSize="@dimen/s14" />


                                <ImageView
                                    android:id="@+id/junk_log_jiantou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/d16"
                                    android:rotation="-90"
                                    android:src="@mipmap/junk_right"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.vector.cleaner.myview.ListViewForScrollView
                            android:id="@+id/junk_log_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_100"
                            android:divider="@drawable/list_divider"
                            android:dividerHeight="0px" />

                        <LinearLayout
                            android:id="@+id/junk_button_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="?attr/selectableItemBackground"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d56"
                                android:orientation="horizontal">

                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/d16"
                                    android:layout_weight="1"
                                    android:gravity="center_vertical"
                                    android:text="@string/junk_user"
                                    android:textColor="@color/Z1"
                                    android:textSize="@dimen/s16" />


                                <com.vector.module.mView.CustomerTypefaceTextView
                                    android:id="@+id/junk_user_size"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginRight="@dimen/d16"
                                    android:gravity="center"
                                    android:text="10.0M"
                                    android:textColor="@color/Z2"
                                    android:textSize="@dimen/s14" />


                                <ImageView
                                    android:id="@+id/junk_user_jiantou"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="@dimen/d16"
                                    android:rotation="-90"
                                    android:src="@mipmap/junk_right"
                                    android:visibility="visible" />
                            </LinearLayout>

                        </LinearLayout>

                        <com.vector.cleaner.myview.ListViewForScrollView
                            android:id="@+id/junk_user_list"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white_100"
                            android:divider="@drawable/list_divider"
                            android:dividerHeight="0px" />
                    </LinearLayout>
                </com.vector.cleaner.myview.MyScrollView>

                <Button
                    android:id="@+id/junk_button_clean"
                    android:layout_width="@dimen/d208"
                    android:layout_height="@dimen/d48"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/d12"
                    android:background="@drawable/shape_button"
                    android:text="@string/junk_button"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s16"
                    android:visibility="invisible" />
            </FrameLayout>


        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/junk_clean"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/A1"
        android:clickable="true"
        android:visibility="invisible">

        <com.vector.cleaner.myview.BubbleLayoutJunk
            android:id="@+id/junk_clean_bubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/junk_1" />

            <ImageView
                android:id="@+id/junk_clean_zhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/cooling_2" />
        </FrameLayout>

        <com.vector.module.mView.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="@dimen/d78"
            android:text="@string/toast_ing"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16" />

    </FrameLayout>
</FrameLayout>