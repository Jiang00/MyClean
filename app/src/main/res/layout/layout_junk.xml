<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/backage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <include layout="@layout/layout_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/d297"
                    android:layout_height="@dimen/d297"
                    android:layout_gravity="center_horizontal">

                    <ImageView
                        android:id="@+id/junk_zhuangtai"
                        android:layout_width="@dimen/d297"
                        android:layout_height="@dimen/d297"
                        android:src="@mipmap/yuan_good"
                        android:visibility="invisible" />

                    <ImageView
                        android:id="@+id/yuan_kedu"
                        android:layout_width="@dimen/d275"
                        android:layout_height="@dimen/d275"
                        android:layout_gravity="center"
                        android:src="@mipmap/yuan_kedu"
                        android:visibility="invisible" />

                    <com.mutter.clean.junk.view.ShowPercentViewBei
                        android:layout_width="@dimen/d250"
                        android:layout_height="@dimen/d250"
                        android:layout_gravity="center" />

                    <com.mutter.clean.junk.view.ShowPercentViewjunk
                        android:id="@+id/ram_baifen"
                        android:layout_width="@dimen/d250"
                        android:layout_height="@dimen/d250"
                        android:layout_gravity="center" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:id="@+id/ram_parcent_ll"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/d48"
                            android:orientation="horizontal">

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:id="@+id/ram_parent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="47"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s106"
                                app:typeface="Medium.otf" />

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="%"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s48"
                                app:typeface="Medium.otf" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ram_ani_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ram_parcent_ll"
                            android:layout_centerHorizontal="true"
                            android:gravity="center"

                            android:orientation="vertical">

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:id="@+id/ram_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d17"
                                android:text="@string/main_storage_used"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s20"
                                app:typeface="Medium.otf" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/ram_1"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/d6"
                                android:orientation="horizontal">

                                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                    android:id="@+id/ram_zhanyong"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1.5G"
                                    android:textColor="@color/white_50"
                                    android:textSize="@dimen/s18"
                                    app:typeface="Medium.otf" />

                                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                    android:id="@+id/ram_all"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="/1.9G"
                                    android:textColor="@color/white_50"
                                    android:textSize="@dimen/s18"
                                    app:typeface="Medium.otf" />
                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </FrameLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d24"
                    android:orientation="horizontal"
                    android:visibility="invisible">


                    <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                        android:id="@+id/ram_msg_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d3"
                        android:layout_marginRight="@dimen/d3"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/activity_horizontal_margin"
                        app:typeface="Medium.otf" />

                    <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white_70"
                        android:textSize="@dimen/activity_horizontal_margin"
                        app:typeface="Medium.otf" />
                </LinearLayout>
            </LinearLayout>

            <com.mutter.clean.junk.view.CustomerTypefaceButton
                android:layout_width="@dimen/d333"
                android:layout_height="@dimen/d43"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d40"
                android:background="@drawable/shape_a3_r"
                android:text="@string/junk_button"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s24"
                android:visibility="invisible"
                app:typeface="Medium.otf" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sample.lottie.LottieAnimationView
            android:id="@+id/lottie_power"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            app:lottie_fileName="cloud.json"
            app:lottie_imageAssetsFolder="image/huojian"
            app:lottie_loop="false" />
    </FrameLayout>
</FrameLayout>