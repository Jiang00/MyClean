<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d72"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/junk_item_rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d72">

        <ImageView
            android:id="@+id/junk_item_icon"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/junk_item_rl"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/junk_item_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:maxLength="15"
            android:text="app标题"
            android:textColor="#707070"
            android:textSize="@dimen/s16"
            app:typeface="ljh_1.TTF" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d3"
            android:orientation="horizontal">

            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ram_yuji"
                android:textColor="#bfbfbf"
                android:textSize="@dimen/s12"
                app:typeface="ljh_1.TTF" />

            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/size_tv"
                android:layout_width="@dimen/d37"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="size"
                android:textColor="#ff3a3a"
                android:textSize="@dimen/s15"
                app:typeface="ljh_1.TTF" />

            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/size_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MB"
                android:textColor="#bfbfbf"
                android:textSize="@dimen/s12"
                app:typeface="ljh_1.TTF" />
        </LinearLayout>


    </LinearLayout>


    <ImageView
        android:id="@+id/check_iv"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d72"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:src="@mipmap/ram_passed" />

</RelativeLayout>