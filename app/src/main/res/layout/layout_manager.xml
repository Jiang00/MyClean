<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/view_pager_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            app:tabIndicatorColor="@color/A14"
            app:tabSelectedTextColor="@color/white_100"
            app:tabTextAppearance="@style/tablayout_textSize"
            app:tabTextColor="@color/white_100" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/doc_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/A7" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@mipmap/yinying" />
        </FrameLayout>


        <RelativeLayout
            android:id="@+id/manager_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:visibility="gone">

            <Button
                android:id="@+id/junk_button_clean"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/d168"
                android:layout_height="@dimen/d44"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_button"
                android:text="@string/ram_button"
                android:textAllCaps="false"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s18" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>