<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:layout_weight="1"
        android:background="@drawable/shape_a3"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/view_pager_tab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/A7"
            app:tabSelectedTextColor="@color/white_100"
            app:tabTextAppearance="@style/tablayout_textSize"
            app:tabTextColor="@color/white_100" />

        <android.support.v4.view.ViewPager
            android:id="@+id/doc_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_pager_tab" />
    </RelativeLayout>

    <Button
        android:id="@+id/junk_button_clean"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56"
        android:layout_marginBottom="@dimen/d8"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/shape_a8"
        android:text="@string/manager_button"
        android:textColor="@color/white_100"
        android:textSize="@dimen/s18" />
</LinearLayout>