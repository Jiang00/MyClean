<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/view_pager_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d48"
            android:background="@color/A1"
            app:tabIndicatorColor="@color/A14"
            app:tabIndicatorHeight="@dimen/d2"
            app:tabSelectedTextColor="@color/A5"
            app:tabTextAppearance="@style/tablayout_textSize"
            app:tabTextColor="@color/A6" />
        <!--app:tabSelectedTextColor="#ffffff"选中的颜色
        app:tabTextColor="#4dffffff"字体颜色
        app:tabIndicatorColor="@color/A14"线颜色
            app:tabIndicatorHeight="@dimen/d2"-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v4.view.ViewPager
                android:id="@+id/doc_view_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/manager_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:visibility="invisible">

            <TextView
                android:id="@+id/junk_button_clean"
                android:layout_width="@dimen/d333"
                android:layout_height="@dimen/d43"
                android:layout_centerInParent="true"
                android:background="@drawable/main_haoping"
                android:gravity="center"
                android:text="@string/main_cleanup"
                android:textColor="@color/A5"
                android:textSize="@dimen/s16" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>