<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--app:tabSelectedTextColor="@color/A0"  设置所在的字体颜色-->
        <android.support.design.widget.TabLayout
            android:id="@+id/view_pager_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d31"
            android:background="@color/A1"
            app:tabIndicatorColor="@color/A9"
            app:tabSelectedTextColor="@color/A0"
            app:tabTextAppearance="@style/tablayout_textSize"
            app:tabTextColor="@color/A0" />

        <android.support.v4.view.ViewPager
            android:id="@+id/doc_view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/view_pager_tab"
            android:layout_marginBottom="@dimen/d72"
            android:background="@color/A0" />

        <RelativeLayout
            android:id="@+id/manager_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16">

            <Button
                android:id="@+id/junk_button_clean"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d36"
                android:layout_centerInParent="true"
                android:background="@drawable/shape_button"
                android:text="@string/ram_button"
                android:textAllCaps="false"
                android:textColor="@color/A0"
                android:textSize="@dimen/s18" />
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>