<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ad"
        android:elevation="1px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d48"
            android:layout_marginLeft="@dimen/d20"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:textColor="@color/black_87"
            android:textSize="@dimen/s18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d40"
            android:layout_marginLeft="@dimen/d24"
            android:gravity="center_vertical"
            android:text="@string/exit_msg"
            android:textColor="@color/black_70"
            android:textSize="@dimen/s15" />

        <LinearLayout
            android:layout_width="@dimen/d301"
            android:layout_height="@dimen/d40"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/d6"
            android:gravity="right"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/d15"
                android:paddingRight="@dimen/d15"
                android:text="@string/exit_queren"
                android:textColor="@color/black_54"
                android:textSize="@dimen/s15" />


            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="@dimen/d20"
                android:paddingRight="@dimen/d20"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A1"
                android:textSize="@dimen/s15" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>