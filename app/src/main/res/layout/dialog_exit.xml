<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A1"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white_100"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d33"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d36"
                android:layout_height="@dimen/d36"
                android:layout_marginLeft="@dimen/d72"
                android:src="@mipmap/icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:text="@string/exit_msg"
                android:textColor="@color/A8"
                android:textSize="@dimen/s14" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d33"
            android:layout_marginTop="@dimen/d23"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d150"
                android:layout_height="@dimen/d46"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A8"
                android:textSize="@dimen/s15" />

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d150"
                android:layout_height="@dimen/d46"
                android:gravity="center"
                android:text="@string/exit_queren"
                android:textColor="@color/A8"
                android:textSize="@dimen/s15" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>