<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="@dimen/d333"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_ad"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d26"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d30"
                    android:layout_height="@dimen/d30"
                    android:layout_marginLeft="@dimen/d26"
                    android:src="@mipmap/icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d14"
                    android:text="@string/app_name"
                    android:textColor="#36465d"
                    android:textSize="@dimen/s16" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d26"
                android:layout_marginRight="@dimen/d26"
                android:layout_marginTop="@dimen/d30"
                android:text="@string/main_quit"
                android:textColor="#36465d"
                android:textSize="@dimen/s14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d25"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exit_quxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/d6"
                    android:paddingLeft="@dimen/d19"
                    android:paddingRight="@dimen/d19"
                    android:paddingTop="@dimen/d5"
                    android:text="@string/main_quit_no"
                    android:textColor="#4285f4"
                    android:textSize="@dimen/s14" />

                <TextView
                    android:id="@+id/exit_queren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/d6"
                    android:paddingLeft="@dimen/d19"
                    android:paddingRight="@dimen/d26"
                    android:paddingTop="@dimen/d5"
                    android:text="@string/main_quit_sure"
                    android:textColor="#4285f4"
                    android:textSize="@dimen/s14" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:background="@drawable/shape_ad"
            android:orientation="vertical"
            android:visibility="invisible" />

    </LinearLayout>


</FrameLayout>