<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_ffffff_r"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="@dimen/d24"
                android:layout_marginTop="@dimen/d20"
                android:text="@string/exit_title"
                android:textColor="@color/Z1"
                android:textSize="@dimen/s18" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginRight="@dimen/d24"
                android:layout_marginTop="@dimen/d12"
                android:text="@string/exit_msg"
                android:textColor="@color/Z2"
                android:textSize="@dimen/s16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d30"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exit_quxiao"
                    android:layout_width="@dimen/d90"
                    android:layout_height="@dimen/d30"
                    android:gravity="center"
                    android:text="@string/rotate_cancel"
                    android:textColor="@color/Z2"
                    android:textSize="@dimen/s12" />

                <TextView
                    android:id="@+id/exit_queren"
                    android:layout_width="@dimen/d90"
                    android:layout_height="@dimen/d30"
                    android:gravity="center"
                    android:text="@string/rotate_ok"
                    android:textColor="@color/A7"
                    android:textSize="@dimen/s12" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white_100"
            android:orientation="vertical"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>