<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/d33"
        android:layout_marginRight="@dimen/d33"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/loading_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:text="@string/app_name"
                android:textColor="@color/A1"
                android:textSize="@dimen/s18" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d24"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d20"
            android:gravity="center"
            android:text="@string/exit_msg"
            android:textColor="@color/A8"
            android:textSize="@dimen/s14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d36"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginTop="@dimen/d32"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d36"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A9"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d36"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingLeft="@dimen/d16"
                android:paddingRight="@dimen/d16"
                android:text="@string/exit_queren"
                android:textColor="@color/A1"
                android:textSize="@dimen/s14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>