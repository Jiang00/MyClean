<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/d280"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/main_dialong_button"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d30"
            android:gravity="center"
            android:text="@string/exit_msg1"
            android:textColor="@color/A4"
            android:textSize="@dimen/s16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d36"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d32"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d36"
                android:layout_marginRight="@dimen/d8"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/main_fanhui"
                android:textColor="@color/A6"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d36"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:background="@drawable/main_haoping"
                android:gravity="center"
                android:paddingLeft="@dimen/d16"
                android:paddingRight="@dimen/d16"
                android:text="@string/premiss_3"
                android:textColor="@color/B3"
                android:textSize="@dimen/s14" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="@dimen/d280"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>