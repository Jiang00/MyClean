<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_a1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d152"
            android:layout_gravity="center"
            android:background="@mipmap/edit_1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d20"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/loading_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s16" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d10"
                android:gravity="center"
                android:text="@string/exit_msg1"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s15" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d36"
                android:layout_marginTop="@dimen/d24"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/exit_quxiao"
                    android:layout_width="@dimen/d78"
                    android:layout_height="@dimen/d36"
                    android:gravity="center"
                    android:text="@string/main_fanhui"
                    android:textColor="@color/A4"
                    android:textSize="@dimen/s14" />

                <TextView
                    android:id="@+id/exit_queren"
                    android:layout_width="@dimen/d78"
                    android:layout_height="@dimen/d36"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d8"
                    android:gravity="center"
                    android:text="@string/premiss_3"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s14" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="@dimen/d280"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d2"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>