<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d95"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/edit_ico" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textColor="#000000"
                    android:textSize="@dimen/s16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d9"
                    android:gravity="center"
                    android:text="@string/exit_msg"
                    android:textColor="@color/A9"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d16"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d33"
                android:layout_marginRight="@dimen/d8"
                android:background="@color/A15"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d33"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d16"
                android:background="@color/A1"
                android:gravity="center"
                android:text="@string/exit_queren"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>