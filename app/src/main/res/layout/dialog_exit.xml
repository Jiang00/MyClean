<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ad"
        android:elevation="1px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d24"
            android:text="@string/app_name"
            android:textColor="@color/black_87"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/exit_msg"
            android:textColor="@color/black_70"
            android:textSize="@dimen/s15" />

        <LinearLayout
            android:layout_width="@dimen/d301"
            android:layout_height="@dimen/d30"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginTop="@dimen/d24"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d100"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d24"
                android:gravity="center"
                android:text="@string/exit_queren"
                android:textColor="@color/black_54"
                android:textSize="@dimen/s17" />

            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d100"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d23"
                android:layout_marginRight="@dimen/d24"
                android:background="@drawable/shape_a1_r"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s17" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d5"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>