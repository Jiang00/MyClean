<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d16"
    android:paddingRight="@dimen/d16">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ffffff_r"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d20"
            android:gravity="center"
            android:text="@string/exit_msg"
            android:textColor="@color/black_87"
            android:textSize="@dimen/s14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginTop="@dimen/d50"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d141"
                android:layout_height="@dimen/d39"
                android:background="@null"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d141"
                android:layout_height="@dimen/d39"
                android:layout_marginLeft="@dimen/d8"
                android:background="@drawable/shape_a1_r"
                android:gravity="center"
                android:text="@string/exit_queren"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>