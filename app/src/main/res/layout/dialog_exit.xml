<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d116"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d14"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/A6"
                android:textSize="@dimen/s12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d14"
                android:gravity="center"
                android:text="@string/main_quit"
                android:textColor="@color/B3"
                android:textSize="@dimen/s12" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d24"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exit_queren"
                    android:layout_width="@dimen/d84"
                    android:layout_height="@dimen/d24"
                    android:background="@drawable/shape_rotate_bad"
                    android:gravity="center"
                    android:text="@string/main_quit_sure"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/exit_quxiao"
                    android:layout_width="@dimen/d84"
                    android:layout_height="@dimen/d24"
                    android:background="@drawable/shape_rotate_good"
                    android:gravity="center"
                    android:text="@string/main_quit_no"
                    android:textColor="@color/A8"
                    android:textSize="@dimen/s13" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


</FrameLayout>