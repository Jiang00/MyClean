<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white_100"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/loading_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:text="@string/app_name"
                android:textColor="@color/A1"
                android:textSize="@dimen/s18" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:gravity="center"
            android:text="@string/exit_msg"
            android:textColor="@color/A10"
            android:textSize="@dimen/s18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d16"
            android:layout_marginTop="@dimen/d27"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d141"
                android:layout_height="@dimen/d39"

                android:background="@drawable/shape_edit_1"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A10"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d141"
                android:layout_height="@dimen/d39"
                android:layout_marginLeft="@dimen/d30"
                android:background="@drawable/shape_edit_2"
                android:gravity="center"
                android:text="@string/exit_queren"
                android:textColor="@color/A1"
                android:textSize="@dimen/s16" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>