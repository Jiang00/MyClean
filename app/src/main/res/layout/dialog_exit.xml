<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/A1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d56"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/loading_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:text="@string/app_name"
                android:textColor="@color/A7"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:gravity="center"
            android:text="@string/exit_msg"
            android:textColor="@color/A7"
            android:textSize="@dimen/s18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d20"
            android:layout_marginTop="@dimen/d16"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d150"
                android:layout_height="@dimen/d46"
                android:background="@drawable/shape_a4_s"
                android:gravity="center"
                android:text="@string/exit_queren"
                android:textColor="@color/A4"
                android:textSize="@dimen/s18" />

            <TextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d150"
                android:layout_height="@dimen/d46"
                android:layout_marginLeft="@dimen/d16"
                android:background="@drawable/shape_a4_s"
                android:gravity="center"
                android:text="@string/exit_quxiao"
                android:textColor="@color/A4"
                android:textSize="@dimen/s18" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad_exit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone" />
</LinearLayout>