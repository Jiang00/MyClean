<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_35"
    android:orientation="vertical">

    <!--好评-->
    <LinearLayout
        android:id="@+id/main_rotate_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/d9"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:background="@drawable/shape_ffffff_r"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d84"
                android:scaleType="centerCrop"
                android:src="@mipmap/main_rotate_2" />

            <ImageView
                android:id="@+id/rotate_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/d5"
                android:src="@mipmap/rotate_delete" />

        </FrameLayout>

        <com.fast.module.charge.saver.view.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d27"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/rotate_msg"
            android:textColor="@color/A8"
            android:textSize="@dimen/s16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d43"
            android:orientation="horizontal">

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/main_rotate_bad"
                android:layout_width="@dimen/d121"
                android:layout_height="@dimen/d36"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/d24"
                android:gravity="center"
                android:text="@string/rotate_cancel"
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/main_rotate_good"
                android:layout_width="@dimen/d176"
                android:layout_height="@dimen/d36"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/d8"
                android:background="@drawable/shape__a4_r"
                android:elevation="@dimen/d2"
                android:gravity="center"
                android:text="@string/rotate_ok"
                android:textColor="@color/A7"
                android:textSize="@dimen/s16"
                app:typeface="Roboto-Medium.ttf" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>