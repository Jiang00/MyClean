<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d24"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="@dimen/d301"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/d301"
                android:layout_height="@dimen/d179"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/main_rotate_2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_ffffff_b"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/d24"
                    android:layout_marginRight="@dimen/d24"
                    android:layout_marginTop="@dimen/d10"
                    android:text="@string/rotate_msg"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d14"
                    android:layout_marginTop="@dimen/d24"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/bt_quxiao"
                        android:layout_width="@dimen/d90"
                        android:layout_height="@dimen/d30"
                        android:background="@drawable/shape_b3_round"
                        android:gravity="center"
                        android:text="@string/rotate_cancel"
                        android:textColor="@color/Z1"
                        android:textSize="@dimen/s12" />

                    <TextView
                        android:id="@+id/bt_queren"
                        android:layout_width="@dimen/d90"
                        android:layout_height="@dimen/d30"
                        android:layout_marginLeft="@dimen/d36"
                        android:background="@drawable/shape__a4_round"
                        android:gravity="center"
                        android:text="@string/rotate_ok"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_cha"
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/d24"
            android:src="@mipmap/rotate_cha" />
    </FrameLayout>
</FrameLayout>