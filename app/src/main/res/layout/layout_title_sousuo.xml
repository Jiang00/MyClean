<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!--a添加白名单标题-->
    <RelativeLayout
        android:id="@+id/normal_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">

        <FrameLayout
            android:id="@+id/title_left"
            android:layout_width="@dimen/d72"
            android:layout_height="@dimen/d56"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackground">

            <ImageView
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/tilte_left" />
        </FrameLayout>

        <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_left"
            android:text="@string/app_name"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18" />

        <LinearLayout
            android:id="@+id/title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d8">

            <ImageView
                android:layout_width="@dimen/d32"
                android:layout_height="@dimen/d32"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/d16"
                android:gravity="center"
                android:scaleType="center"
                android:src="@mipmap/white_add_right" />
        </LinearLayout>
    </RelativeLayout>

    <!--点击搜索按钮后的标题-->
    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d43"
            android:layout_gravity="center"
            android:background="@drawable/shape_radio" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d43"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d30"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/edit_hint"
            android:singleLine="true"
            android:textColor="#8a000000"
            android:textColorHint="#59000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d10"
            android:src="@mipmap/edit_left_drawable" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="@dimen/d5"
            android:background="@mipmap/eidt_cha"
            android:padding="@dimen/d5" />
    </FrameLayout>
</RelativeLayout>