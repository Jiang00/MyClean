<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/normal_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">

        <FrameLayout
            android:id="@+id/title_left"
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d27"
            android:background="?attr/selectableItemBackground"
            android:padding="@dimen/d8">

            <ImageView
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_gravity="center"
                android:src="@mipmap/tilte_left" />
        </FrameLayout>

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_left"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:textSize="@dimen/s20"
             />

        <ImageView
            android:id="@+id/title_right"
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d8"
            android:padding="@dimen/d8"
            android:scaleType="center"
            android:src="@mipmap/white_add_right" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:visibility="gone">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d43"
            android:layout_gravity="center"
            android:background="@drawable/shape_radio" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d43"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d30"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/edit_hint"
            android:singleLine="true"
            android:textColor="#8a000000"
            android:textColorHint="#59000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/d10"
            android:src="@mipmap/edit_left_drawable" />

        <ImageButton
            android:id="@+id/clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginRight="@dimen/d5"
            android:background="@mipmap/eidt_cha"
            android:padding="@dimen/d5" />
    </FrameLayout>
</FrameLayout>