<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gboost_item_c"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/d5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gboost_item_icon"
            android:layout_width="@dimen/d46"
            android:layout_height="@dimen/d46"
            android:layout_gravity="center" />

        <com.vector.module.mView.CustomerTypefaceTextView
            android:id="@+id/gboost_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d10"
            android:layout_marginRight="@dimen/d10"
            android:layout_marginTop="@dimen/d10"
            android:gravity="center"
            android:singleLine="true"
            android:text="aaaa"
            android:textColor="@color/A8"
            android:textSize="@dimen/s10" />
    </LinearLayout>
</FrameLayout>