<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A17">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <include layout="@layout/layout_title" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d23"
                android:orientation="horizontal">

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/picture_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d72"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/A7"
                    android:textSize="@dimen/s55" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="@dimen/d8"
                    android:layout_marginLeft="@dimen/d4"
                    android:orientation="vertical">

                    <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                        android:id="@+id/picture_danwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MB"
                        android:textColor="#b2ffffff"
                        android:textSize="@dimen/s18" />

                    <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                        android:id="@+id/picture_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d3"
                        android:text="@string/picture_scan"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s20"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginLeft="@dimen/d72"
                android:layout_marginTop="@dimen/d90"
                android:text="@string/picture1"
                android:textColor="@color/A6"
                android:textSize="@dimen/s18" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/picture_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d5"
                android:layout_marginLeft="@dimen/d16"
                android:singleLine="true"
                android:textColor="@color/B3"
                android:textSize="@dimen/s12"
                android:visibility="gone" />
        </FrameLayout>


        <LinearLayout
            android:id="@+id/picture_lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/picture_progressbar"
                    style="?android:attr/progressBarStyleInverse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:indeterminateTint="@color/A1"
                    android:indeterminateTintMode="src_atop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/picture_recycle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/d48"
                            android:layout_marginLeft="@dimen/d8"
                            android:layout_marginRight="@dimen/d8"
                            android:background="@color/A7"
                            android:overScrollMode="never"
                            android:scrollbars="none" />

                        <RelativeLayout
                            android:id="@+id/manager_clean"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom">

                            <TextView
                                android:id="@+id/picture_button"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d48"
                                android:background="@color/A1"
                                android:gravity="center"
                                android:text="@string/picture_14"
                                android:textColor="@color/A7"
                                android:textSize="@dimen/s16"
                                android:visibility="gone" />
                        </RelativeLayout>
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!--没有相似图片-->
        <LinearLayout
            android:id="@+id/picture_other"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d100"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:src="@mipmap/null_pic" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d25"
                android:gravity="center"
                android:text="@string/picture_3"
                android:textColor="#4d1e134b"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/pager_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_100"
        android:paddingTop="@dimen/d24"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/picture_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/pager_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:background="@color/black_100">

            <FrameLayout
                android:layout_width="@dimen/d72"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pic_pager_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:src="@mipmap/tilte_left" />
            </FrameLayout>

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/pic_pager_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1/2"
                android:textColor="@color/A1"
                android:textSize="@dimen/s16" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/pager_buttom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/pic_pager_delete"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/picture_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pic_pager_check"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pic_pager_check_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ram_normal" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>