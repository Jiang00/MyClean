<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <include layout="@layout/layout_title" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d10"
                android:orientation="horizontal">

                <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                    android:id="@+id/picture_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s60" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d2"
                    android:orientation="vertical">

                    <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                        android:id="@+id/picture_danwei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MB"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s20" />

                    <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                        android:id="@+id/picture_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d3"
                        android:text="@string/picture_scan"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s20" />
                </LinearLayout>
            </LinearLayout>

            <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                android:id="@+id/picture_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d10"
                android:layout_marginLeft="@dimen/d16"
                android:singleLine="true"
                android:textColor="@color/B3"
                android:textSize="@dimen/s12" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#ffffff">

            <ProgressBar
                android:id="@+id/picture_progressbar"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:indeterminateTint="@color/A1"
                android:indeterminateTintMode="src_atop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/picture_recycle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/d16"
                        android:layout_marginTop="@dimen/d16"
                        android:overScrollMode="never"
                        android:scrollbars="none" />
                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d72"
                    android:layout_gravity="bottom"
                    android:background="@color/B3">

                    <ImageView
                        android:id="@+id/picture_button"
                        android:layout_width="@dimen/d78"
                        android:layout_height="@dimen/d78"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/junk_img"
                        android:visibility="invisible" />
                </RelativeLayout>
            </LinearLayout>
            <!--没有相似图片-->
            <LinearLayout
                android:id="@+id/picture_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d100"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:src="@mipmap/null_pic" />

                <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d25"
                    android:gravity="center"
                    android:text="@string/picture_3"
                    android:textColor="#4d1e134b"
                    android:textSize="@dimen/s16" />

                <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d12"
                    android:gravity="center"
                    android:text="@string/picture_4"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s16" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/pager_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_100"
        android:paddingTop="@dimen/d24"
        android:visibility="gone">

        <android.support.v4.view.ViewPager
            android:id="@+id/picture_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <FrameLayout
            android:id="@+id/pager_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:background="@color/black_100">

            <FrameLayout
                android:layout_width="@dimen/d72"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/pic_pager_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:src="@mipmap/tilte_left" />
            </FrameLayout>

            <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                android:id="@+id/pic_pager_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="1/2"
                android:textColor="@color/A1"
                android:textSize="@dimen/s16" />
        </FrameLayout>

        <RelativeLayout
            android:id="@+id/pager_buttom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d50"
            android:layout_gravity="bottom">

            <LinearLayout
                android:id="@+id/pic_pager_delete"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/picture_right" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pic_pager_check"
                android:layout_width="@dimen/d50"
                android:layout_height="@dimen/d50"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/pic_pager_check_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ram_normal" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</FrameLayout>