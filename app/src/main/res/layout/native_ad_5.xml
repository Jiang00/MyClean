<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/d8">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <FrameLayout
            android:id="@+id/ad_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d109"
            android:layout_gravity="center_horizontal"
            android:tag="ad_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:tag="ad_choices" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ad" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_image"
            android:layout_marginTop="@dimen/d5"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="@dimen/d37"
                android:layout_height="@dimen/d37"
                android:layout_marginLeft="@dimen/d4"
                android:src="@mipmap/icon"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d6"
                android:layout_marginRight="@dimen/d37"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-regular"
                    android:singleLine="true"
                    android:tag="ad_title"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/s13"
                    tools:text="Your see" />

                <TextView
                    android:id="@+id/ad_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="@dimen/d6"
                    android:fontFamily="sans-serif-light"
                    android:lines="1"
                    android:tag="ad_desc"
                    android:textColor="#dae8ff"
                    android:textSize="@dimen/s9"
                    tools:text="Your see Your see Your see Your see" />

            </LinearLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d39"
            android:layout_below="@id/ll"
            android:layout_marginLeft="@dimen/d3"
            android:layout_marginRight="@dimen/d3"
            android:layout_marginTop="@dimen/d4"
            android:background="@drawable/select_text_ad"
            android:gravity="center"
            android:tag="ad_action"
            android:text="Installl"
            android:textColor="#fff"
            android:textSize="@dimen/s17" />
    </RelativeLayout>
</RelativeLayout>