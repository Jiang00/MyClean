<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d67"
        android:layout_height="@dimen/d50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:text="aaaaaaa"
        android:textColor="#1c1f24"
        android:textSize="@dimen/s14"
        app:typeface="ljh_1.TTF" />

    <ImageView
        android:id="@+id/iv_red"
        android:layout_width="@dimen/d10"
        android:layout_height="@dimen/d10"
        android:layout_marginLeft="@dimen/d5"
        android:layout_marginTop="@dimen/d10"
        android:layout_toRightOf="@id/tv_name"
        android:src="@drawable/shape_a2"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d30"
        android:src="@mipmap/side_check_normal" />


</RelativeLayout>