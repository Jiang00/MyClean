<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="72dp"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <com.sample.lottie.LottieAnimationView
            android:id="@+id/lot_family"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_marginLeft="@dimen/d13"
            android:layout_centerVertical="true" />

        <ImageView
            android:id="@+id/iv_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

    </RelativeLayout>

    <com.my.module.charge.saver.view.CustomerTypefaceTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:text="aaaaaaa"
        android:textColor="@color/B2"
        android:textSize="@dimen/s13"
        app:typeface="eos_clean.otf" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:src="@mipmap/side_check_normal" />

    <View
        android:id="@+id/side_divide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/B1"
        android:visibility="gone" />
</RelativeLayout>