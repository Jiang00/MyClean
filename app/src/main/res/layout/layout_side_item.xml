<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="@dimen/d72"
            android:layout_height="@dimen/d48"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_le"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp" />

        </RelativeLayout>

        <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl"
            android:text="aaaaaaa"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s13"
            app:typeface="lyp_text.otf" />


        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d16"
            android:visibility="gone"
            android:src="@mipmap/side_check_normal" />

        <View
            android:id="@+id/side_divide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/B1"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>