<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d48"

    android:background="?selectableItemBackground">
    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d48"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_le"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d24" />

    </RelativeLayout>

    <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:text="aaaaaaa"
        android:textColor="@color/A2"
        android:textSize="@dimen/s14"
         />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d16"
        android:src="@mipmap/side_check_normal" />

    <!--<View-->
        <!--android:id="@+id/side_divide"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="@color/B1"-->
        <!--android:visibility="gone" />-->
    <View
        android:id="@+id/side_divide"
        android:layout_width="@dimen/d220"
        android:layout_height="1dp"
        android:layout_below="@id/tv_name"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@id/tv_name"
        android:background="@color/A4"/>
</RelativeLayout>