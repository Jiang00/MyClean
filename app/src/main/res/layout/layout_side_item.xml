<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="216px"
            android:layout_height="144px"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_le"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="48px" />

        </RelativeLayout>

        <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl"
            android:text="aaaaaaa"
            android:textColor="@color/B2"
            android:textSize="39px"
            app:typeface="lyp_text.otf" />

        <com.frigate.view.AutoImageView
            android:id="@+id/iv_hong"
            android:layout_width="24px"
            android:layout_height="24px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="96px"
            android:visibility="gone"
            app:roundRadius="36px"
            app:soildColor="@color/A2" />

        <ImageView
            android:id="@+id/iv_check"
            android:layout_width="108px"
            android:layout_height="108px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="48px"
            android:src="@mipmap/side_check_normal" />

        <View
            android:id="@+id/side_divide"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/B1"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>