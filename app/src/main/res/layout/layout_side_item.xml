<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d56"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_le"
            android:layout_width="@dimen/d24"
            android:layout_height="@dimen/d24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

    </RelativeLayout>

    <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:text="aaaaaaa"
        android:textColor="@color/A1"
        android:textSize="@dimen/s14" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/d36"
        android:layout_height="@dimen/d36"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d16"
        android:src="@mipmap/side_check_normal" />

    <TextView
        android:id="@+id/side_deep_h"
        android:layout_width="@dimen/d43"
        android:layout_height="@dimen/d18"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d30"
        android:background="@drawable/shape_junk"
        android:gravity="center"
        android:text="100M"
        android:textColor="@color/B3"
        android:textSize="@dimen/s10" />

    <View
        android:id="@+id/side_divide"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/d16"
        android:background="@color/B4" />
</RelativeLayout>