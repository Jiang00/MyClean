<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_35"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d67">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d12"
                android:layout_marginTop="@dimen/d10"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/auto_1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d2"
                    android:text="@string/app_name"
                    android:textColor="@color/A6_87"
                    android:textSize="@dimen/s8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/auto_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d8"
                    android:text="@string/auto_jiaguo"
                    android:textColor="@color/B6"
                    android:textSize="@dimen/s17" />
            </LinearLayout>

            <ImageView
                android:id="@+id/auto_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d2"
                android:padding="@dimen/d10"
                android:src="@mipmap/detect_cha" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:text="@string/auto_clean_ram"
                    android:textColor="@color/A6_87"
                    android:textSize="@dimen/s14" />

                <LinearLayout
                    android:id="@+id/auto_ram_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d12"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/auto_ram_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120MB"
                        android:textColor="@color/A7"
                        android:textSize="@dimen/s13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d10"
                        android:src="@mipmap/auto_3" />
                </LinearLayout>


            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/B1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:text="@string/auto_clean_junk"
                    android:textColor="@color/A6_87"
                    android:textSize="@dimen/s14" />

                <LinearLayout
                    android:id="@+id/auto_junk_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d12"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/auto_junk_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120MB"
                        android:textColor="@color/A7"
                        android:textSize="@dimen/s13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d10"
                        android:src="@mipmap/auto_3" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/B1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"

                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d12"
                    android:text="@string/auto_battery"
                    android:textColor="@color/A6_87"
                    android:textSize="@dimen/s14" />

                <LinearLayout
                    android:id="@+id/auto_battery_l"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d12"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/auto_battery_size"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120MB"
                        android:textColor="@color/A7"
                        android:textSize="@dimen/s13" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d10"
                        android:src="@mipmap/auto_3" />
                </LinearLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/B1" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/auto_is_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/auto_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/d10"
                android:src="@mipmap/auto_passed" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto_iskai"
                android:textColor="@color/A7"
                android:textSize="@dimen/s11" />
        </LinearLayout>

        <Button
            android:id="@+id/auto_ok"
            android:layout_width="@dimen/d135"
            android:layout_height="@dimen/d39"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/d16"
            android:background="@drawable/shape_button"
            android:text="@string/permission_ok"
            android:textColor="@color/A8"
            android:textSize="@dimen/s14" />

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </LinearLayout>
</FrameLayout>