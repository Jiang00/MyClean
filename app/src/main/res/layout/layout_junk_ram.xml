<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A7"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d95">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:id="@+id/junk_size_all"
                    android:layout_width="@dimen/d133"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s57"
                    app:typeface="Roboto-Light.ttf" />

                <LinearLayout
                    android:id="@+id/ll_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:id="@+id/junk_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/s30"
                        app:typeface="Roboto-Light.ttf" />

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:id="@+id/junk_fangxin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d1"
                        android:text="@string/junk_title_clean"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s17"
                        app:typeface="Roboto-Light.ttf" />


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@mipmap/laji" />
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_100"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/junk_list_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/A5"
                android:divider="@drawable/list_divider"
                android:dividerHeight="0px"
                android:visibility="gone" />

            <com.vector.cleaner.myview.MyScrollView

                android:id="@+id/junk_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/junk_button_system"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d56"
                            android:orientation="horizontal">


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/junk_system"
                                android:textColor="@color/A8"
                                android:textSize="@dimen/s16" />


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:id="@+id/junk_system_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/d16"
                                android:gravity="center"
                                android:text="10.0M"
                                android:textColor="@color/A11"
                                android:textSize="@dimen/s14" />


                            <ImageView
                                android:id="@+id/junk_system_jiantou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/d16"
                                android:rotation="-90"
                                android:src="@mipmap/junk_right"
                                android:visibility="visible" />
                        </LinearLayout>
                    </LinearLayout>

                    <com.vector.cleaner.myview.ListViewForScrollView
                        android:id="@+id/junk_system_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/A5"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="0px" />

                    <LinearLayout
                        android:id="@+id/junk_button_apk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d56"
                            android:orientation="horizontal">


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/junk_apk"
                                android:textColor="@color/A8"
                                android:textSize="@dimen/s16" />

                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:id="@+id/junk_apk_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/d16"
                                android:gravity="center"
                                android:text="10.0M"
                                android:textColor="@color/A11"
                                android:textSize="@dimen/s14" />


                            <ImageView
                                android:id="@+id/junk_apk_jiaotou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/d16"
                                android:rotation="-90"
                                android:src="@mipmap/junk_right"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.vector.cleaner.myview.ListViewForScrollView
                        android:id="@+id/junk_apk_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/A5"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="0px" />

                    <LinearLayout
                        android:id="@+id/junk_button_unload"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d56"
                            android:orientation="horizontal">


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/junk_unload"
                                android:textColor="@color/A8"
                                android:textSize="@dimen/s16" />

                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:id="@+id/junk_unload_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/d16"
                                android:gravity="center"
                                android:text="10.0M"
                                android:textColor="@color/A11"
                                android:textSize="@dimen/s14" />


                            <ImageView
                                android:id="@+id/junk_unload_jiantou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/d16"
                                android:rotation="-90"
                                android:src="@mipmap/junk_right"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.vector.cleaner.myview.ListViewForScrollView
                        android:id="@+id/junk_unload_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/A5"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="0px" />

                    <LinearLayout
                        android:id="@+id/junk_button_log"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d56"
                            android:orientation="horizontal">


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/junk_log"
                                android:textColor="@color/A8"
                                android:textSize="@dimen/s16" />


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:id="@+id/junk_log_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/d16"
                                android:gravity="center"
                                android:text="10.0M"
                                android:textColor="@color/A11"
                                android:textSize="@dimen/s14" />


                            <ImageView
                                android:id="@+id/junk_log_jiantou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/d16"
                                android:rotation="-90"
                                android:src="@mipmap/junk_right"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.vector.cleaner.myview.ListViewForScrollView
                        android:id="@+id/junk_log_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/A5"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="0px" />

                    <LinearLayout
                        android:id="@+id/junk_button_user"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d56"
                            android:orientation="horizontal">


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/junk_user"
                                android:textColor="@color/A8"
                                android:textSize="@dimen/s16" />


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:id="@+id/junk_user_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/d16"
                                android:gravity="center"
                                android:text="10.0M"
                                android:textColor="@color/A11"
                                android:textSize="@dimen/s14" />


                            <ImageView
                                android:id="@+id/junk_user_jiantou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/d16"
                                android:rotation="-90"
                                android:src="@mipmap/junk_right"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.vector.cleaner.myview.ListViewForScrollView
                        android:id="@+id/junk_user_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/A5"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="0px" />

                    <LinearLayout
                        android:id="@+id/junk_button_ram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d56"
                            android:orientation="horizontal">


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:text="@string/junk_ram"
                                android:textColor="@color/A8"
                                android:textSize="@dimen/s16" />


                            <com.vector.module.mView.CustomerTypefaceTextView
                                android:id="@+id/junk_ram_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginRight="@dimen/d16"
                                android:gravity="center"
                                android:text="10.0M"
                                android:textColor="@color/A11"
                                android:textSize="@dimen/s14" />

                            <ImageView
                                android:id="@+id/junk_ram_jiantou"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="@dimen/d16"
                                android:rotation="-90"
                                android:src="@mipmap/junk_right"
                                android:visibility="visible" />
                        </LinearLayout>

                    </LinearLayout>

                    <com.vector.cleaner.myview.ListViewForScrollView
                        android:id="@+id/junk_ram_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/A5"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="0px" />

                </LinearLayout>
            </com.vector.cleaner.myview.MyScrollView>

            <Button
                android:id="@+id/junk_button_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@mipmap/button"
                android:visibility="invisible" />
        </FrameLayout>


    </LinearLayout>


</LinearLayout>