<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d95">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/junk_size_all"
                    android:layout_width="@dimen/d133"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d20"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/s60"
                    app:typeface="Roboto-Light.ttf" />

                <LinearLayout
                    android:id="@+id/ll_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">


                    <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                        android:id="@+id/junk_fangxin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/s30"
                        app:typeface="Roboto-Light.ttf" />

                    <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                        android:id="@+id/junk_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d1"
                        android:text="@string/junk_title_clean"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s17"
                        app:typeface="Roboto-Light.ttf" />


                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:background="@mipmap/neicun" />

        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white_100"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/junk_list_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/A5"
                android:divider="@drawable/list_divider"
                android:dividerHeight="0px" />

            <Button
                android:id="@+id/junk_button_clean"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:background="@mipmap/button"
                android:visibility="invisible" />
        </FrameLayout>


    </LinearLayout>


</LinearLayout>