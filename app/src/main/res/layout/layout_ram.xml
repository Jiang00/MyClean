<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <include layout="@layout/layout_title" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d100"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d133"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:id="@+id/junk_size_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="0"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/s63" />

                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:id="@+id/junk_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/junk_size_all"
                    android:layout_marginLeft="@dimen/d10"
                    android:layout_toRightOf="@id/junk_size_all"
                    android:text="B"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s24" />
            </RelativeLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">


            <ListView
                android:id="@+id/junk_list_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:background="@drawable/shape_a3"
                android:divider="@drawable/list_divider"
                android:dividerHeight="0px" />

        </FrameLayout>

        <Button
            android:id="@+id/junk_button_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d8"
            android:background="@drawable/shape_a8"
            android:text="@string/ram_button"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18"
            android:visibility="invisible" />
    </LinearLayout>

</FrameLayout>