<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d120"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d20">

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/junk_size_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:lines="1"
                    android:text="0"
                    android:textColor="@color/A5"
                    android:textSize="@dimen/s55" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/junk_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d4"
                    android:layout_marginTop="@dimen/d33"
                    android:layout_toRightOf="@+id/junk_size_all"
                    android:text="B"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s18" />
            </RelativeLayout>

            <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                android:id="@+id/junk_fangxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/d16"
                android:layout_marginRight="@dimen/d60"
                android:text="@string/junk_found"
                android:textColor="@color/A6"
                android:textSize="@dimen/s16" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A11"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_weight="1">

            <ListView
                android:id="@+id/junk_list_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d4"
                android:background="@color/B3"
                android:divider="@drawable/list_divider"
                android:dividerHeight="1px"
                android:scrollbars="none" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:layout_gravity="bottom"
            android:background="@color/A5">

            <TextView
                android:id="@+id/junk_button_clean"
                android:layout_width="@dimen/d333"
                android:layout_height="@dimen/d43"
                android:layout_centerInParent="true"
                android:background="@drawable/main_haoping"
                android:gravity="center"
                android:text="@string/junk_button"
                android:textColor="@color/B3"
                android:textSize="@dimen/s16"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>