<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d120"
            android:orientation="horizontal">

            <com.easy.module.charge.saver.protectview.CustomerTypefaceTextView
                android:id="@+id/junk_size_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d60"
                android:gravity="center"
                android:lines="1"
                android:text="0"
                android:textColor="@color/A7"
                android:textSize="@dimen/s60" />

            <com.easy.module.charge.saver.protectview.CustomerTypefaceTextView
                android:id="@+id/junk_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/junk_size_all"
                android:layout_marginBottom="@dimen/d10"
                android:layout_marginLeft="@dimen/d4"
                android:layout_toRightOf="@+id/junk_size_all"
                android:text="B"
                android:textColor="@color/B3"
                android:textSize="@dimen/s18" />

            <com.easy.module.charge.saver.protectview.CustomerTypefaceTextView
                android:id="@+id/junk_fangxin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d60"
                android:text="@string/junk_found"
                android:textColor="@color/A5"
                android:textSize="@dimen/s14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A17"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_weight="1">

            <ListView
                android:id="@+id/junk_list_all"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/B3"
                android:divider="@drawable/list_divider"
                android:dividerHeight="0px"
                android:scrollbars="none" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/junk_button_clean"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_centerInParent="true"
                android:background="@color/A1"
                android:gravity="center"
                android:text="@string/power5"
                android:textColor="@color/A7"
                android:textSize="@dimen/s16"
                android:visibility="invisible" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>