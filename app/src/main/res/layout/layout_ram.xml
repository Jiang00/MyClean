<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A0"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d95"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:id="@+id/junk_size_all"
                android:layout_width="@dimen/d146"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d82"
                android:gravity="center"
                android:lines="1"
                android:text="0"
                android:textColor="@color/A0"
                android:textSize="@dimen/s70" />

            <LinearLayout
                android:id="@+id/ll_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                    android:id="@+id/junk_fangxin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="KB"
                    android:textColor="@color/A0"
                    android:textSize="@dimen/s14" />

                <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                    android:id="@+id/junk_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/junk_title_clean"
                    android:textColor="@color/A0"
                    android:textSize="@dimen/s14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A0">

        <ListView
            android:id="@+id/junk_list_all"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/d72"
            android:background="@color/A0"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:layout_gravity="bottom">

            <Button
                android:id="@+id/junk_button_clean"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d36"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/d32"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:background="@drawable/shape_button_a6"
                android:text="@string/junk_button"
                android:textAllCaps="false"
                android:textColor="@color/A0"
                android:textSize="@dimen/s18" />
        </RelativeLayout>
    </FrameLayout>
</LinearLayout>