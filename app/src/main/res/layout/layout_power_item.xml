<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/recyc_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/junk_item_rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d56">

        <ImageView
            android:id="@+id/recyc_icon"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
        android:id="@+id/junk_item_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/junk_item_rl"
        android:maxLength="15"
        android:text="app标题"
        android:textColor="@color/white_100"
        android:textSize="@dimen/s16" />

    <ImageView
        android:id="@+id/recyc_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d16"
        android:src="@mipmap/ram_passed" />

</RelativeLayout>