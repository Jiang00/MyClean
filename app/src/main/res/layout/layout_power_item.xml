<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recyc_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/recyc_icon"
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32"
            android:layout_marginLeft="@dimen/d8"
            android:src="@mipmap/icon" />

        <TextView
            android:id="@+id/recyc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_weight="1"
            android:text="aaaa"
            android:textColor="@color/A2"
            android:textSize="@dimen/s16"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/recyc_check"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_marginRight="@dimen/d8"
            android:src="@mipmap/side_check_normal" />
    </LinearLayout>

    <TextView
        android:id="@+id/deep_item_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="@color/B1" />
</FrameLayout>