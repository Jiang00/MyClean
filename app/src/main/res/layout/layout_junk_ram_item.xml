<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/junk_item_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d60">

        <TextView
            android:layout_width="@dimen/d1"
            android:layout_height="@dimen/d56"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d31"
            android:background="@color/A2"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/junk_item_icon"
            android:layout_width="@dimen/d35"
            android:layout_height="@dimen/d35"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d36" />
    </RelativeLayout>

    <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
        android:id="@+id/junk_item_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d20"
        android:layout_toRightOf="@id/junk_item_rl"
        android:maxLength="15"
        android:text="app标题"
        android:textColor="@color/A9"
        android:textSize="@dimen/s15" />

    <ImageView
        android:id="@+id/check_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d25"
        android:layout_marginRight="@dimen/d16"
        android:src="@mipmap/ram_passed" />

    <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
        android:id="@+id/size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/check_iv"
        android:text="size"
        android:textColor="@color/A9"
        android:textSize="@dimen/s12" />
</RelativeLayout>