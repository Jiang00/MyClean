                    android:clickable="true"
                    android:padding="@dimen/d8"
                    android:scaleType="center"
                    android:src="@mipmap/main_menu" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_title_left"
                    android:orientation="vertical">

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:id="@+id/tv_title_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s18" />

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Smart Super Clean for Android"
                        android:textColor="@color/A6"
                        android:textSize="@dimen/s10" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/iv_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
