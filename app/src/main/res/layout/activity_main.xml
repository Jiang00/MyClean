<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical"
    tools:context="com.mutter.clean.junk.myActivity.MainActivity">


    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/A1" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_hight"
                android:background="@color/A1">

                <ImageView
                    android:id="@+id/iv_title_left"
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d8"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="@dimen/d8"
                    android:src="@mipmap/main_menu" />


                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@id/iv_title_left"
                    android:text="@string/app_name"
                    android:textColor="@color/A8"
                    android:textSize="@dimen/s17"
                    app:typeface="ROBOTO-THIN_0.TTF" />

                <ImageView
                    android:id="@+id/iv_title_right"
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d8"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/d8"
                    android:src="@mipmap/main_setting" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--tou-->
                <FrameLayout
                    android:id="@+id/main_scale_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d364"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:id="@+id/main_sd_air_button"
                        android:layout_width="@dimen/d225"
                        android:layout_height="@dimen/d225"
                        android:layout_marginLeft="@dimen/d16"
                        android:layout_marginTop="@dimen/d16">

                        <com.mutter.clean.junk.myview.RoundSd
                            android:id="@+id/main_custom_sd"
                            android:layout_width="@dimen/d225"
                            android:layout_height="@dimen/d225"
                            android:layout_centerInParent="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d14">

                                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                    android:id="@+id/main_sd_per"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="78"
                                    android:textColor="@color/A5"
                                    android:textSize="@dimen/s50" />

                                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@id/main_sd_per"
                                    android:layout_marginLeft="@dimen/d5"
                                    android:layout_toRightOf="@id/main_sd_per"
                                    android:text="%"
                                    android:textColor="@color/A5"
                                    android:textSize="@dimen/s15" />
                            </RelativeLayout>

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/main_arc_sd"
                                android:textColor="@color/A5"
                                android:textSize="@dimen/s14" />

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:id="@+id/main_sd_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="1.3/1.7GB"
                                android:textColor="@color/A5"
                                android:textSize="@dimen/s8" />


                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_ram_air_button"
                        android:layout_width="@dimen/d141"
                        android:layout_height="@dimen/d141"
                        android:layout_gravity="right|bottom"
                        android:layout_marginRight="@dimen/d16">

                        <com.mutter.clean.junk.myview.RoundRam
                            android:id="@+id/main_custom_ram"
                            android:layout_width="@dimen/d141"
                            android:layout_height="@dimen/d141"
                            android:layout_centerInParent="true" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="vertical">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/d9">

                                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                    android:id="@+id/main_ram_per"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:text="78"
                                    android:textColor="@color/A5"
                                    android:textSize="@dimen/s27" />

                                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignBaseline="@id/main_ram_per"
                                    android:layout_centerHorizontal="true"
                                    android:layout_toRightOf="@id/main_ram_per"
                                    android:text="%"
                                    android:textColor="@color/A5"
                                    android:textSize="@dimen/s14"
                                    app:typeface="ROBOTO-THIN_0.TTF" />
                            </RelativeLayout>

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/main_arc_ram"
                                android:textColor="@color/A5"
                                android:textSize="@dimen/s10" />

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:id="@+id/main_ram_size"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/d5"
                                android:text="1.3/1.7GB"
                                android:textColor="@color/A5"
                                android:textSize="@dimen/s8" />


                        </LinearLayout>
                    </RelativeLayout>

                    <FrameLayout
                        android:id="@+id/ad_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/d48"
                        android:orientation="vertical">

                        <com.mutter.clean.junk.myview.BubbleMainLayout
                            android:id="@+id/bubble_main"
                            android:layout_width="@dimen/d56"
                            android:layout_height="@dimen/d72"
                            android:layout_marginLeft="@dimen/d16" />

                        <ImageView
                            android:layout_width="@dimen/d112"
                            android:layout_height="@dimen/d95"
                            android:src="@mipmap/libao_1" />
                    </FrameLayout>
                </FrameLayout>

                <!--六个按钮-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d109"
                    android:layout_marginBottom="@dimen/d8"
                    android:layout_marginLeft="@dimen/d4"
                    android:layout_marginRight="@dimen/d4"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/main_junk_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/d4"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_a3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/d33"
                                android:layout_height="@dimen/d33"
                                android:src="@mipmap/main_junk_button" />

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d12"
                                android:text="@string/main_junk_name"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s12" />

                            <TextView
                                android:id="@+id/main_junk_h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/d5"
                                android:gravity="center"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s10"
                                android:visibility="invisible" />
                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_cooling_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/d4"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_a3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/d33"
                                android:layout_height="@dimen/d33"
                                android:src="@mipmap/main_cooling_button" />

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d12"
                                android:text="@string/main_cooling_name"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s12" />

                            <TextView
                                android:id="@+id/main_cooling_h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="@dimen/d5"
                                android:gravity="center"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s10"
                                android:visibility="invisible" />
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/main_manager_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/d4"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/shape_a3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="@dimen/d33"
                                android:layout_height="@dimen/d33"
                                android:src="@mipmap/main_manager_button" />

                            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/d12"
                                android:text="@string/main_manager_name"
                                android:textColor="@color/white_100"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>

        </LinearLayout>


        <com.mingle.widget.LinearLayout
            android:id="@+id/ll_ad_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/A8"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone" />

        <FrameLayout
            android:id="@+id/libao_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_40"
            android:clickable="true"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/load_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/load_1" />

            <FrameLayout
                android:layout_width="@dimen/d196"
                android:layout_height="@dimen/d190"
                android:layout_gravity="center">

                <ImageView
                    android:layout_width="@dimen/d196"
                    android:layout_height="@dimen/d190"
                    android:layout_gravity="center"
                    android:src="@mipmap/load_2" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/d8"
                    android:orientation="horizontal">

                    <com.mutter.clean.junk.myview.CatShuView
                        android:id="@+id/shu_1"
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24" />

                    <com.mutter.clean.junk.myview.CatShuView
                        android:id="@+id/shu_2"
                        android:layout_width="@dimen/d24"
                        android:layout_height="@dimen/d24"
                        android:layout_marginLeft="@dimen/d23" />
                </LinearLayout>
            </FrameLayout>


        </FrameLayout>

    </FrameLayout>


</LinearLayout>