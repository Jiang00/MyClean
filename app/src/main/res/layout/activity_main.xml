<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_hight">

                <ImageView
                    android:id="@+id/iv_title_left"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d27"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="@dimen/d8"
                    android:scaleType="center"
                    android:src="@mipmap/main_menu" />


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:id="@+id/tv_title_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/app_name"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s18" />


                <ImageView
                    android:id="@+id/iv_title_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d8"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="@dimen/d8"
                    android:scaleType="center"
                    android:src="@mipmap/main_setting" />


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/iv_title_right">

                    <ImageView
                        android:id="@+id/lot_ad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/full_1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/full_2" />
                </FrameLayout>

            </RelativeLayout>

            <com.vector.cleaner.myview.PullToRefreshLayout
                android:id="@+id/main_pull_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white_100">

                <include layout="@layout/layout_load_more" />

                <com.vector.cleaner.myview.MyScrollView
                    android:id="@+id/main_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:orientation="vertical"
                    android:overScrollMode="never"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:orientation="vertical">

                        <!--球-->
                        <LinearLayout
                            android:id="@+id/main_all_cercle"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <FrameLayout
                                android:id="@+id/main_ram_qiu"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d141"
                                android:layout_marginBottom="@dimen/d8"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_marginRight="@dimen/d16"
                                android:layout_marginTop="@dimen/d8"
                                android:background="@drawable/main_1"
                                android:elevation="@dimen/d5">

                                <LinearLayout
                                    android:id="@+id/main_ram_air_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d18"
                                    android:layout_marginTop="@dimen/d23"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:id="@+id/main_ram_per"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="78"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s38"
                                            app:typeface="Roboto-Light.ttf" />


                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:id="@+id/ram_danwei"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBaseline="@id/main_ram_per"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_toRightOf="@id/main_ram_per"
                                            android:text="%"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s18" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBaseline="@id/main_ram_per"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginLeft="@dimen/d8"
                                            android:layout_toRightOf="@id/ram_danwei"
                                            android:text="@string/main_arc_ram"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s18" />
                                    </RelativeLayout>

                                    <com.vector.module.mView.CustomerTypefaceTextView
                                        android:id="@+id/main_ram_size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/d8"
                                        android:text="1.3/1.7GB"
                                        android:textColor="@color/white_100"
                                        android:textSize="@dimen/s18" />

                                    <com.vector.cleaner.myview.LineRam
                                        android:id="@+id/main_custom_ram"
                                        android:layout_width="@dimen/d100"
                                        android:layout_height="@dimen/d4"
                                        android:layout_centerInParent="true"
                                        android:layout_marginTop="@dimen/d4"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:orientation="vertical">

                                    <FrameLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/d37">

                                        <ImageView
                                            android:id="@+id/main_ram_ani"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/main_ram_1"
                                            android:visibility="invisible" />
                                    </FrameLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/d32"

                                        android:background="@drawable/main_4"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/d12"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:text="@string/ram_button"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s16" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/d19"
                                            android:src="@mipmap/main_right" />
                                    </LinearLayout>
                                </LinearLayout>


                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/main_file_qiu"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/d141"
                                android:layout_marginBottom="@dimen/d8"
                                android:layout_marginLeft="@dimen/d16"
                                android:layout_marginRight="@dimen/d16"
                                android:layout_marginTop="@dimen/d8"
                                android:background="@drawable/main_1"
                                android:elevation="@dimen/d5">

                                <LinearLayout
                                    android:id="@+id/main_sd_air_button"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/d18"
                                    android:layout_marginTop="@dimen/d23"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:id="@+id/main_sd_per"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="78"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s38"
                                            app:typeface="Roboto-Light.ttf" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:id="@+id/danwei"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBaseline="@id/main_sd_per"
                                            android:layout_toRightOf="@id/main_sd_per"
                                            android:text="%"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s18" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_alignBaseline="@id/main_sd_per"
                                            android:layout_marginLeft="@dimen/d8"
                                            android:layout_toRightOf="@id/danwei"
                                            android:text="@string/main_arc_sd"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s18" />
                                    </RelativeLayout>

                                    <com.vector.module.mView.CustomerTypefaceTextView
                                        android:id="@+id/main_sd_size"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/d8"
                                        android:text="1.3/1.7GB"
                                        android:textColor="@color/white_100"
                                        android:textSize="@dimen/s18" />

                                    <com.vector.cleaner.myview.LineRam
                                        android:id="@+id/main_custom_sd"
                                        android:layout_width="@dimen/d100"
                                        android:layout_height="@dimen/d4"
                                        android:layout_marginTop="@dimen/d4"
                                        android:visibility="gone" />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:orientation="vertical">

                                    <FrameLayout
                                        android:layout_width="@dimen/d82"
                                        android:layout_height="@dimen/d100"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="@dimen/d37">

                                        <FrameLayout
                                            android:id="@+id/main_file_ani_1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent">

                                            <com.vector.module.mView.BubbleLayout
                                                android:id="@+id/bubble_file"
                                                android:layout_width="match_parent"
                                                android:layout_height="@dimen/d72"
                                                android:layout_marginLeft="@dimen/d8"
                                                android:layout_marginRight="@dimen/d8" />

                                            <ImageView
                                                android:layout_width="@dimen/d82"
                                                android:layout_height="@dimen/d82"
                                                android:layout_gravity="bottom"
                                                android:src="@mipmap/main_file_2" />
                                        </FrameLayout>

                                        <ImageView
                                            android:id="@+id/main_file_ani_2"
                                            android:layout_width="@dimen/d82"
                                            android:layout_height="@dimen/d82"
                                            android:layout_gravity="bottom"
                                            android:src="@mipmap/main_file_1" />

                                    </FrameLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/d32"

                                        android:background="@drawable/main_4"
                                        android:gravity="center_vertical"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/d12"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:text="@string/junk_button"
                                            android:textColor="@color/white_100"
                                            android:textSize="@dimen/s16" />

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="@dimen/d19"
                                            android:src="@mipmap/main_right" />
                                    </LinearLayout>
                                </LinearLayout>


                            </FrameLayout>
                        </LinearLayout>

                        <!--六个按钮-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/d243"
                            android:background="@color/white_100"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/main_junk_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/main_junk_button" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/d3"
                                            android:text="@string/main_junk_name"
                                            android:textColor="@color/Z1"
                                            android:textSize="@dimen/s14" />
                                    </LinearLayout>

                                </RelativeLayout>


                                <RelativeLayout
                                    android:id="@+id/main_applock_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/main_applock_button" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/d3"
                                            android:text="@string/applock_9"
                                            android:textColor="@color/Z1"
                                            android:textSize="@dimen/s14" />
                                    </LinearLayout>

                                </RelativeLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1">

                                <RelativeLayout
                                    android:id="@+id/main_cooling_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:visibility="gone">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:src="@mipmap/main_cooling_button" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/d3"
                                            android:text="@string/main_cooling_name"
                                            android:textColor="@color/Z1"
                                            android:textSize="@dimen/s14" />
                                    </LinearLayout>

                                </RelativeLayout>

                                <LinearLayout
                                    android:id="@+id/main_manager_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/main_manager_button" />

                                    <com.vector.module.mView.CustomerTypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/d3"
                                        android:text="@string/main_manager_name"
                                        android:textColor="@color/Z1"
                                        android:textSize="@dimen/s14" />
                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/main_theme_button"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="?attr/selectableItemBackground"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/main_theme_button" />

                                    <com.vector.module.mView.CustomerTypefaceTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/d3"
                                        android:text="@string/gboost_0"
                                        android:textColor="@color/Z1"
                                        android:textSize="@dimen/s14" />
                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.vector.cleaner.myview.MyScrollView>

                <include layout="@layout/layout_load_more" />

            </com.vector.cleaner.myview.PullToRefreshLayout>
        </LinearLayout>


        <com.mingle.widget.LinearLayout
            android:id="@+id/ll_ad_full"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/A1"
            android:clickable="true"
            android:orientation="vertical"
            android:visibility="gone" />


        <ProgressBar
            android:id="@+id/ad_progressbar"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:indeterminateTint="@color/A7"
            android:indeterminateTintMode="src_atop"
            android:visibility="gone" />

        <include layout="@layout/layout_battery" />

        <FrameLayout
            android:id="@+id/full_load"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_70"
            android:clickable="true"
            android:visibility="gone">

            <FrameLayout

                android:layout_width="@dimen/d425"
                android:layout_height="@dimen/d425"
                android:layout_gravity="center">

                <com.vector.cleaner.myview.BubbleCenterLayout
                    android:id="@+id/full_bubble"
                    android:layout_width="@dimen/d333"
                    android:layout_height="@dimen/d333"
                    android:layout_gravity="center" />

                <ImageView
                    android:id="@+id/full_zhuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/full_3" />
            </FrameLayout>
        </FrameLayout>

    </FrameLayout>


</LinearLayout>