<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical"
    tools:context="com.supers.clean.junk.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_first"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_hight">

            <ImageView
                android:id="@+id/iv_title_left"
                android:layout_width="@dimen/title_hight"
                android:layout_height="@dimen/title_hight"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:scaleType="center"
                android:src="@mipmap/main_menu" />

            <TextView
                android:id="@+id/tv_title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/app_name"
                android:textColor="@color/white_100"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_title_right"
                android:layout_width="@dimen/title_hight"
                android:layout_height="@dimen/title_hight"
                android:layout_alignParentRight="true"
                android:background="?attr/selectableItemBackground"
                android:scaleType="center"
                android:src="@mipmap/main_setting" />

            <com.sample.lottie.LottieAnimationView
                android:id="@+id/lot_family"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_toLeftOf="@id/iv_title_right" />
        </RelativeLayout>


    </LinearLayout>

    <com.supers.clean.junk.myView.PullToRefreshLayout
        android:id="@+id/main_pull_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/layout_load_more" />

        <com.supers.clean.junk.myView.MainScrollView
            android:id="@+id/main_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/main_all_cercle"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/main_t"
                    android:background="@color/app_color_first">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/viewpager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true" />

                    <com.rd.PageIndicatorView
                        android:id="@+id/pageindicatorview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/d10"
                        app:piv_animationType="drop"
                        app:piv_interactiveAnimation="true"
                        app:piv_radius="@dimen/d3"
                        app:piv_viewPager="@id/viewpager" />

                </RelativeLayout>
                <!--六个按钮-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_6_anniu"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <com.supers.clean.junk.myView.MyLinearLayout
                            android:id="@+id/main_junk_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d8"
                                android:src="@mipmap/main_junk_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_junk_name"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </com.supers.clean.junk.myView.MyLinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f1f1f1" />

                        <com.supers.clean.junk.myView.MyLinearLayout
                            android:id="@+id/main_ram_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d8"
                                android:src="@mipmap/main_ram_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_ram_name"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </com.supers.clean.junk.myView.MyLinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f1f1f1" />

                        <com.supers.clean.junk.myView.MyLinearLayout
                            android:id="@+id/main_manager_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d8"
                                android:src="@mipmap/main_manager_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_manager_name"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </com.supers.clean.junk.myView.MyLinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#f1f1f1" />

                    <com.supers.clean.junk.myView.MyLinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/main_cooling_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d8"
                                android:src="@mipmap/main_cooling_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_cooling_name"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f1f1f1" />

                        <LinearLayout
                            android:id="@+id/main_applock_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d8"
                                android:src="@mipmap/main_applock_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_aopplock_name"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>


                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="#f1f1f1" />

                        <com.supers.clean.junk.myView.MyLinearLayout
                            android:id="@+id/main_theme_button"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/d8"
                                android:src="@mipmap/main_theme_button" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_theme_name"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </com.supers.clean.junk.myView.MyLinearLayout>
                    </com.supers.clean.junk.myView.MyLinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_4"
                    android:background="#e8e8e8" />
                <!--好评-->
                <LinearLayout
                    android:id="@+id/main_rotate_all"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white_100"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d19"
                            android:src="@mipmap/main_rotate_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d5"
                            android:text="@string/main_rotate_title"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/s16" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d121"
                        android:layout_marginTop="@dimen/d15"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/main_rotate_2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d53"
                        android:layout_marginRight="@dimen/d53"
                        android:layout_marginTop="@dimen/d18"
                        android:gravity="center"
                        android:text="@string/main_rotate_msg"
                        android:textColor="#1e88e5"
                        android:textSize="@dimen/s17" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/d30"
                        android:background="#e5e5e5" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d40"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/main_rotate_bad"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:text="@string/main_rotate_bad"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/s17" />

                        <LinearLayout
                            android:id="@+id/main_rotate_good"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="?attr/selectableItemBackground"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/main_rotate_good"
                                android:textColor="@color/black_54"
                                android:textSize="@dimen/s17" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/d3"
                                android:src="@mipmap/main_rotate_3" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d16"
                        android:background="#e8e8e8" />
                </LinearLayout>


                <!--交叉推广-->
                <LinearLayout
                    android:id="@+id/main_tuiguang_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d19"
                            android:src="@mipmap/main_rotate_1" />

                        <TextView
                            android:id="@+id/main_msg_tuiguang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d5"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/s16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/d16"
                        android:layout_marginRight="@dimen/d16"
                        android:layout_marginTop="@dimen/main_4"
                        android:background="#f1f1f1" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d16"
                        android:layout_marginRight="@dimen/d16">

                        <com.sample.lottie.LottieAnimationView
                            android:id="@+id/lot_main"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitEnd" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:background="@color/black_35"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:text="AD"
                            android:textColor="@android:color/white"
                            android:textSize="8sp" />
                    </FrameLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d16"
                        android:background="#e8e8e8" />
                </LinearLayout>

                <!--硬件信息-->
                <LinearLayout
                    android:id="@+id/main_msg_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d15"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d19"
                            android:src="@mipmap/main_rotate_1" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d5"
                            android:text="@string/main_msg_title"
                            android:textColor="@color/black_87"
                            android:textSize="@dimen/s16" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/d16"
                        android:layout_marginRight="@dimen/d16"
                        android:layout_marginTop="@dimen/main_4"
                        android:background="#f1f1f1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/d14"
                        android:layout_marginRight="@dimen/d14"
                        android:layout_marginTop="@dimen/d19"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/main_msg_ram_backg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/shape_2a97fe" />

                                <TextView
                                    android:id="@+id/main_msg_ram_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="96%"
                                    android:textColor="@color/white_100"
                                    android:textSize="@dimen/s24" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/d5"
                                android:text="@string/main_msg_ram"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/main_msg_sd_backg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/shape_fac100" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/main_msg_sd_percent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="864"
                                        android:textColor="@color/white_100"
                                        android:textSize="@dimen/s24" />

                                    <TextView
                                        android:id="@+id/main_msg_sd_unit"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:text="MB"
                                        android:textColor="@color/white_100"
                                        android:textSize="@dimen/s12" />
                                </LinearLayout>

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/d5"
                                android:text="@string/main_msg_sd"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/main_msg_cpu_backg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/shape_31cb39" />

                                <TextView
                                    android:id="@+id/main_msg_cpu_percent"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="12%"
                                    android:textColor="@color/white_100"
                                    android:textSize="@dimen/s24" />
                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="@dimen/d5"
                                android:text="@string/main_msg_cpu"
                                android:textColor="@color/black_87"
                                android:textSize="@dimen/s12" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/d10"
                        android:layout_marginTop="@dimen/d9">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/d9"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|right"
                            android:text="@string/main_msg_more"
                            android:textColor="#de42a5f5"
                            android:textSize="@dimen/s12" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginRight="@dimen/d24"
                            android:src="@mipmap/main_msg_1" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:orientation="vertical" />
                <!--守护信息-->
                <FrameLayout
                    android:id="@+id/main_guard_all"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/main_guard"
                    android:background="#e8e8e8">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:src="@mipmap/main_guard_1" />

                    <ImageView
                        android:id="@+id/main_guard_rotate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:src="@mipmap/main_guard_2" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/main_gurad_app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/s12" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/d2"
                            android:layout_toRightOf="@id/main_gurad_app_name"
                            android:text="@string/main_guard_title"
                            android:textColor="@color/black_54"
                            android:textSize="@dimen/s12" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/main_gurad_app_name"
                            android:layout_centerHorizontal="true"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/main_gurad_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11"
                                android:textColor="@color/black_54"
                                android:textSize="@dimen/s20" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/main_gurad_app_name"
