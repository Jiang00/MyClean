                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="@dimen/d4"
                                            android:src="@mipmap/main_cooling_button" />

                                        <com.vector.module.mView.CustomerTypefaceTextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/main_cooling_name"
                                            android:textColor="@color/A8"
                                            android:textSize="@dimen/s13" />
                                    </LinearLayout>

                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="0dp"
