<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A11"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title_sousuo" />
    </LinearLayout>
    <!--点击搜索按钮后的标题-->
    <FrameLayout
        android:id="@+id/search_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56"
        android:background="@color/A5"
        android:visibility="visible">

        <ImageView
            android:layout_width="@dimen/d333"
            android:layout_height="@dimen/d48"
            android:layout_gravity="center"
            android:background="@drawable/shape_radio" />

        <EditText
            android:id="@+id/search_edit_text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d48"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d28"
            android:layout_marginRight="@dimen/d42"
            android:background="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/edit_hint"
            android:singleLine="true"
            android:textColor="@color/A2"
            android:textColorHint="@color/A5"
            android:textSize="@dimen/s14" />

        <ImageView
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="@dimen/d16"
            android:src="@mipmap/edit_left_drawable" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:background="@color/A11">

        <ListView
            android:id="@+id/list_si"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:background="@color/B3"
            android:divider="@color/B1"
            android:dividerHeight="1px"
            android:scrollbars="none" />
    </FrameLayout>
</LinearLayout>