<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/d14"
    android:layout_marginRight="@dimen/d14"
    android:layout_marginTop="@dimen/d14"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.android.view.RoundImageView
            android:id="@+id/picture_icon"
            android:layout_width="@dimen/d90"
            android:layout_height="@dimen/d90" />

        <ImageView
            android:id="@+id/picture_check"
            android:layout_width="@dimen/d23"
            android:layout_height="@dimen/d23"
            android:layout_gravity="right|bottom"
            android:padding="@dimen/d3"
            android:scaleType="centerCrop"
            android:src="@mipmap/ram_normal" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d9"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/picture_hui_1" />

        <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/picture_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d8"
            android:text="000"
            android:textColor="#545454"
            android:textSize="@dimen/s12"
            app:typeface="ljh_1.TTF" />
    </LinearLayout>


</LinearLayout>