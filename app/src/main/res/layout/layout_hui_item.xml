<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/d8"
    android:layout_marginTop="@dimen/d8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d80">

        <ImageView
            android:id="@+id/picture_icon"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d80"
            android:scaleType="centerCrop" />
        <!-- android:background="@drawable/shape_pic_hui_3"-->
        <ImageView
            android:id="@+id/picture_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:src="@mipmap/ram_normal" />

        <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
            android:id="@+id/picture_time"
            android:layout_width="@dimen/d80"
            android:layout_height="@dimen/d80"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:alpha="0.4"
            android:background="@mipmap/hui_touying"
            android:gravity="center_horizontal|bottom"
            android:text="000"
            android:textColor="@color/A7"
            android:textSize="@dimen/s12" />
    </RelativeLayout>
</FrameLayout>