<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d8"
    android:layout_marginLeft="@dimen/d3"
    android:layout_marginRight="@dimen/d3"
    android:layout_marginTop="@dimen/d8"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/picture_icon"
            android:layout_width="@dimen/d112"
            android:layout_height="@dimen/d112" />

        <ImageView
            android:id="@+id/picture_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:scaleType="centerCrop"
            android:src="@mipmap/ram_normal" />
    </FrameLayout>

    <com.my.module.charge.saver.view.CustomerTypefaceTextView
        android:id="@+id/picture_time"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d27"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d112"
        android:gravity="center_vertical"
        android:text="000"
        android:textColor="@color/A7"
        android:textSize="@dimen/s12" />
</FrameLayout>