<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_picture"
            android:layout_width="@dimen/d72"
            android:layout_height="@dimen/d56"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tuiguang_icon"
                android:layout_width="@dimen/d36"
                android:layout_height="@dimen/d36"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/setting_picture" />
        </RelativeLayout>

        <com.fast.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/tuiguang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_picture"
            android:text="@string/side_picture"
            android:textColor="@color/A8"
            android:textSize="@dimen/s16" />

        <com.fast.module.charge.saver.view.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="AD"
            android:textColor="#ebebeb"
            android:textSize="@dimen/s10" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d16"
            android:src="@mipmap/setting_rig" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/d72"
        android:background="@color/A13" />
</LinearLayout>