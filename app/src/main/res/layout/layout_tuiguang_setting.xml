<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_file"
            android:layout_width="@dimen/d72"
            android:layout_height="@dimen/d72"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tuiguang_icon"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/tuiguang_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_file"
            android:textColor="#6f6f6f"
            android:textSize="@dimen/s14"
            app:typeface="ljh_1.TTF" />

        <ImageView
            android:layout_width="@dimen/d72"
            android:layout_height="@dimen/d72"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/B1" />
</LinearLayout>
