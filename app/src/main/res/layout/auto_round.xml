<?xml version="1.0" encoding="utf-8"?>
<com.frigate.layout.FrigateFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mutter.clean.junk.myview.RoundSd
        android:id="@+id/main_custom_sd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


    <com.frigate.view.AutoTextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="98px"
        android:text="@string/main_arc_sd"
        android:textColor="@color/A8"
        app:typeface="lyp_text.otf" />

    <com.frigate.layout.FrigateRelativeLayout
        android:id="@+id/memory_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="178px">

        <com.frigate.view.AutoTextView
            android:id="@+id/memory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="78"
            android:textColor="@color/A8"
            android:textSize="183px"
            android:textStyle="bold"
            app:typeface="lyp_text.otf" />

        <com.frigate.view.AutoTextView
            android:id="@+id/memory_danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/memory"
            android:layout_toRightOf="@id/memory"
            android:text="%"
            android:textColor="@color/A8"
            android:textSize="90px"
            />
    </com.frigate.layout.FrigateRelativeLayout>

    <com.frigate.view.AutoTextView
        android:id="@+id/usage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="385px"
        android:text="1.3/1.7GB"
        android:textColor="@color/A8"
        android:textSize="39px"
        />

</com.frigate.layout.FrigateFrameLayout>