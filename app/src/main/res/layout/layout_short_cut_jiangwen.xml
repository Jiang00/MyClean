<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/short_backg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <com.mutter.clean.junk.myview.BubbleLineLayout
        android:id="@+id/bubble_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/clean_button"
            android:layout_width="@dimen/d65"
            android:layout_height="@dimen/d65"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/d65"
                android:layout_height="@dimen/d65"
                android:layout_gravity="center"
                android:src="@mipmap/short_4" />


            <ImageView
                android:id="@+id/float_zhuan"
                android:layout_width="@dimen/d65"
                android:layout_height="@dimen/d65"
                android:layout_gravity="center"
                android:src="@mipmap/short_3" />


        </FrameLayout>
    </LinearLayout>


</FrameLayout>