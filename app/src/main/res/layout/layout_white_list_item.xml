<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d56"
        android:layout_height="@dimen/d56"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_le"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d8" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_zi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
            android:id="@+id/tv_name"
            android:layout_width="@dimen/d200"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="1111"
            android:textColor="@color/A8"
            android:textSize="@dimen/s16" />

        <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
            android:id="@+id/tv_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/white_list_tishi"
            android:textColor="#000000"
            android:textSize="@dimen/s12"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/d24"
        android:layout_height="@dimen/d24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d8"
        android:src="@mipmap/white_add" />
</RelativeLayout>