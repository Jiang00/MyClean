<?xml version="1.0" encoding="utf-8"?>
<com.frigate.layout.FrigateFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/main_circle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@mipmap/air_backg"
            android:src="@mipmap/air_main" />

        <com.frigate.layout.FrigateFrameLayout
            android:id="@+id/main_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/air_backg"
            android:visibility="gone">

            <ImageView
                android:id="@+id/lot_family"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/air_ad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="36px"
                android:layout_marginTop="18px"
                android:text="AD"
                android:textColor="@color/white_20"
                android:textSize="21px" />

        </com.frigate.layout.FrigateFrameLayout>
</com.frigate.layout.FrigateFrameLayout>