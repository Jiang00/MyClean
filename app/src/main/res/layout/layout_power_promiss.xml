<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_54"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/d280"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d30"
            android:src="@mipmap/power_promiss_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d10"
            android:text="@string/app_name"
            android:textColor="@color/black_100"
            android:textSize="@dimen/s15" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d36"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d8"
            android:gravity="center"
            android:text="@string/power_promiss_1"
            android:textColor="@color/black_54"
            android:textSize="@dimen/s12" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/power_promiss_2" />

    <TextView
        android:layout_width="@dimen/d161"
        android:layout_height="@dimen/d36"
        android:layout_marginTop="@dimen/d8"
        android:background="@drawable/shape_round_a1"
        android:gravity="center"
        android:text="@string/power_promiss_2"
        android:textColor="@color/white_100"
        android:textSize="@dimen/s14" />
</LinearLayout>

