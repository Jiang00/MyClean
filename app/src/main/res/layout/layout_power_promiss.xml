<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center">


    <LinearLayout
        android:layout_width="@dimen/d237"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:src="@mipmap/icon" />

        <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d24"
            android:gravity="center"
            android:text="@string/power_promiss_1"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s11" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d72"
            android:layout_marginTop="@dimen/d24">

            <RelativeLayout
                android:id="@+id/permision_r"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d44"
                android:background="@color/white_100"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aaa"
                    android:layout_width="@dimen/d26"
                    android:layout_height="@dimen/d26"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d16"
                    android:background="@mipmap/icon" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/d16"
                    android:layout_toRightOf="@id/aaa"
                    android:fontFamily="sans-serif"
                    android:text="@string/app_name"
                    android:textColor="#249afd"
                    android:textSize="@dimen/s14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/side_check_passed" />
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@mipmap/permiss_2" />
        </RelativeLayout>

        <TextView
            android:layout_width="@dimen/d160"
            android:layout_height="@dimen/d37"
            android:background="@drawable/shape_ffffff_k_10"
            android:gravity="center"
            android:text="@string/premiss_5"
            android:textColor="@color/white_40"
            android:textSize="@dimen/s12" />
    </LinearLayout>
</LinearLayout>

