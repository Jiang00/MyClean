<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center">


    <LinearLayout
        android:layout_width="@dimen/d333"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ad"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d44"
            android:background="@drawable/shape_a1"
            android:gravity="center">

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:text="@string/power_promiss_1"
                android:textColor="@color/A0"
                android:textSize="@dimen/s16" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/power_promiss_2"
            android:textColor="#888888"
            android:textSize="@dimen/activity_horizontal_margin" />

        <RelativeLayout
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d16"
            android:background="@color/A0"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/a"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d24"
                android:background="@mipmap/icon" />

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d12"
                android:layout_toRightOf="@id/a"
                android:text="@string/app_name"
                android:textColor="#888888"
                android:textSize="@dimen/s16" />

            <ImageView
                android:id="@+id/check_jurisdiction"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/d24"
                android:src="@mipmap/side_check_passed" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d36"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="#cdcdcd"
                android:textSize="@dimen/s16" />

            <TextView
                android:layout_width="@dimen/d100"
                android:layout_height="@dimen/d36"
                android:layout_marginLeft="@dimen/d72"
                android:background="@drawable/shape_a5_r"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

