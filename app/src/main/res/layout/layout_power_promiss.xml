<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_a1_r">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/d8"
            android:src="@mipmap/permiss_delete" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:orientation="vertical">

            <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                android:id="@+id/bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d19"
                android:fontFamily="sans-serif"
                android:text="@string/permission_1"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s13" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d56"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:layout_marginTop="@dimen/d18"
                android:background="@drawable/shape_ffffff_r"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aaa"
                    android:layout_width="@dimen/d33"
                    android:layout_height="@dimen/d33"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d16"
                    android:background="@mipmap/icon" />

                <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/d12"
                    android:layout_toRightOf="@id/aaa"
                    android:fontFamily="sans-serif"
                    android:text="@string/app_name"
                    android:textColor="@color/A9"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/side_check_passed" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16"
                android:layout_marginTop="@dimen/d20"
                android:text="@string/permission_2"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s13" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d78"
            android:background="@mipmap/promiss_shou" />
    </FrameLayout>

    <TextView
        android:layout_width="@dimen/d217"
        android:layout_height="@dimen/d44"
        android:layout_marginTop="@dimen/d20"
        android:background="@drawable/shape_ffffff_k"
        android:gravity="center"
        android:text="@string/premiss_5"
        android:textColor="@color/white_100"
        android:textSize="@dimen/activity_horizontal_margin" />
</LinearLayout>

