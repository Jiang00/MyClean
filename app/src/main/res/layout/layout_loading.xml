<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp" />


    <LinearLayout
        android:id="@+id/loading_text_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/d20"
        android:visibility="invisible"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:src="@mipmap/loading_1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d12"
            android:orientation="vertical">

            <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16"
                />

            <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/loading_text_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d4"
                android:text="@string/loading_2"
                android:textColor="@color/white_80"
                android:textSize="@dimen/s11"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
