<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/loading_1" />-->

    <ImageView
        android:layout_width="@dimen/d60"
        android:layout_height="@dimen/d60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d240"
        android:src="@mipmap/side_icon" />

    <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
        android:id="@+id/loading_text_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d8"
        android:text="@string/app_name"
        android:textColor="@color/A7"
        android:textSize="@dimen/s15" />

    <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
        android:id="@+id/loading_text_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d8"
        android:text="@string/side_describe"
        android:textColor="@color/A17"
        android:textSize="@dimen/s14" />
</LinearLayout>
