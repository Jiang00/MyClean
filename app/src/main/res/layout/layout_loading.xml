<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <!--<ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/loading_1" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d217"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/loading_1"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/d45"
                android:layout_height="@dimen/d39"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d26"
                android:src="@mipmap/loading_2" />

            <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginTop="@dimen/d27"
                android:text="@string/app_name"
                android:textColor="@color/A1"
                android:textSize="@dimen/s20" />

            <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/d27"
                android:layout_marginRight="@dimen/d10"
                android:layout_marginTop="@dimen/d12"
                android:text="@string/loading_2"
                android:textColor="@color/A1"
                android:textSize="@dimen/s12" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
