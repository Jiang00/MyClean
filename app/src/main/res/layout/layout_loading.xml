<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_tiaoguo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="@string/loading_tiaoguo"
            android:textColor="#4cffffff"
            android:textSize="12sp"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/tv_tiaoguo"
            android:orientation="vertical"
            android:visibility="invisible" />
    </LinearLayout>


    <com.fast.module.charge.saver.view.CustomerTypefaceTextView
        android:id="@+id/load_text_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/d20"
        android:layout_marginLeft="@dimen/d30"
        android:text="@string/loading_3"
        android:textColor="@color/A12"
        android:textSize="@dimen/s12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/load_text_3"
        android:layout_marginBottom="@dimen/d12"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/loading_2"
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/d30"
            android:src="@mipmap/loading_icon" />

        <LinearLayout
            android:id="@+id/loading_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d4"
            android:orientation="vertical">

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/A7"
                android:textSize="@dimen/s19" />

            <com.fast.module.charge.saver.view.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_2"
                android:textColor="@color/A7"
                android:textSize="@dimen/s13" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
