<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/manager_permision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d50"
            android:layout_marginRight="@dimen/d50"
            android:layout_marginTop="@dimen/d18"
            android:gravity="center"
            android:text="@string/premiss_2"
            android:textColor="@color/A1"
            android:textSize="@dimen/s15" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d27">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/manager_per_1" />

            <ImageView
                android:id="@+id/manager_shouquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="-10dp"
                android:src="@mipmap/manager_per_2" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>