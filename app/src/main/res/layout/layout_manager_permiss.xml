<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/manager_permision"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="vertical">

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/premiss_1"
            android:textColor="#7d86a3"
            android:textSize="16sp" />

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="22dp"
            android:gravity="center"
            android:text="@string/premiss_2"
            android:textColor="#c0c7d6"
            android:textSize="16sp" />

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/manager_shouquan"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="@dimen/d90"
            android:layout_height="@dimen/d40"
            android:layout_marginTop="20dp"
            android:background="@color/A1"
            android:gravity="center"
            android:text="@string/premiss_5"
            android:textColor="@color/white_100"
            android:textSize="16dp" />
    </LinearLayout>
</LinearLayout>