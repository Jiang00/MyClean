<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:elevation="@dimen/d4"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <include layout="@layout/layout_title" />
        </LinearLayout>

        <com.security.module.mView.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/d36"
            android:layout_marginRight="@dimen/d36"
            android:layout_marginTop="@dimen/d36"
            android:text="@string/notifi_ani_2"
            android:textColor="@color/Z1"
            android:textSize="@dimen/s20" />

        <FrameLayout
            android:layout_width="@dimen/d225"
            android:layout_height="@dimen/d425"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d30">

            <ImageView
                android:layout_width="@dimen/d225"
                android:layout_height="@dimen/d425"
                android:src="@mipmap/notifi_animation" />

            <LinearLayout
                android:id="@+id/notifi_animation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d61"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/notifi_animation_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/notifi_animation_2" />

                <ImageView
                    android:id="@+id/notifi_animation_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d6"
                    android:src="@mipmap/notifi_animation_3" />

                <ImageView
                    android:id="@+id/notifi_animation_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d6"
                    android:src="@mipmap/notifi_animation_4" />

                <ImageView
                    android:id="@+id/notifi_animation_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d6"
                    android:src="@mipmap/notifi_animation_5" />
            </LinearLayout>

            <ImageView
                android:id="@+id/notifi_animation_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d61"
                android:src="@mipmap/notifi_animation_1"
                android:visibility="invisible" />
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/notifi_info_text"
            android:layout_width="@dimen/d208"
            android:layout_height="@dimen/d48"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button"
            android:text="@string/notifi_info_2"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16"
            android:visibility="invisible" />
    </RelativeLayout>
</FrameLayout>