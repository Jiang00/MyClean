<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <com.vector.module.mView.CustomerTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d72"
            android:gravity="center"
            android:text="@string/notifi_ani_1"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s13" />

        <com.vector.module.mView.CustomerTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/notifi_ani_2"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s13" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d30"
            android:src="@mipmap/notifi_animation" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/notifi_info_text"
            android:layout_width="@dimen/d250"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_ffffff_round"
            android:text="@string/notifi_info_2"
            android:textColor="@color/A1"
            android:textSize="@dimen/s16"
            android:visibility="invisible" />
    </RelativeLayout>
</FrameLayout>