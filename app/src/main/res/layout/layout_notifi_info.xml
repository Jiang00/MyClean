<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d72"
            android:gravity="center"
            android:text="@string/notifi_1"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s17"
            app:typeface="eos_clean.otf" />

        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/d33"
            android:gravity="center"
            android:text="@string/notifi_2"
            android:textColor="@color/A8"
            android:textSize="@dimen/s17"
            app:typeface="eos_clean.otf" />

        <com.sample.lottie.LottieAnimationView
            android:id="@+id/notifi_info_lot"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/d30"
            android:layout_marginRight="@dimen/d30"
            android:layout_weight="1" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/notifi_info_text"
            android:layout_width="@dimen/d168"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button"
            android:text="@string/notifi_info_2"
            android:textColor="#ffffff"
            android:textSize="@dimen/s15"
            android:visibility="invisible" />
    </RelativeLayout>
</FrameLayout>