<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_all_cercle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_t"
    android:background="@color/app_color_first">

    <FrameLayout
        android:id="@+id/main_scale_all"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_t"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/main_cpu_air_button"
            android:layout_width="@dimen/circle_yuan1"
            android:layout_height="@dimen/circle_yuan1"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/circle_1"
            android:layout_marginTop="@dimen/d4">

            <com.supers.clean.junk.customeview.CustomRoundCpu
                android:id="@+id/main_custom_cpu"
                android:layout_width="@dimen/circle_yuan1"
                android:layout_height="@dimen/circle_yuan1"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_cpu_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/d4"
                    android:text="33â„ƒ"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s21"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/main_arc_cpu"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_sd_air_button"
            android:layout_width="@dimen/circle_yuan2"
            android:layout_height="@dimen/circle_yuan2"
            android:layout_marginLeft="@dimen/circle_yuan2_left"
            android:layout_marginTop="@dimen/circle_yuan2_top">

            <com.supers.clean.junk.customeview.CustomRoundCpu
                android:id="@+id/main_custom_sd"
                android:layout_width="@dimen/circle_yuan2"
                android:layout_height="@dimen/circle_yuan2"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_sd_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/d4"
                    android:layout_marginTop="@dimen/d10"
                    android:text="78%"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s38"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_sd_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/d4"
                    android:text="1.3/1.7GB"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/main_arc_sd"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s11" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/main_ram_air_button"
            android:layout_width="@dimen/circle_yuan3"
            android:layout_height="@dimen/circle_yuan3"
            android:layout_marginLeft="@dimen/circle_yuan3_left"
            android:layout_marginTop="@dimen/circle_yuan3_top">

            <com.supers.clean.junk.customeview.CustomRoundCpu
                android:id="@+id/main_custom_ram"
                android:layout_width="@dimen/circle_yuan3"
                android:layout_height="@dimen/circle_yuan3"
                android:layout_centerInParent="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_ram_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/d4"
                    android:layout_marginTop="@dimen/d10"
                    android:text="78%"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s48"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/main_ram_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/d4"
                    android:text="1.3/1.7GB"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/main_arc_ram"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s11" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_air_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:orientation="vertical"
            android:paddingRight="@dimen/d17">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/main_air" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/main_air_smoke" />

        </LinearLayout>
    </FrameLayout>

</FrameLayout>
