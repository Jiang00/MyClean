<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B2">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d26"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_marginLeft="@dimen/d26"
                android:src="@mipmap/icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d14"
                android:text="@string/app_name"
                android:textColor="#36465d"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d26"
            android:layout_marginRight="@dimen/d26"
            android:layout_marginTop="@dimen/d30"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="158"
                android:textColor="@color/A4"
                android:textSize="@dimen/s20" />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:layout_marginLeft="@dimen/d5"
                android:layout_toRightOf="@id/tv_size"
                android:text="KB "
                android:textColor="#36465d"
                android:textSize="@dimen/s14" />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:text="@string/unload_canyu"
                android:textColor="#36465d"
                android:textSize="@dimen/s14" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/d20"
            android:layout_marginTop="@dimen/d25"
            android:gravity="center"
            android:orientation="horizontal">

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/bt_quxiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/d6"
                android:paddingLeft="@dimen/d19"
                android:paddingRight="@dimen/d19"
                android:paddingTop="@dimen/d5"
                android:text="@string/premiss_4"
                android:textColor="#4285f4"
                android:textSize="@dimen/s14" />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/bt_queren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/d6"
                android:paddingLeft="@dimen/d19"
                android:paddingRight="@dimen/d19"
                android:paddingTop="@dimen/d5"
                android:text="@string/premiss_3"
                android:textColor="#4285f4"
                android:textSize="@dimen/s14" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</RelativeLayout>