<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/B2">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d14"
            android:textColor="@color/A6"
            android:textSize="@dimen/s16"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d14"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:src="@mipmap/icon" />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d5"
                android:text="158"
                android:textColor="@color/A4"
                android:textSize="@dimen/s20"
                 />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:layout_marginLeft="@dimen/d5"
                android:layout_toRightOf="@id/tv_size"
                android:text="KB "
                android:textColor="@color/B3"
                android:textSize="@dimen/s14"
                 />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:text="@string/unload_canyu"
                android:textColor="@color/B3"
                android:textSize="@dimen/s14"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d10"
            android:layout_marginTop="@dimen/d24"
            android:gravity="center"
            android:orientation="horizontal">

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/bt_quxiao"
                android:layout_width="@dimen/d125"
                android:layout_height="@dimen/d36"
                android:background="@drawable/shape_rotate_bad"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/B3"
                android:textSize="@dimen/s13"
                 />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/bt_queren"
                android:layout_width="@dimen/d125"
                android:layout_height="@dimen/d36"
                android:background="@drawable/shape_rotate_good"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="@color/A8"
                android:textSize="@dimen/s13"
                 />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:orientation="vertical" />
</RelativeLayout>