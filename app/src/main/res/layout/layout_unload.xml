<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d234"
            android:background="@color/A1">

            <ImageView
                android:id="@+id/iv_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d8"
                android:layout_marginTop="@dimen/d8"
                android:src="@mipmap/unload_delete" />

            <ImageView
                android:id="@+id/zhuangshi"
                android:layout_width="@dimen/d160"
                android:layout_height="@dimen/d127"
                android:layout_centerVertical="true"
                android:src="@mipmap/unload_tong" />


            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/zhuangshi"
                android:text="158"
                android:textColor="@color/A2"
                android:textSize="@dimen/s21" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:layout_toRightOf="@id/tv_size"
                android:text="KB "
                android:textColor="@color/A2"
                android:textSize="@dimen/s21" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:layout_toRightOf="@id/tv_danwei"
                android:text="@string/unload_canyu"
                android:textColor="@color/A7"
                android:textSize="@dimen/s15" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/d8"
            android:paddingTop="@dimen/d8">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/bt_quxiao"
                android:layout_width="@dimen/d70"
                android:layout_height="@dimen/d24"
                android:background="@color/A16"
                android:text="@string/quxiao"
                android:textColor="@color/A5"
                android:textSize="@dimen/s15" />


            <Button
                android:id="@+id/bt_queren"
                android:layout_width="@dimen/d70"
                android:layout_height="@dimen/d24"
                android:layout_marginLeft="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:background="@color/A7"
                android:text="@string/qingli"
                android:textColor="@color/A1"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:layout_marginTop="@dimen/d8"
        android:orientation="vertical" />
</RelativeLayout>