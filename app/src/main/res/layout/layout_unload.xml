<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d141"
            android:background="@mipmap/unload_bg">

            <ImageView
                android:id="@+id/iv_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/d8"
                android:src="@mipmap/unload_delete" />

            <TextView
                android:id="@+id/unload_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginTop="@dimen/d24"
                android:text="@string/setting_unload"
                android:textColor="@color/A5"
                android:textSize="@dimen/s18" />

            <com.myboost.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/unload_tv"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginTop="@dimen/d20"
                android:text="158"
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />

            <com.myboost.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/tv_danwei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:layout_toRightOf="@id/tv_size"
                android:text="KB "
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />

            <com.myboost.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tv_size"
                android:layout_toRightOf="@id/tv_danwei"
                android:text="@string/unload_canyu"
                android:textColor="@color/B3"
                android:textSize="@dimen/s14" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/B3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/bt_queren"
                android:layout_width="@dimen/d75"
                android:layout_height="@dimen/d20"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:background="@color/B3"
                android:gravity="center"
                android:text="@string/qingli"
                android:textColor="@color/A1"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/bt_quxiao"
                android:layout_width="@dimen/d75"
                android:layout_height="@dimen/d20"
                android:layout_marginBottom="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:layout_toLeftOf="@id/bt_queren"
                android:background="@color/B3"
                android:gravity="center"
                android:text="@string/quxiao"
                android:textColor="@color/A4"
                android:textSize="@dimen/s14" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:layout_marginTop="@dimen/d10"
        android:orientation="vertical" />
</RelativeLayout>