<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/junk_item_rl"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d72"
        android:layout_marginLeft="@dimen/d16">

        <ImageView
            android:id="@+id/junk_item_icon"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d56"
        android:layout_toRightOf="@id/junk_item_rl"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/junk_item_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="app标题"
            android:textColor="@color/A2"
            android:textSize="@dimen/s16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/d6">

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:id="@+id/item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="app标题"
                android:textColor="@color/A3"
                android:textSize="@dimen/s14" />

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:id="@+id/size_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d25"
                android:layout_toLeftOf="@id/check_iv"
                android:text="size"
                android:textColor="@color/A3"
                android:textSize="@dimen/s14" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/check_iv"
        android:layout_width="@dimen/d24"
        android:layout_height="@dimen/d24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d16"
        android:src="@mipmap/ram_passed" />

</RelativeLayout>