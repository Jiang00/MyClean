<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/junk_item_rl"
        android:layout_width="@dimen/d64"
        android:layout_height="@dimen/d56">

        <ImageView
            android:id="@+id/junk_item_icon"
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d8" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d56"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/junk_item_rl"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
            android:id="@+id/junk_item_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="25"
            android:text="app标题"
            android:textColor="@color/A2"
            android:textSize="@dimen/s16" />

        <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d3"
            android:text="17-03-16"
            android:textColor="@color/A4"
            android:textSize="@dimen/s12" />
    </LinearLayout>

    <ImageView
        android:id="@+id/check_iv"
        android:layout_width="@dimen/d24"
        android:layout_height="@dimen/d24"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d8" />

    <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
        android:id="@+id/size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/check_iv"
        android:text="size"
        android:textColor="@color/A4"
        android:textSize="@dimen/s14" />
</RelativeLayout>