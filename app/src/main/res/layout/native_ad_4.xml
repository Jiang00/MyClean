<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/white_100"
        android:padding="@dimen/d12">


        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_image"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="@dimen/d65"
                android:layout_height="@dimen/d65"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d8"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-regular"
                    android:singleLine="true"
                    android:tag="ad_title"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s15"
                    tools:text="Your see" />

                <TextView
                    android:id="@+id/ad_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="@dimen/d4"
                    android:fontFamily="sans-serif-light"
                    android:lines="2"
                    android:tag="ad_desc"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s11"
                    tools:text="Your see Your see Your see Your see" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/ll"
            android:layout_marginTop="@dimen/d4"
            android:tag="ad_action"
            android:text="Install"
            android:textColor="#1e88e5"
            android:textSize="@dimen/s11" />
    </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ad" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/d3"
        android:layout_marginTop="@dimen/d3"
        android:orientation="horizontal"
        android:tag="ad_choices" />
</RelativeLayout>