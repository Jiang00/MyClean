<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/netmon_item_rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d56">

        <ImageView
            android:id="@+id/iv_netmonitem_icon"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/netmon_item_rl"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_netmonitem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="app标题"
            android:textColor="@color/A6"
            android:textSize="@dimen/s16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/netdownsmall" />

            <TextView
                android:id="@+id/tv_netmonitem_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d4"
                android:text="0 KB/s"
                android:textColor="@color/A6_54"
                android:textSize="@dimen/s11" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:src="@mipmap/netupsmall" />

            <TextView
                android:id="@+id/tv_netmonitem_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d4"
                android:text="0 KB/s"
                android:textColor="@color/A6_54"
                android:textSize="@dimen/s11" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_netmonitem_stop"
        android:layout_width="@dimen/d50"
        android:layout_height="@dimen/d27"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_a1_r"
        android:text="@string/stop"
        android:textColor="@color/white_100"
        android:textSize="@dimen/d12" />

</RelativeLayout>