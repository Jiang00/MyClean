                    android:background="#f1f1f1" />

                <LinearLayout
                    android:id="@+id/file_other_button"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d72"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
