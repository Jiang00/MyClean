                        android:layout_marginLeft="@dimen/d16"
                        android:orientation="vertical">

                        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/file_pther"
                            android:textColor="@color/A2"
                            android:textSize="@dimen/s16" />

                        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                            android:id="@+id/file_qita_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d6"
                            android:text="dd"
                            android:textColor="@color/A3"
                            android:textSize="@dimen/s14" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d16"
                        android:src="@mipmap/more" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d1"
                    android:layout_marginLeft="@dimen/d72"
                    android:layout_marginRight="@dimen/d16"
                    android:background="#f1f1f1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white_100"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>