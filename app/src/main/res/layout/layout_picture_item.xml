<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/picture_icon"
        android:layout_width="@dimen/d146"
        android:layout_height="@dimen/d84"
        android:layout_margin="@dimen/d8"
        android:background="@color/white_100"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/picture_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d5"
        android:layout_marginTop="@dimen/d6"
        android:src="@mipmap/picture_xing" />

    <ImageView
        android:id="@+id/picture_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:paddingBottom="@dimen/d10"
        android:paddingRight="@dimen/d10"
        android:src="@mipmap/ram_normal" />


</FrameLayout>