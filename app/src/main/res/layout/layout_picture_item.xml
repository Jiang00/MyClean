<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/d9"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginRight="@dimen/d10"
        android:layout_marginTop="@dimen/d9">

        <com.android.view.RoundImageView
            android:id="@+id/picture_icon"
            android:layout_width="@dimen/d90"
            android:layout_height="@dimen/d90"
            android:background="@color/white_100"
            android:scaleType="centerCrop"
            />


        <ImageView
            android:id="@+id/picture_check"
            android:layout_width="@dimen/d23"
            android:layout_height="@dimen/d23"
            android:layout_gravity="bottom|right"
            android:padding="@dimen/d3"
            android:src="@mipmap/ram_normal" />
    </FrameLayout>

    <ImageView
        android:id="@+id/picture_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d10"
        android:layout_marginTop="@dimen/d5"
        android:src="@mipmap/picture_xing" />
</FrameLayout>