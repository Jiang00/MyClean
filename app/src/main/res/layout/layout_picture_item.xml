<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d6"
    android:layout_marginLeft="@dimen/d10"
    android:layout_marginRight="@dimen/d10"
    android:layout_marginTop="@dimen/d6"
    android:orientation="vertical">

    <com.supers.clean.junk.customeview.RoundImageView
        android:id="@+id/picture_icon"
        android:layout_width="@dimen/d90"
        android:layout_height="@dimen/d90"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/picture_best"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:src="@mipmap/picture_xing" />

    <com.supers.clean.junk.customeview.RoundImageView
        android:id="@+id/picture_yinying"
        android:layout_width="@dimen/d90"
        android:layout_height="@dimen/d90"
        android:background="@color/black_35"
        android:scaleType="centerCrop"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/picture_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:paddingRight="@dimen/d3"
        android:paddingTop="@dimen/d3"
        android:src="@mipmap/ram_normal" />

</FrameLayout>