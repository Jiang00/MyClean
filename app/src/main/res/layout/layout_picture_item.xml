<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/d8"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/picture_icon"
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d80"
        android:scaleType="centerCrop" />
    <!--android:background="@drawable/shape_pic_hui_3"-->

    <ImageView
        android:id="@+id/picture_best"
        android:layout_width="@dimen/d21"
        android:layout_height="@dimen/d20"
        android:src="@mipmap/picture_xing" />

    <ImageView
        android:id="@+id/picture_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:src="@mipmap/ram_normal" />
</FrameLayout>