<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.easy.junk.easyactivity.MainActivity">

    <include layout="@layout/activity_main" />

    <com.easy.junk.easycustomview.MainFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff">
        <!-- android:layout_gravity="start"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">

            <!--侧边栏头部-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d172"
                android:background="@mipmap/sidebeijing"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d24" />

                <ImageView
                    android:layout_width="@dimen/d45"
                    android:layout_height="@dimen/d45"
                    android:layout_marginTop="@dimen/d38"
                    android:src="@mipmap/side_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:text="@string/app_name"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d4"
                    android:text="@string/side_describe"
                    android:textColor="#b3ffffff"
                    android:textSize="@dimen/s9" />
            </LinearLayout>
            <!--ad-->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/A17"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_ad_side"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/A7"
                    android:orientation="vertical" />
            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/A17"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/A7"
                    android:orientation="vertical">

                    <com.easy.junk.easycustomview.ListViewForScrollView
                        android:id="@+id/side_listview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@color/A7"
                        android:dividerHeight="0dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </com.easy.junk.easycustomview.MainFrameLayout>
</android.support.v4.widget.DrawerLayout>
