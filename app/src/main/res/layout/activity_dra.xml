<?xml version="1.0" encoding="utf-8"?>
<com.frigate.layout.AutoDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:jsonfile="main.json"
    tools:context="com.mutter.clean.junk.myActivity.MainActivity">

    <include layout="@layout/activity_main" />

    <com.mutter.clean.junk.myview.MainLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#ffffff"
        android:orientation="vertical">
        <!--android:layout_gravity="start"-->


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="438px"
            android:background="@color/A1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/side_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/side_title_1" />


            <ImageView
                android:layout_width="116px"
                android:layout_height="139px"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="144px"
                android:src="@mipmap/side_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="313px"
                android:text="@string/app_name"
                android:textColor="@color/A8"
                android:textSize="39px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="364px"
                android:text="@string/loading_2"
                android:textColor="@color/A8"
                android:textSize="27px" />

            <com.mutter.clean.junk.myview.conpentview.AutoNativeAdView
                android:layout_width="match_parent"
                app:ad_layout="@layout/native_ad_5"
                app:roundRadius="9px"
                android:layout_gravity="bottom"
                app:soildColor="@color/white_100"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </FrameLayout>

        <com.mutter.clean.junk.myview.MyScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.mutter.clean.junk.myview.conpentview.AutoSlideListView
                    android:tag="slide_listView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24px"
                    android:divider="#00000000"
                    android:dividerHeight="0dp" />

                <RelativeLayout
                    android:id="@+id/tuiguang_side_title"
                    android:layout_width="match_parent"
                    android:layout_height="120px"
                    android:background="@color/A10">

                    <com.frigate.view.AutoImageView
                        android:id="@+id/line"
                        android:layout_width="6px"
                        android:layout_height="39px"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="48px"
                        android:src="@mipmap/setting_line" />

                    <com.frigate.view.AutoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15px"
                        android:layout_toRightOf="@id/line"
                        android:text="Family"
                        android:textColor="@color/A5"
                        android:textSize="39px"
                        app:typeface="lyp_text.otf" />

                    <com.frigate.view.AutoTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/black_10"
                        android:textSize="27px" />

                </RelativeLayout>

                <com.mutter.clean.junk.myview.conpentview.AutoTuiguangView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:types_of="slide" />
            </LinearLayout>
        </com.mutter.clean.junk.myview.MyScrollView>


    </com.mutter.clean.junk.myview.MainLinearLayout>

</com.frigate.layout.AutoDrawerLayout>
