<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <include layout="@layout/layout_title" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/null_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/null_doc" />

            <com.myboost.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d16"
                android:text="@string/file_null"
                android:textColor="@color/A4"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/file_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/file_progressbar"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:indeterminateTint="@color/A1"
                android:indeterminateTintMode="src_atop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:id="@+id/view_pager_tab"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d48"
                    android:background="@color/A1"
                    app:tabIndicatorColor="@color/A14"
                    app:tabIndicatorHeight="@dimen/d2"
                    app:tabSelectedTextColor="@color/A5"
                    app:tabTextAppearance="@style/tablayout_textSize"
                    app:tabTextColor="@color/A6" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <android.support.v4.view.ViewPager
                        android:id="@+id/doc_view_pager"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/file_clean_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d56"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/A5">

                    <TextView
                        android:id="@+id/file_button_clean"
                        android:layout_width="@dimen/d333"
                        android:layout_height="@dimen/d43"
                        android:layout_centerInParent="true"
                        android:background="@drawable/main_haoping"
                        android:gravity="center"
                        android:text="@string/picture_14"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s16" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>