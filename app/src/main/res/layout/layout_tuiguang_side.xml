<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="?selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d67"
        android:layout_height="@dimen/d50"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuiguang_icon"
            android:layout_width="@dimen/d24"
            android:layout_height="@dimen/d24"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
        android:id="@+id/tuiguang_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:text="aaaaaaa"
        android:textColor="#1c1f24"
        android:textSize="@dimen/s14"
        app:typeface="ljh_1.TTF" />


</RelativeLayout>