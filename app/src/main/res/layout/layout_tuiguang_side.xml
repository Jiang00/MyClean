<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d53"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuiguang_icon"
            android:layout_width="@dimen/d24"
            android:layout_height="@dimen/d24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp" />

    </RelativeLayout>

    <com.fast.module.charge.saver.view.CustomerTypefaceTextView
        android:id="@+id/tuiguang_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:text="aaaaaaa"
        android:textColor="@color/A8"
        android:textSize="@dimen/s14" />

    <com.fast.module.charge.saver.view.CustomerTypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="AD"
        android:textColor="#ebebeb"
        android:textSize="@dimen/s10" />

</RelativeLayout>