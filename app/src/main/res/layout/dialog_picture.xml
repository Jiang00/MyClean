<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_35"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/d33"
        android:layout_marginRight="@dimen/d33"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/delete_queren"
            android:textColor="@color/A2"
            android:textSize="@dimen/s16" />

        <LinearLayout
            android:id="@+id/image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="@dimen/d56"
                android:layout_height="@dimen/d56"
                android:layout_marginLeft="@dimen/d24" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="@dimen/d56"
                android:layout_height="@dimen/d56"
                android:layout_marginLeft="@dimen/d3" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="@dimen/d56"
                android:layout_height="@dimen/d56"
                android:layout_marginLeft="@dimen/d3" />

            <ImageView
                android:id="@+id/image_4"
                android:layout_width="@dimen/d56"
                android:layout_height="@dimen/d56"
                android:layout_marginLeft="@dimen/d3" />
        </LinearLayout>

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d13"
            android:text="@string/picture_1"
            android:textColor="@color/A2"
            android:textSize="@dimen/s14" />

        <ProgressBar
            android:id="@+id/delete_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d3"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d30"
            android:progress="100"
            android:progressDrawable="@drawable/pic_progress"
            android:visibility="gone" />

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d13"
            android:text="@string/picture_2"
            android:textColor="@color/A2"
            android:textSize="@dimen/s14" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d32"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ok"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/d114"
                android:layout_height="@dimen/d36"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_button"
                android:text="@string/premiss_3"
                android:textColor="@color/A0"
                android:textSize="@dimen/s15" />

            <Button
                android:id="@+id/cancle"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/d114"
                android:layout_height="@dimen/d36"
                android:layout_alignParentLeft="true"
                android:background="@drawable/shape_button"
                android:text="@string/premiss_4"
                android:textColor="@color/A0"
                android:textSize="@dimen/s15" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>