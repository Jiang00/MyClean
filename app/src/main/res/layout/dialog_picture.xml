<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/d333"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d26"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_marginLeft="@dimen/d26"
                android:src="@mipmap/icon" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d14"
                android:text="@string/delete_title"
                android:textColor="#36465d"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <TextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d26"
            android:layout_marginRight="@dimen/d26"
            android:layout_marginTop="@dimen/d30"
            android:text="@string/delete_message"
            android:textColor="#36465d"
            android:textSize="@dimen/s14" />

        <LinearLayout
            android:id="@+id/progress_lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d20"
            android:layout_marginRight="@dimen/d20"
            android:layout_marginTop="@dimen/d14"
            android:orientation="vertical"
            android:visibility="gone">

            <ProgressBar
                android:id="@+id/delete_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d4"
                android:progress="0"
                android:progressDrawable="@drawable/pic_progress" />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:text="1/2"
                android:textColor="@color/B3"
                android:textSize="@dimen/s9" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/d20"
            android:layout_marginTop="@dimen/d25"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/d6"
                android:paddingLeft="@dimen/d19"
                android:paddingRight="@dimen/d19"
                android:paddingTop="@dimen/d5"
                android:text="@string/premiss_4"
                android:textColor="#4285f4"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/d6"
                android:paddingLeft="@dimen/d19"
                android:paddingRight="@dimen/d26"
                android:paddingTop="@dimen/d5"
                android:text="@string/premiss_3"
                android:textColor="#4285f4"
                android:textSize="@dimen/s14" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>