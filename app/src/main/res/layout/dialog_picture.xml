<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_35"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/d33"
        android:layout_marginRight="@dimen/d33"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">


        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d24"
            android:text="@string/picture_1"
            android:textColor="@color/black_70"
            android:textSize="@dimen/s12"
            app:typeface="ljh_1.TTF" />

        <LinearLayout
            android:id="@+id/image_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d17"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_1"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d63"
                android:layout_marginLeft="@dimen/d24" />

            <ImageView
                android:id="@+id/image_2"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d63"
                android:layout_marginLeft="@dimen/d24" />

            <ImageView
                android:id="@+id/image_3"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d63"
                android:layout_marginLeft="@dimen/d24" />

            <ImageView
                android:id="@+id/image_4"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d63"
                android:layout_marginLeft="@dimen/d24" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/delete_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d3"
            android:layout_marginLeft="@dimen/d18"
            android:layout_marginRight="@dimen/d18"
            android:layout_marginTop="@dimen/d30"
            android:progress="100"
            android:progressDrawable="@drawable/pic_progress"
            android:visibility="gone" />

        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d18"
            android:layout_marginTop="@dimen/d9"
            android:text="@string/picture_2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/s12"
            app:typeface="ljh_1.TTF" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginTop="@dimen/d20"
            android:orientation="horizontal">

            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/ok"
                android:layout_width="@dimen/d112"
                android:layout_height="@dimen/d36"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d27"
                android:background="@color/A1"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="#ffffff"
                android:textSize="@dimen/s16"
                app:typeface="ljh_1.TTF" />

            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/cancle"
                android:layout_width="@dimen/d112"
                android:layout_height="@dimen/d36"
                android:layout_marginLeft="@dimen/d27"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/black_35"
                android:textSize="@dimen/s16"
                app:typeface="ljh_1.TTF" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>