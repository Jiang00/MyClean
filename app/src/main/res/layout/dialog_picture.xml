<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_35"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/d33"
        android:layout_marginRight="@dimen/d33"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d90"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d15"
                android:src="@mipmap/pic_dialog_delete" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ProgressBar
                    android:id="@+id/delete_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d3"
                    android:layout_gravity="center"
                    android:progress="100"
                    android:progressDrawable="@drawable/pic_progress"
                    android:visibility="gone" />

                <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                    android:id="@+id/message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/picture_1"
                    android:textColor="@color/A9"
                    android:textSize="@dimen/s15" />

                <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d12"
                    android:text="@string/picture_2"
                    android:textColor="@color/A10"
                    android:textSize="@dimen/s11" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/A8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d36"
            android:orientation="horizontal">

            <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/A8"
                android:textSize="@dimen/s16" />


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/A8" />

            <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="@color/A13"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>