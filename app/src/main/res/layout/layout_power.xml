<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A0"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d146"
        android:background="@color/A1">

        <com.sample.lottie.LottieAnimationView
            android:id="@+id/power_clean"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="clean.json"
            app:lottie_imageAssetsFolder="images/clean"
            app:lottie_loop="true" />
    </RelativeLayout>
<LinearLayout
    android:id="@+id/ll_ad"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/d8"
        android:background="@color/A4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A0"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d24"
            android:layout_marginLeft="@dimen/d16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- <ImageView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:layout_marginLeft="27dp"
                 android:layout_marginRight="15dp"
                 android:src="@mipmap/power_2" />-->

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:id="@+id/power_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power_1"
                android:textColor="@color/A1"
                android:textSize="@dimen/s12" />

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/power_2"
                android:textColor="@color/A1"
                android:textSize="@dimen/s12" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:background="@color/A4" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/power_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:overScrollMode="never"
            android:paddingTop="@dimen/d16"
            android:scrollbars="none" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@color/A0">

        <Button
            android:id="@+id/junk_button_clean"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d36"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button"
            android:text="@string/junk_button"
            android:textAllCaps="false"
            android:textColor="@color/A0"
            android:textSize="@dimen/s18" />
    </RelativeLayout>
</LinearLayout>