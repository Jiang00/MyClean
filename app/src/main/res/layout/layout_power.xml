<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A17"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1">

        <ImageView
            android:id="@+id/power_imageview"
            android:layout_width="@dimen/d190"
            android:layout_height="@dimen/d150"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d25"
            android:layout_marginTop="@dimen/d20"
            android:background="@color/A1"
            android:src="@mipmap/power_1" />

        <ImageView
            android:id="@+id/power_1"
            android:layout_width="@dimen/d13"
            android:layout_height="@dimen/d13"
            android:layout_marginLeft="@dimen/d80"
            android:layout_marginTop="@dimen/d82"
            android:src="@mipmap/power_2" />

        <ImageView
            android:id="@+id/power_2"
            android:layout_width="@dimen/d19"
            android:layout_height="@dimen/d19"
            android:layout_marginLeft="@dimen/d84"
            android:layout_marginTop="@dimen/d42"
            android:src="@mipmap/power_3" />

        <ImageView
            android:id="@+id/power_3"
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            android:layout_marginLeft="@dimen/d225"
            android:layout_marginTop="@dimen/d36"
            android:src="@mipmap/power_2" />

        <ImageView
            android:id="@+id/power_4"
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            android:layout_marginLeft="@dimen/d240"
            android:layout_marginTop="@dimen/d80"
            android:src="@mipmap/power_3" />

        <ImageView
            android:id="@+id/power_5"
            android:layout_width="@dimen/d16"
            android:layout_height="@dimen/d16"
            android:layout_marginLeft="@dimen/d250"
            android:layout_marginTop="@dimen/d146"
            android:src="@mipmap/power_2" />

        <ImageView
            android:id="@+id/power_6"
            android:layout_width="@dimen/d15"
            android:layout_height="@dimen/d15"
            android:layout_marginLeft="@dimen/d127"
            android:layout_marginTop="@dimen/d146"
            android:src="@mipmap/power_3" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d8"
        android:layout_marginRight="@dimen/d8"
        android:background="@color/A7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:background="@color/A7"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d8"
                android:text="@string/power6"
                android:textColor="@color/A8"
                android:textSize="@dimen/s14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/gboost_power_check"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_marginRight="@dimen/d8"
                android:src="@mipmap/side_check_passed" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A7">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/power_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:scrollbars="none" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <RelativeLayout
        android:id="@+id/power_clean"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/junk_button_clean"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d48"
            android:layout_centerInParent="true"
            android:background="@color/A1"
            android:gravity="center"
            android:text="@string/power5"
            android:textColor="@color/A7"
            android:textSize="@dimen/s16" />
    </RelativeLayout>
</LinearLayout>