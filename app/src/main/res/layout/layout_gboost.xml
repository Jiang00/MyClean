<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <include layout="@layout/layout_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/d9"
            android:background="@drawable/shape_ad"
            android:elevation="@dimen/d2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d72"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d8"
                    android:src="@mipmap/gboost_1" />

                <com.my.module.charge.saver.view.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:text="@string/gboost_add"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s14"
                    app:typeface="eos_clean.otf" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.supers.clean.junk.customeview.PagerView
                    android:id="@+id/gboost_recyc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.rd.PageIndicatorView
                    android:id="@+id/pageindicatorview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/d5"
                    app:piv_animationType="drop"
                    app:piv_count="0"
                    app:piv_interactiveAnimation="true"
                    app:piv_radius="@dimen/d3"
                    app:piv_selectedColor="@color/A1"
                    app:piv_unselectedColor="@color/black_35" />
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/gboost_clean_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_add_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_100"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d24" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/normal_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/add_left"
                        android:layout_width="@dimen/d40"
                        android:layout_height="@dimen/d40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d8"
                        android:layout_marginRight="@dimen/d8"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/d8">

                        <ImageView
                            android:layout_width="@dimen/d24"
                            android:layout_height="@dimen/d24"
                            android:layout_gravity="center"
                            android:src="@mipmap/tilte_left" />
                    </FrameLayout>

                    <com.my.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/gboost_7"
                        android:textColor="@color/A8"
                        android:textSize="@dimen/s17"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:id="@+id/add_right"
                        android:layout_width="@dimen/d40"
                        android:layout_height="@dimen/d40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d8"
                        android:padding="@dimen/d8"
                        android:scaleType="center"
                        android:src="@mipmap/white_add_right" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/goost_container"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_radio" />

                    <EditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="30dp"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/edit_hint"
                        android:singleLine="true"
                        android:textColor="#8a000000"
                        android:textColorHint="#59000000" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/edit_left_drawable" />

                    <ImageButton
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginRight="5dp"
                        android:background="@mipmap/eidt_cha"
                        android:padding="5dp" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>

        <ListView
            android:id="@+id/list_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0px"
            android:elevation="@dimen/d2" />
    </LinearLayout>
</FrameLayout>