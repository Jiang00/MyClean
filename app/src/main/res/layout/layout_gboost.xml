<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <include layout="@layout/layout_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d7"
            android:layout_marginRight="@dimen/d7"
            android:layout_marginTop="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:elevation="@dimen/d2">

            <ImageView
                android:id="@+id/gboost_short_iv"
                android:layout_width="@dimen/d61"
                android:layout_height="@dimen/d61"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/d14"
                android:src="@mipmap/gboost_short" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="@string/gboost_add_short"
                android:textColor="@color/B3"
                android:textSize="@dimen/s14" />

            <TextView
                android:id="@+id/gboost_short_add"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d20"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/d13"
                android:background="@drawable/shape_a7"
                android:gravity="center"
                android:text="@string/gboost_12"
                android:textColor="@color/A8"
                android:textSize="@dimen/s12" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d7"
            android:layout_marginRight="@dimen/d7"
            android:layout_marginTop="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:elevation="@dimen/d2"
            android:orientation="vertical"
            android:visibility="gone" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:elevation="@dimen/d2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d72"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d8"
                    android:src="@mipmap/gboost_1" />

                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:text="@string/gboost_add"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s14"
                    app:typeface="lyp_text.otf" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/gboost_recyc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/gboost_clean_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_button"
            android:visibility="visible" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_add_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_100"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d24" />

            <FrameLayout
                android:layout_width="match_parent"

                android:layout_height="@dimen/d56">

                <RelativeLayout
                    android:id="@+id/normal_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/add_left"
                        android:layout_width="@dimen/d40"
                        android:layout_height="@dimen/d40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d8"
                        android:layout_marginRight="@dimen/d8"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:padding="@dimen/d8">

                        <ImageView
                            android:layout_width="@dimen/d24"
                            android:layout_height="@dimen/d24"
                            android:layout_gravity="center"
                            android:src="@mipmap/tilte_left" />
                    </FrameLayout>

                    <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="@string/gboost_7"
                        android:textColor="@color/A8"
                        android:textSize="@dimen/s17"
                        app:typeface="lyp_text.otf" />

                    <ImageView
                        android:id="@+id/add_right"
                        android:layout_width="@dimen/d40"
                        android:layout_height="@dimen/d40"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d8"
                        android:padding="@dimen/d8"
                        android:scaleType="center"
                        android:src="@mipmap/white_add_right" />
                </RelativeLayout>

                <FrameLayout
                    android:id="@+id/goost_container"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d56"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d8"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d36"
                        android:layout_gravity="center"
                        android:background="@drawable/shape_radio" />

                    <EditText
                        android:id="@+id/search_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/d36"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/d30"
                        android:background="@null"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:hint="@string/edit_hint"
                        android:singleLine="true"
                        android:textColor="@color/B2"
                        android:textColorHint="@color/B4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d8"
                        android:src="@mipmap/edit_left_drawable" />

                    <ImageButton
                        android:id="@+id/clear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginRight="@dimen/d3"
                        android:background="@mipmap/eidt_cha"
                        android:padding="@dimen/d5" />
                </FrameLayout>
            </FrameLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ad_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d7"
            android:layout_marginRight="@dimen/d7"
            android:layout_marginTop="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:elevation="@dimen/d2"
            android:orientation="vertical"
            android:visibility="gone" />

        <ListView
            android:id="@+id/list_game"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:divider="@drawable/list_divider"
            android:dividerHeight="0px"
            android:elevation="@dimen/d2" />
    </LinearLayout>
</FrameLayout>