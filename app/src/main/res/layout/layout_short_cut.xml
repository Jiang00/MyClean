<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/short_fl"
            android:layout_width="@dimen/d133"
            android:layout_height="@dimen/d133"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/d84"
                android:layout_height="@dimen/d84"
                android:layout_gravity="center"
                android:src="@drawable/shape_round_a1" />

            <ImageView
                android:id="@+id/short_backg"
                android:layout_width="@dimen/d84"
                android:layout_height="@dimen/d84"
                android:layout_gravity="center"
                android:src="@mipmap/short_cut_0" />

            <ImageView
                android:id="@+id/short_zhuan"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@mipmap/short_cut_2" />

            <ImageView
                android:id="@+id/short_huojian"
                android:layout_width="@dimen/d84"
                android:layout_height="@dimen/d84"
                android:layout_gravity="center"
                android:src="@mipmap/short_cut_1" />
        </FrameLayout>


    </LinearLayout>


</FrameLayout>