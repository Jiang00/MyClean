<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/short_backg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="1dp" />

    <FrameLayout
        android:id="@+id/short_fl"
        android:layout_width="@dimen/d333"
        android:layout_height="@dimen/d333"
        android:layout_gravity="center">

        <com.security.cleaner.myview.ShortBubbleCenterLayout
            android:id="@+id/short_bubble"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/short_zhuan"
            android:layout_width="@dimen/d121"
            android:layout_height="@dimen/d121"
            android:layout_gravity="center"
            android:src="@mipmap/short_1" />


        <ImageView

            android:layout_width="@dimen/d121"
            android:layout_height="@dimen/d121"
            android:layout_gravity="center"
            android:src="@mipmap/short_3" />

        <ImageView
            android:id="@+id/short_huo"
            android:layout_width="@dimen/d121"
            android:layout_height="@dimen/d121"
            android:layout_gravity="center"
            android:src="@mipmap/short_2"
            android:visibility="invisible" />
    </FrameLayout>


</FrameLayout>