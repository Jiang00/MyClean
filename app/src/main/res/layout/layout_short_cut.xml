<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/short_backg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7d000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="wrap_content"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/short_fl"
            android:layout_width="@dimen/d90"
            android:layout_height="@dimen/d90"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/short_b"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d72"
                android:layout_gravity="center"
                android:src="@mipmap/short_0" />

            <ImageView
                android:id="@+id/short_huojian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/short_4" />

        </FrameLayout>

    </LinearLayout>


</FrameLayout>