<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/cooling_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d80"
        android:background="@drawable/gradient_beijing1">

        <ImageView
            android:id="@+id/cooling_dianyuan"
            android:layout_width="@dimen/d230"
            android:layout_height="@dimen/d230"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d80"
            android:src="@mipmap/cooling_1" />

        <ImageView
            android:layout_width="@dimen/d230"
            android:layout_height="@dimen/d230"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d80"
            android:src="@mipmap/cooling_4" />

        <ImageView
            android:id="@+id/cooling_dianyuan1"
            android:layout_width="@dimen/d230"
            android:layout_height="@dimen/d230"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d80"
            android:src="@mipmap/cooling_2" />

        <ImageView
            android:id="@+id/cooling_ke"
            android:layout_width="@dimen/d230"
            android:layout_height="@dimen/d230"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d80"
            android:src="@mipmap/cooling_3" />

        <LinearLayout
            android:id="@+id/cooling_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cooling_ke"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d18"
            android:orientation="vertical"
            android:visibility="invisible">
            <!-- android:visibility="invisible"-->

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/cooling_start"
                android:textColor="@color/A5"
                android:textSize="@dimen/s12" />

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/cooling_wendu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d18"
                android:text="30â„ƒ"
                android:textColor="@color/B3"
                android:textSize="@dimen/s24" />
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>