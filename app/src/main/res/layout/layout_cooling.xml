<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />

        <RelativeLayout
            android:id="@+id/cooling_fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d161"
                android:background="@mipmap/cooling_1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/d161"
                android:layout_alignParentRight="true"
                android:background="@mipmap/cooling_1"
                android:rotationY="180" />

            <FrameLayout
                android:id="@+id/zhuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d141">

                <ImageView
                    android:layout_width="@dimen/d141"
                    android:layout_height="@dimen/d141"
                    android:layout_gravity="center"
                    android:src="@mipmap/cooling_2" />

                <ImageView
                    android:id="@+id/cooling_xuehua"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/cooling_3" />
            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zhuan"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d18"
                android:src="@mipmap/cooling_4" />
        </RelativeLayout>

    </LinearLayout>


    <com.froumobic.clean.junk.mview.CoolongView
        android:id="@+id/cooling_piao"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/fl_lot_cooling"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d135"
        android:layout_gravity="bottom"
        android:visibility="invisible">

        <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:background="@color/black_35"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="AD"
            android:textColor="@android:color/white"
            android:textSize="8sp"
            app:typeface="ljh_1.TTF" />
    </FrameLayout>

</FrameLayout>