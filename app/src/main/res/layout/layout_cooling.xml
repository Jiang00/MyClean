<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@mipmap/clean_beijing" />

    <com.eifmobi.clean.junk.myview.BubbleLineLayout
        android:id="@+id/cooling_piao"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>



    <com.eifmobi.clean.junk.myview.CoolingView
        android:id="@+id/cooling_view"
        android:layout_width="@dimen/d76"
        android:layout_height="@dimen/d176"
        android:layout_gravity="center" />

    <LinearLayout
        android:id="@+id/cooling_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/d90"
        android:orientation="horizontal"
        android:visibility="invisible">

        <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cooling_start"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18" />

        <com.eifmobi.charge.saver.Aview.CustomerTypefaceTextView
            android:id="@+id/cooling_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="40â„ƒ"
            android:textColor="@color/A9"
            android:textSize="@dimen/s18" />
    </LinearLayout>


</FrameLayout>