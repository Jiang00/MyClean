<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/cooling_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d123">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d3"
            android:background="@color/A7" />

        <ImageView
            android:id="@+id/cooling_2"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:background="@mipmap/cooling_2" />

        <com.icleaner.junk.mycustomview.BatteryScanView
            android:id="@+id/cooling_1"
            android:layout_width="@dimen/d240"
            android:layout_height="@dimen/d270"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="@dimen/d240"
            android:layout_height="@dimen/d270"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/cooling_1"
            android:visibility="gone" />

        <!--旋转-->
        <ImageView
            android:id="@+id/cooling_xuehua"
            android:layout_width="@dimen/d240"
            android:layout_height="@dimen/d270"
            android:layout_gravity="center"
            android:src="@mipmap/cooling_1"
            android:visibility="gone" />
    </FrameLayout>
    <!--飘落的控件-->
    <LinearLayout
        android:id="@+id/cooling_piao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/cooling_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/d120"
        android:orientation="horizontal"
        android:visibility="gone">
        <!-- android:visibility="invisible"-->

        <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/cooling_start"
            android:textColor="@color/B3"
            android:textSize="@dimen/s22" />

        <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
            android:id="@+id/cooling_wendu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d10"
            android:text="30℃"
            android:textColor="@color/B3"
            android:textSize="@dimen/s28" />
    </LinearLayout>
</FrameLayout>