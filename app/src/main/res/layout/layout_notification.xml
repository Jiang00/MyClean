<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/white_100"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/notifi_junk_ram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:scaleType="center"
            android:src="@mipmap/notifi_speed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d6"
            android:text="@string/notifi_clean"
            android:textColor="#4a4646"
            android:textSize="8sp" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="@dimen/d43"
        android:layout_gravity="center_vertical"
        android:background="#a8a7af" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/notifi_network_type"
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30"
            android:src="@mipmap/notifi_liuliang" />

        <TextView
            android:id="@+id/notifi_network_sudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d6"
            android:text="3.4KB/s"
            android:textColor="#31cf62"
            android:textSize="8sp" />
    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="@dimen/d43"
        android:layout_gravity="center_vertical"
        android:background="#a8a7af" />

    <LinearLayout
        android:id="@+id/notifi_ram"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/d30"
            android:layout_height="@dimen/d30">

            <ImageView
                android:id="@+id/notifi_memory"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30" />

            <TextView
                android:id="@+id/norifi_memory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="78%"
                android:textColor="#4a4646"
                android:textSize="8sp" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d6"
            android:text="@string/notifi_jiasu"
            android:textColor="#4a4646"
            android:textSize="8sp" />

    </LinearLayout>

    <View
        android:layout_width="1px"
        android:layout_height="@dimen/d43"
        android:layout_gravity="center_vertical"
        android:background="#a8a7af" />

    <LinearLayout
        android:id="@+id/notifi_cooling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifi_cpu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d30"
            android:gravity="center"
            android:text="53â„ƒ"
            android:textColor="#ff5656"
            android:textSize="@dimen/s14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d6"
            android:text="@string/notifi_wendu"
            android:textColor="#4a4646"
            android:textSize="8sp" />
    </LinearLayout>


</LinearLayout>
