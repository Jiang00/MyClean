<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/black_70"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/notifi_ram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33">

            <ImageView
                android:id="@+id/notifi_memory"
                android:layout_width="@dimen/d33"
                android:layout_height="@dimen/d33"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/norifi_memory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="78%"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s8" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/notifi_jiasu"
            android:textColor="@color/A7"
            android:textSize="@dimen/s9" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifi_junk_ram"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33"
            android:scaleType="center"
            android:src="@mipmap/notifi_speed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/notifi_clean"
            android:textColor="@color/A7"
            android:textSize="@dimen/s9" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifi_cooling"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notifi_cpu"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d33"
            android:gravity="center"
            android:text="53â„ƒ"
            android:textColor="@color/A2"
            android:textSize="@dimen/s15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="@string/notifi_wendu"
            android:textColor="@color/A7"
            android:textSize="@dimen/s9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/notifi_network_type"
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33"
            android:scaleType="center"
            android:src="@mipmap/notifi_liuliang" />

        <TextView
            android:id="@+id/notifi_network_sudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.4KB/s"
            android:textColor="@color/A7"
            android:textSize="@dimen/s9" />
    </LinearLayout>

</LinearLayout>
