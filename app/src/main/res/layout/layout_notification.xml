<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/A1"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/notifi_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d19"
            android:src="@mipmap/notifi_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/B3"
            android:textSize="@dimen/s8" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifi_ram"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33">

            <ImageView
                android:id="@+id/notifi_memory"
                android:layout_width="@dimen/d33"
                android:layout_height="@dimen/d33"
                android:layout_gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/norifi_memory_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="78"
                android:textColor="@color/A20"
                android:textSize="@dimen/s10" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center"
            android:text="@string/notifi_jiasu"
            android:textColor="@color/B3"
            android:textSize="@dimen/s10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/notifi_network_type"
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33"
            android:scaleType="center"
            android:src="@mipmap/notifi_liuliang" />

        <TextView
            android:id="@+id/notifi_network_sudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center"
            android:text="3.4KB/s"
            android:textColor="@color/B3"
            android:textSize="@dimen/s10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifi_junk_ram"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33"
            android:scaleType="center"
            android:src="@mipmap/notifi_speed1" />

        <TextView
            android:id="@+id/notifi_junk_ram_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center"
            android:text="@string/notifi_clean"
            android:textColor="@color/B3"
            android:textSize="@dimen/s10" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notifi_cooling"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/d16"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:src="@mipmap/notifi_cpu" />

        <TextView
            android:id="@+id/notifi_cpu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center"
            android:text="53â„ƒ"
            android:textColor="@color/B3"
            android:textSize="@dimen/s10" />
    </LinearLayout>
</LinearLayout>
