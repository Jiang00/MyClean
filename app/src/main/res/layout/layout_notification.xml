<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/notify_radio"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/notifi_icon"
        android:layout_width="0dp"
        android:layout_height="@dimen/d65"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d45"
            android:layout_height="@dimen/d45"
            android:src="@mipmap/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:gravity="center_horizontal"
            android:text="@string/app_name"
            android:textColor="@color/B3"
            android:textSize="@dimen/s8"
            android:visibility="gone" />
    </LinearLayout>
    <!--清理-->
    <LinearLayout
        android:id="@+id/notifi_junk_ram"
        android:layout_width="0dp"
        android:layout_height="@dimen/d64"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32"
            android:scaleType="center"
            android:src="@mipmap/notifi_speed" />

        <TextView
            android:id="@+id/notifi_junk_ram_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:gravity="center"
            android:text="@string/notifi_clean"
            android:textColor="#b3ffffff"
            android:textSize="@dimen/s9" />
    </LinearLayout>
    <!--加速-->
    <LinearLayout
        android:id="@+id/notifi_ram"
        android:layout_width="0dp"
        android:layout_height="@dimen/d64"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32">

            <ImageView
                android:id="@+id/notifi_memory"
                android:layout_width="@dimen/d25"
                android:layout_height="@dimen/d25"
                android:layout_gravity="center_horizontal|bottom"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/norifi_memory_text"
                android:layout_width="@dimen/d32"
                android:layout_height="@dimen/d32"
                android:layout_marginTop="@dimen/d3"
                android:gravity="center"
                android:text="28"
                android:textColor="@color/A7"
                android:textSize="@dimen/s8" />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:gravity="center"
            android:text="@string/notifi_jiasu"
            android:textColor="#b3ffffff"
            android:textSize="@dimen/s9" />
    </LinearLayout>
    <!--CPU-->
    <LinearLayout
        android:id="@+id/notifi_cooling"
        android:layout_width="0dp"
        android:layout_height="@dimen/d64"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32">

            <TextView
                android:id="@+id/notifi_cpu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d1"
                android:gravity="center"
                android:text="20℃"
                android:textColor="@color/A7"
                android:textSize="@dimen/s15" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:gravity="center"
            android:text="@string/temp"
            android:textColor="#b3ffffff"
            android:textSize="@dimen/s9" />
    </LinearLayout>
    <!--WiFi-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="@dimen/d64"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/notifi_network_type"
            android:layout_width="@dimen/d32"
            android:layout_height="@dimen/d32"
            android:scaleType="center"
            android:src="@mipmap/notifi_wifi" />

        <TextView
            android:id="@+id/notifi_network_sudu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:gravity="center"
            android:text="3.4KB/s"
            android:textColor="#b3ffffff"
            android:textSize="@dimen/s9" />

    </LinearLayout>
</LinearLayout>
