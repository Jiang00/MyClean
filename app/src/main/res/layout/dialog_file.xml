<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d133"
        android:layout_gravity="center"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="@dimen/d40"
                android:layout_height="@dimen/d40"
                android:layout_marginLeft="@dimen/d19"
                android:layout_marginTop="@dimen/d17"
                android:src="@mipmap/file_apk_icon" />

            <com.my.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/d6"
                android:maxLength="20"
                android:text="@string/delete_queren"
                android:textColor="@color/black_100"
                android:textSize="@dimen/s13"
                app:typeface="eos_clean.otf" />
        </LinearLayout>

        <com.my.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d19"
            android:layout_marginTop="@dimen/d10"
            android:text="@string/delete_2"
            android:textColor="@color/black_70"
            android:textSize="@dimen/s12"
            app:typeface="eos_clean.otf" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.my.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/d12"
                android:layout_marginRight="@dimen/d27"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/d5"
                android:text="@string/premiss_3"
                android:textColor="#6ec8f2"
                android:textSize="@dimen/s12"
                app:typeface="eos_clean.otf" />

            <com.my.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/d12"
                android:layout_marginRight="@dimen/d30"
                android:layout_toLeftOf="@id/ok"
                android:background="?attr/selectableItemBackground"
                android:padding="@dimen/d5"
                android:text="@string/premiss_4"
                android:textColor="#6ec8f2"
                android:textSize="@dimen/s12"
                app:typeface="eos_clean.otf" />
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>