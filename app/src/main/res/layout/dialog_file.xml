<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d90"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="@dimen/d36"
                android:layout_height="@dimen/d36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d44"
                android:src="@mipmap/file_apk_icon"
                android:visibility="gone" />

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="@string/delete_2"
                android:textColor="@color/A5"
                android:textSize="@dimen/s15" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d1"
            android:background="@color/A5" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d33"
            android:orientation="horizontal">

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/cancle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/A6"
                android:textSize="@dimen/s15" />

            <TextView
                android:layout_width="@dimen/d1"
                android:layout_height="match_parent"
                android:background="@color/A5" />

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:id="@+id/ok"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="@color/A1"
                android:textSize="@dimen/s15" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>