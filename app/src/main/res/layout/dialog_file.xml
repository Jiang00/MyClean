<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_50"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_radio"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_icon"
                android:layout_width="@dimen/d36"
                android:layout_height="@dimen/d36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d44"
                android:src="@mipmap/file_apk_icon"
                android:visibility="gone" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/d18"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginTop="@dimen/d16"
                android:text="@string/delete_2"
                android:textColor="@color/A8"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d16"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/cancle"
                android:layout_width="@dimen/d70"
                android:layout_height="@dimen/d24"
                android:background="@color/A15"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/A9"
                android:textSize="@dimen/s15" />

            <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                android:id="@+id/ok"
                android:layout_width="@dimen/d70"
                android:layout_height="@dimen/d24"
                android:layout_marginLeft="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:background="@color/A1"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="@color/A7"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>