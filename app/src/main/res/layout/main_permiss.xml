<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_all_cercle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_t"
    android:background="@color/app_color_first"
    android:paddingLeft="16dp"
    android:paddingRight="4dp">

    <RelativeLayout
        android:id="@+id/permiss_ok"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/d160"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/permiss_b"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginTop="@dimen/d37"
            android:text="@string/permiss_6"
            android:textColor="@color/black_100"
            android:textSize="@dimen/s15" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:text="@string/permiss_7"
            android:textColor="@color/black_70"
            android:textSize="@dimen/s12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/permiss_cancle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d24"
                android:layout_marginLeft="@dimen/d160"
                android:text="                 " />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
