<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/tuiguang_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/tuiguang_icon"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginTop="@dimen/d16" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d16"
            android:layout_marginLeft="@dimen/d12"
            android:layout_marginTop="@dimen/d16"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/tuiguang_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2f2f2f"
                android:textSize="@dimen/s16"
                app:typeface="ljh_1.TTF" />

            <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/tuiguang_subtitle"
                android:layout_width="@dimen/d225"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d3"
                android:textColor="#802f2f2f"
                android:textSize="@dimen/s12"
                app:typeface="ljh_1.TTF" />
        </LinearLayout>

        <ImageView
            android:id="@+id/tuiguang_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d29"
            android:src="@mipmap/right" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/B1" />
</LinearLayout>
