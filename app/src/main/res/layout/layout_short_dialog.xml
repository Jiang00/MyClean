<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40">

                <ImageView
                    android:layout_width="@dimen/d16"
                    android:layout_height="@dimen/d16"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:src="@mipmap/icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d43"
                    android:text="@string/app_name"
                    android:textColor="@color/Z2"
                    android:textSize="@dimen/s12" />

                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="@dimen/d32"
                    android:layout_height="@dimen/d32"
                    android:layout_gravity="center_vertical|right"
                    android:src="@mipmap/ad_delete" />
            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d20"
                android:text="@string/short_1"
                android:textColor="@color/Z1"
                android:textSize="@dimen/s24" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d8"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/short_4" />

                <TextView
                    android:id="@+id/short_clean_szie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d8"
                    android:textColor="@color/A2"
                    android:textSize="@dimen/s14" />

                <TextView
                    android:id="@+id/short_clean_msg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d2"
                    android:layout_weight="1"
                    android:textColor="@color/Z2"
                    android:textSize="@dimen/s14" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:background="@drawable/shape_ad"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>


</LinearLayout>