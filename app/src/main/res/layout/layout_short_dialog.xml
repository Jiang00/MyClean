<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d65"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d36"
                android:layout_height="@dimen/d36"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d16"
                android:src="@mipmap/short_5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d24"
                android:text="@string/short_cut_1"
                android:textColor="@color/A6"
                android:textSize="@dimen/s18" />

            <TextView
                android:id="@+id/short_clean_szie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d5"
                android:textColor="@color/A6"
                android:textSize="@dimen/s18" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shape_ad"
            android:orientation="vertical"
            android:visibility="visible" />
    </LinearLayout>
</LinearLayout>