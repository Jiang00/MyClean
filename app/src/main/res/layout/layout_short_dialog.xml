<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/d288"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d116"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/d39"
                android:layout_height="@dimen/d39"
                android:layout_marginLeft="@dimen/d22"
                android:layout_marginTop="@dimen/d22"
                android:src="@mipmap/short_5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d23"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/d17"
                    android:text="@string/success_title"
                    android:textColor="@color/A4"
                    android:textSize="@dimen/s17" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d6"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/success_cleaned"
                        android:textColor="@color/A6"
                        android:textSize="@dimen/s14" />

                    <TextView
                        android:id="@+id/short_clean_szie"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/d5"
                        android:textColor="@color/A1"
                        android:textSize="@dimen/s14" />
                </LinearLayout>

                <TextView
                    android:id="@+id/success"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d24"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/d16"
                    android:layout_marginTop="@dimen/d10"
                    android:background="@drawable/main_haoping"
                    android:gravity="center"
                    android:paddingLeft="@dimen/d10"
                    android:paddingRight="@dimen/d10"
                    android:text="@string/success"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s15" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shape_ad"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>