<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d65"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/aa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/short_cut_1"
                android:textColor="@color/A1"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/short_clean_szie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/aa"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d2"
                android:layout_toRightOf="@id/aa"
                android:text="100MB"
                android:textColor="@color/A9"
                android:textSize="@dimen/s20" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/d16"
                android:layout_toRightOf="@id/short_clean_szie"
                android:src="@mipmap/short_5" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:background="@drawable/shape_ad"
            android:orientation="vertical"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>