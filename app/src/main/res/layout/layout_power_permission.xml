<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_54">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/A3"
            android:orientation="vertical">


            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d16"
                android:layout_marginLeft="@dimen/d14"
                android:layout_marginRight="@dimen/d14"
                android:layout_marginTop="@dimen/d20"
                android:fontFamily="sans-serif"
                android:text="@string/power_promiss_3"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d56"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginLeft="@dimen/d17"
                android:layout_marginRight="@dimen/d17"
                android:background="@color/white_100"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d43"
                    android:layout_height="@dimen/d43"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d7"
                    android:background="@mipmap/icon" />

                <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d53"
                    android:fontFamily="sans-serif"
                    android:text="@string/app_name"
                    android:textColor="@color/A9"
                    android:textSize="@dimen/s16" />


            </RelativeLayout>


        </LinearLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="@dimen/d61"
            android:layout_height="@dimen/d50"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginRight="@dimen/d16"
            app:lottie_autoPlay="true"
            app:lottie_fileName="permiss.json"
            app:lottie_imageAssetsFolder="image/permiss"
            app:lottie_loop="true" />

    </FrameLayout>

</LinearLayout>

