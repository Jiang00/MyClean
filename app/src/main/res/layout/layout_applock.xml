<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d40"
                android:layout_marginTop="@dimen/d61">

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_width="@dimen/d50"
                    android:layout_height="@dimen/d50"
                    android:src="@mipmap/applock_icon_1" />

                <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/app_name_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_1"
                    android:text="@string/applock_9"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s14"
                    app:typeface="eos_clean.otf" />

                <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_1"
                    android:layout_toRightOf="@id/app_name_1"
                    android:text="PRO"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s8"
                    app:typeface="eos_clean.otf" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d18"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_1"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_2"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_3"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_4"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_5"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_2" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d27"
            android:text="@string/applock_6"
            android:textColor="@color/B5"
            android:textSize="@dimen/s14"
            app:typeface="eos_clean.otf" />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_1"
            android:layout_marginTop="@dimen/d6"
            android:src="@mipmap/applock_1" />

        <RelativeLayout
            android:id="@+id/bt_1rl"
            android:layout_width="@dimen/d168"
            android:layout_height="@dimen/d36"
            android:layout_below="@id/iv_1"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d18"
            android:layout_marginTop="@dimen/d20"
            android:background="@drawable/shape_button"
            android:gravity="center">


            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/bt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/applock_7"
                android:textColor="@color/A8"
                android:textSize="@dimen/s13"
                app:typeface="eos_clean.otf" />

            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bt_1"
                android:text="FREE"
                android:textColor="@color/B5"
                android:textSize="@dimen/s8"
                app:typeface="eos_clean.otf" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/A10" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d40"
                android:layout_marginTop="@dimen/d61">

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_width="@dimen/d50"
                    android:layout_height="@dimen/d50"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/applock_icon_2" />

                <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                    android:id="@+id/app_name_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/icon_2"
                    android:layout_centerHorizontal="true"
                    android:text="@string/applock_9"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s14"
                    app:typeface="eos_clean.otf" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_1"
                        android:textColor="@color/B3"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_2" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:id="@+id/tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_2"
                        android:textColor="@color/B8"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_3" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:id="@+id/tv_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_3"
                        android:textColor="@color/B8"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_3" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:id="@+id/tv_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_4"
                        android:textColor="@color/B8"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_3" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/d196"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d19"
                    android:orientation="horizontal">

                    <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                        android:id="@+id/tv_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/applock_5"
                        android:textColor="@color/B8"
                        android:textSize="@dimen/s15"
                        app:typeface="eos_clean.otf" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/applock_3" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/bt_2"
            android:layout_width="@dimen/d168"
            android:layout_height="@dimen/d36"
            android:layout_below="@id/ll_2"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d18"
            android:layout_marginTop="@dimen/d20"
            android:background="@drawable/shape_button"
            android:gravity="center"
            android:text="@string/applock_8"
            android:textColor="@color/A8"
            android:textSize="@dimen/s13" />
    </RelativeLayout>
</LinearLayout>