<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d56"
        android:layout_height="@dimen/d56"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="@dimen/d36"
            android:layout_height="@dimen/d36"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d8" />
    </RelativeLayout>


    <com.easy.module.charge.saver.protectview.CustomerTypefaceTextView
        android:id="@+id/file_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:lines="1"
        android:maxLength="18"
        android:textColor="@color/A8"
        android:textSize="@dimen/s16" />


    <ImageView
        android:id="@+id/file_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/d25"
        android:layout_marginRight="@dimen/d8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center" />

    <com.easy.module.charge.saver.protectview.CustomerTypefaceTextView
        android:id="@+id/file_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/file_check"
        android:textColor="@color/A9"
        android:textSize="@dimen/s14" />

</RelativeLayout>