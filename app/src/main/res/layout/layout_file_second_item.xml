<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/file"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d65"
        android:layout_height="@dimen/d56"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/file_icon"
            android:layout_width="@dimen/d33"
            android:layout_height="@dimen/d33"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_zi"
        android:layout_width="@dimen/d217"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:gravity="clip_vertical"
        android:orientation="vertical">

        <com.my.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="1111"
            android:textColor="@color/B2"
            android:textSize="@dimen/s14"
            app:typeface="eos_clean.otf"

            />

        <com.my.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d4"
            android:text="@string/white_list_tishi"
            android:textColor="@color/B3"
            android:textSize="@dimen/s11"
            app:typeface="eos_clean.otf" />
    </LinearLayout>

    <ImageView
        android:id="@+id/file_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="center" />
</RelativeLayout>