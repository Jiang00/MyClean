<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@color/white_100"
                android:orientation="vertical" />
            <!--六个按钮-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d16"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/deep_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/power_6" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/customerTypefaceTextView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/side_power"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/file_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/file_main" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/side_file"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/gboost_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/gboost_main" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/gboost_0"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d27"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/picture_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/main_picture" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/side_picture"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/privacy_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/privacy_main" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/customerTypefaceTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/privacy_clean"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/wifi_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/wifi_main" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/wifi_name"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d27"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/call_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/call_main" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/call_lanjie"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/notifi_button"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/d95"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/d50"
                            android:layout_height="@dimen/d50"
                            android:src="@mipmap/notifi_6" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/d12"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/side_notifi"
                            android:textColor="@color/B2"
                            android:textSize="@dimen/s14"
                            app:typeface="eos_clean.otf" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/file_sd_button"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="?attr/selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>