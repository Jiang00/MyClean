<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d193"
        android:background="@color/A1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/power_imageview"
            android:layout_width="@dimen/d135"
            android:layout_height="@dimen/d135"
            android:layout_marginBottom="@dimen/d12"
            android:layout_marginTop="@dimen/d4"
            android:src="@mipmap/power_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/power_tishi"
            android:textColor="@color/B3"
            android:textSize="@dimen/s13" />
    </LinearLayout>
</LinearLayout>