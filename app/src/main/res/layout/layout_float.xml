<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/float_yidong_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/float_relativelayout"
            android:layout_width="@dimen/d320"
            android:layout_height="@dimen/d152"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d45"
            android:background="@mipmap/float_beijing_cenrre">

            <LinearLayout
                android:id="@+id/ll_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d30"
                android:layout_marginLeft="@dimen/d16"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wifi"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_wifi" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:lines="1"
                    android:text="@string/float_wifi"
                    android:textColor="@color/A10"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_liuliang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d30"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_liuliang"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_liuliang" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:lines="1"
                    android:text="@string/float_liuliang"
                    android:textColor="@color/A10"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xianshi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d30"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_xianshi"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_liangdu_0" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:lines="1"
                    android:text="@string/float_liangdu"
                    android:textColor="@color/A10"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shengyin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d30"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_shengyin"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_shengyin" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:lines="1"
                    android:text="@string/float_shengyin"
                    android:textColor="@color/A10"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/d30"
                android:layout_marginRight="@dimen/d16"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_gps"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_gps" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d8"
                    android:lines="1"
                    android:text="@string/float_gps"
                    android:textColor="@color/A10"
                    android:textSize="@dimen/s12" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/float_jiashu"
            android:layout_width="@dimen/d90"
            android:layout_height="@dimen/d90"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/float_beijing">

            <ImageView
                android:id="@+id/float_cricle1"
                android:layout_width="@dimen/d90"
                android:layout_height="@dimen/d90"
                android:layout_centerInParent="true"
                android:src="@mipmap/float_dialog_3" />

            <ImageView
                android:id="@+id/float_cricle"
                android:layout_width="@dimen/d32"
                android:layout_height="@dimen/d32"
                android:layout_centerInParent="true"
                android:src="@mipmap/float_dialog_2"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/float_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="77%"
                    android:textColor="@color/A7"
                    android:textSize="@dimen/s24" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:id="@+id/float_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/float_jiasu"
                    android:textColor="@color/A6"
                    android:textSize="@dimen/s10" />
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="@dimen/d320"
            android:layout_height="wrap_content"
            android:layout_below="@id/float_relativelayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d10"
            android:background="@color/A1"
            android:orientation="vertical">

        </LinearLayout>
    </RelativeLayout>

</FrameLayout>