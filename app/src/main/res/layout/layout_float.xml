<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/d48"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d_27"
                    android:layout_toRightOf="@+id/floatball_relativeLayout"
                    android:background="@color/A0"
                    android:paddingLeft="@dimen/d27">

                    <LinearLayout
                        android:id="@+id/ll_wifi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/float_wifi" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_liuliang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_liuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/float_liuliang" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_xianshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_xianshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/float_liangdu_0" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shengyin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_shengyin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/float_shengyin" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/float_gps" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/floatball_relativeLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:layout_width="@dimen/d79"
                        android:layout_height="@dimen/d68"
                        android:src="@mipmap/float_ball_bj" />

                    <ImageView
                        android:id="@+id/float_cricle"
                        android:layout_width="@dimen/d71"
                        android:layout_height="@dimen/d67"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/float_ball" />

                    <ImageView
                        android:id="@+id/float_rotate"
                        android:layout_width="@dimen/d71"
                        android:layout_height="@dimen/d67"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/float_dialog_3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/rl_memory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                                android:id="@+id/float_memory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="77"
                                android:textColor="@color/A1"
                                android:textSize="@dimen/s13" />

                            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/float_memory"
                                android:text="%"
                                android:textColor="@color/A1"
                                android:textSize="@dimen/s13" />
                        </LinearLayout>

                        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                            android:id="@+id/float_tishi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/float_memory"
                            android:layout_gravity="center"
                            android:text="@string/float_jiasu"
                            android:textColor="@color/A1"
                            android:textSize="@dimen/s11" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_ad"
                android:layout_width="@dimen/d288"
                android:layout_height="wrap_content"
                android:background="@color/A0"
                android:orientation="vertical"></LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>