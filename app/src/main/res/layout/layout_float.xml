<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d190">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d141"
                    android:layout_marginTop="@dimen/d50"
                    android:background="@color/A1" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:layout_width="@dimen/d100"
                        android:layout_height="@dimen/d100"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/shape_ffffff_round" />

                    <ImageView
                        android:id="@+id/float_cricle"
                        android:layout_width="@dimen/d100"
                        android:layout_height="@dimen/d100"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/float_dialog_2" />

                    <ImageView
                        android:id="@+id/float_rotate"
                        android:layout_width="@dimen/d100"
                        android:layout_height="@dimen/d100"
                        android:layout_centerHorizontal="true"
                        android:src="@mipmap/float_dialog_3" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:id="@+id/rl_memory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center">

                            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                                android:id="@+id/float_memory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="77"
                                android:textColor="@color/A1"
                                android:textSize="@dimen/s30"
                                app:typeface="eos_clean.otf" />

                            <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@id/float_memory"
                                android:text="%"
                                android:textColor="@color/A1"
                                android:textSize="@dimen/s13"
                                app:typeface="eos_clean.otf" />
                        </RelativeLayout>

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/float_tishi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/float_memory"
                            android:layout_gravity="center"
                            android:text="@string/float_jiasu"
                            android:textColor="@color/A1"
                            android:textSize="@dimen/s11"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/d10">

                    <LinearLayout
                        android:id="@+id/ll_wifi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/float_dialog_4"
                            android:src="@mipmap/float_wifi" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/tv_wifi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="@string/float_wifi"
                            android:textColor="@color/A8"
                            android:textSize="@dimen/s13"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_liuliang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_liuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/float_dialog_4"
                            android:src="@mipmap/float_liuliang" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/tv_liuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="@string/float_liuliang"
                            android:textColor="@color/A8"
                            android:textSize="@dimen/s13"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_xianshi"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_xianshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/float_dialog_4"
                            android:src="@mipmap/float_liangdu_0" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/tv_xianshi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="@string/float_liangdu"
                            android:textColor="@color/A8"
                            android:textSize="@dimen/s13"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_shengyin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_shengyin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/float_dialog_4"
                            android:src="@mipmap/float_shengyin" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/tv_shengyin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="@string/float_shengyin"
                            android:textColor="@color/A8"
                            android:textSize="@dimen/s13"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_gps"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@mipmap/float_dialog_4"
                            android:src="@mipmap/float_gps" />

                        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
                            android:id="@+id/tv_gps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:lines="1"
                            android:text="@string/float_gps"
                            android:textColor="@color/A8"
                            android:textSize="@dimen/s13"
                            app:typeface="eos_clean.otf" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#42a5f5"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="125dp">

        <com.supers.clean.junk.customeview.HorizontalListView
            android:id="@+id/horizontal_listview"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom" />

        <com.eos.module.charge.saver.view.CustomerTypefaceTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/horizontal_listview"
            android:gravity="center"
            android:text="@string/float_h_1"
            android:textColor="#ffffff"
            android:textSize="18sp"
            app:typeface="eos_clean.otf" />
    </RelativeLayout>
</LinearLayout>