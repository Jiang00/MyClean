<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6000000"
    android:orientation="vertical">

    <View
        android:id="@+id/view_title_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <RelativeLayout
        android:id="@+id/float_yidong_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/float_beijing_iv"
            android:layout_width="@dimen/d280"
            android:layout_height="@dimen/d141"
            android:layout_centerHorizontal="true"
            android:background="@mipmap/float_beijing" />

        <LinearLayout
            android:id="@+id/float_relativelayout"
            android:layout_width="@dimen/d280"
            android:layout_height="wrap_content"
            android:layout_below="@id/float_beijing_iv"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/d_8"
            android:background="@drawable/main_battery_button">

            <LinearLayout
                android:id="@+id/ll_wifi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_wifi"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_wifi" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d27"
                    android:layout_marginTop="@dimen/d5"
                    android:lines="1"
                    android:text="@string/float_wifi"
                    android:textColor="@color/A3"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_liuliang"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_liuliang"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_liuliang1" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d27"
                    android:layout_marginTop="@dimen/d5"
                    android:lines="1"
                    android:text="@string/float_liuliang"
                    android:textColor="@color/A3"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_xianshi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_xianshi"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_liangdu_0" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d27"
                    android:layout_marginTop="@dimen/d5"
                    android:lines="1"
                    android:text="@string/float_liangdu"
                    android:textColor="@color/A3"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_shengyin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_shengyin"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_shengyin" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d27"
                    android:layout_marginTop="@dimen/d5"
                    android:lines="1"
                    android:text="@string/float_shengyin"
                    android:textColor="@color/A3"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gps"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_gps"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:src="@mipmap/float_gps" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d27"
                    android:layout_marginTop="@dimen/d5"
                    android:lines="1"
                    android:text="@string/float_gps"
                    android:textColor="@color/A3"
                    android:textSize="@dimen/s12" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="@dimen/d280"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">

            <ImageView
                android:layout_width="@dimen/d84"
                android:layout_height="@dimen/d84"
                android:layout_centerInParent="true"
                android:src="@mipmap/float_1" />

            <ImageView
                android:id="@+id/float_huan"
                android:layout_width="@dimen/d84"
                android:layout_height="@dimen/d84"
                android:layout_centerInParent="true"
                android:src="@mipmap/float_2" />

            <ImageView
                android:id="@+id/float_huojian"
                android:layout_width="@dimen/d84"
                android:layout_height="@dimen/d84"
                android:layout_centerInParent="true"
                android:src="@mipmap/float_3" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/float_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="77%"
                    android:textColor="@color/A5"
                    android:textSize="@dimen/s24"
                    android:visibility="gone" />

                <com.myboost.module.charge.saver.protectview.CustomerTypefaceTextViewBoost
                    android:id="@+id/float_tishi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/float_yijiasu"
                    android:textColor="#b3ffffff"
                    android:textSize="@dimen/s10"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="@dimen/d280"
            android:layout_height="wrap_content"
            android:layout_below="@id/float_relativelayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d10"
            android:background="@color/A1"
            android:orientation="vertical" />
    </RelativeLayout>
</FrameLayout>