<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A11"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:id="@+id/view_title_bar"
                android:layout_width="match_parent"
                android:layout_height="0dp" />

            <include layout="@layout/layout_title" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d154"
            android:background="@color/A1"
            android:gravity="center">

            <ImageView
                android:layout_width="@dimen/d112"
                android:layout_height="@dimen/d112"
                android:src="@mipmap/game" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:background="@color/A5"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/game_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d16"
                    android:text="@string/gboost_13"
                    android:textColor="@color/A2"
                    android:textSize="@dimen/s12" />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridView
                    android:id="@+id/gboost_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/A11"
                    android:horizontalSpacing="@dimen/d8"
                    android:numColumns="2"
                    android:paddingBottom="@dimen/d8"
                    android:paddingLeft="@dimen/d8"
                    android:paddingRight="@dimen/d8"
                    android:paddingTop="@dimen/d4"
                    android:scrollbars="none"
                    android:verticalSpacing="@dimen/d8" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

    <!--添加游戏-->
    <LinearLayout
        android:id="@+id/ll_add_game"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/A11"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/A1"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d24" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/normal_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:id="@+id/add_left"
                        android:layout_width="@dimen/d56"
                        android:layout_height="@dimen/d56"
                        android:layout_centerVertical="true"
                        android:background="?attr/selectableItemBackground">

                        <ImageView
                            android:layout_width="@dimen/d24"
                            android:layout_height="@dimen/d24"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/d16"
                            android:src="@mipmap/tilte_left" />
                    </FrameLayout>

                    <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@id/add_left"
                        android:text="@string/gboost_7"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/s18" />
                </RelativeLayout>

            </FrameLayout>
        </LinearLayout>
        <!--点击搜索按钮后的标题-->
        <FrameLayout
            android:id="@+id/search_container"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56"
            android:background="@color/A5"
            android:visibility="visible">

            <ImageView
                android:layout_width="@dimen/d333"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center"
                android:background="@drawable/shape_radio" />

            <EditText
                android:id="@+id/search_edit_text"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/d28"
                android:layout_marginRight="@dimen/d42"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:hint="@string/edit_hint"
                android:singleLine="true"
                android:textColor="@color/A2"
                android:textColorHint="@color/A5"
                android:textSize="@dimen/s14" />

            <ImageView
                android:layout_width="@dimen/d32"
                android:layout_height="@dimen/d32"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/d16"
                android:src="@mipmap/edit_left_drawable" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/d8"
            android:layout_marginRight="@dimen/d8"
            android:layout_marginTop="@dimen/d3"
            android:background="@color/A11">

            <ListView
                android:id="@+id/list_game"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d4"
                android:background="@color/B3"
                android:divider="@color/B1"
                android:dividerHeight="1px"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>