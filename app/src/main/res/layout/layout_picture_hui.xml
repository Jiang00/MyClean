<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/hui_never"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:gravity="center"
            android:text="@string/picture_8"
            android:textColor="#bfbfbf"
            android:textSize="@dimen/d20" />

        <LinearLayout
            android:id="@+id/ll_picture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f1f1f1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d16"
                    android:src="@mipmap/prompt" />

                <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d10"
                    android:layout_marginLeft="@dimen/d16"
                    android:layout_marginRight="@dimen/d24"
                    android:layout_marginTop="@dimen/d10"
                    android:text="@string/picture_5"
                    android:textColor="@color/A2"
                    android:textSize="@dimen/d14" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/picture_hui_recyc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/A0"
                android:paddingLeft="@dimen/d16"
                android:paddingRight="@dimen/d16"
                android:scrollbars="none" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d72"
                android:background="@color/A0"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/picture_restore"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/d36"
                    android:layout_marginLeft="@dimen/d16"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button"
                    android:gravity="center"
                    android:text="@string/picture_6"
                    android:textColor="@color/A0"
                    android:textSize="@dimen/s15" />

                <Button
                    android:id="@+id/picture_delete"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/d36"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d16"
                    android:layout_weight="1"
                    android:background="@drawable/shape_button_red"
                    android:text="@string/picture_7"
                    android:textColor="@color/A0"
                    android:textSize="@dimen/s15" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>