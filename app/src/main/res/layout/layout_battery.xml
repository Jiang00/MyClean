<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16"
            android:src="@mipmap/loading_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16"
            android:layout_toRightOf="@id/iv"
            android:text="@string/app_name"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s17" />

        <ImageView
            android:id="@+id/battery_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d16"
            android:src="@mipmap/battery_cha" />

    </RelativeLayout>


    <ImageView
        android:id="@+id/battery_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d50"
        android:src="@mipmap/battery_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d23"
        android:text="@string/battery_2"
        android:textColor="@color/white_100"
        android:textSize="@dimen/s19" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d6"
        android:text="@string/battery_3"
        android:textColor="@color/white_100"
        android:textSize="@dimen/s13" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d135"
        android:layout_marginTop="@dimen/d44"
        android:background="@color/white_20"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/d16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_4"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:text="@string/battery_5"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:text="@string/battery_6"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/battery_button"
            android:layout_width="@dimen/d176"
            android:layout_height="@dimen/d36"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_ffffff_round"
            android:text="@string/battery_7"
            android:textColor="@color/A1"
            android:textSize="@dimen/s19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d6"
            android:text="@string/battery_8"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s15" />
    </LinearLayout>


</LinearLayout>