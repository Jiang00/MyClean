<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible">

    <LinearLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ffffff_r"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d56">


            <ImageView
                android:id="@+id/battery_cha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@mipmap/ad_delete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d24"
                android:layout_marginTop="@dimen/d24"
                android:text="@string/app_name"
                android:textColor="@color/Z1"
                android:textSize="@dimen/s16" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_2"
                android:textColor="@color/Z1"
                android:textSize="@dimen/s18" />

            <ImageView
                android:layout_width="@dimen/d95"
                android:layout_height="@dimen/d56"
                android:layout_marginTop="@dimen/d20"
                android:src="@mipmap/battery_1" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/battery_2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d14"
                    android:text="1.Showy battery charging status real-time"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/battery_3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d14"
                    android:text="2.Auto stop power-draining apps"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/d16"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/battery_4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d14"
                    android:text="3.Display charging left time"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s11" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/d32"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <Button
                android:id="@+id/battery_button"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/d200"
                android:layout_height="@dimen/d36"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape__a4_round"
                android:text="@string/battery_7"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s16" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/d6"
                android:text="@string/battery_8"
                android:textColor="@color/Z2"
                android:textSize="@dimen/s10" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>