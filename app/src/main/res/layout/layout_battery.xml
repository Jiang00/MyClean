<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16"
            android:text="@string/app_name"
            android:textColor="@color/A8"
            android:textSize="@dimen/s17" />

        <ImageView
            android:id="@+id/battery_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d16"
            android:src="@mipmap/battery_cha" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d16"
        android:text="@string/battery_2"
        android:textColor="@color/A8"
        android:textSize="@dimen/s24" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d14"
        android:src="@mipmap/battery_2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d20"
        android:text="@string/battery_6"
        android:textColor="@color/A8"
        android:textSize="@dimen/s17" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/d27"
            android:layout_height="@dimen/d27"
            android:layout_marginLeft="@dimen/d43"
            android:background="@drawable/shape_ffffff_round"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/A1"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d3"
            android:text="@string/battery_3"
            android:textColor="@color/A8"
            android:textSize="@dimen/s16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/d27"
            android:layout_height="@dimen/d27"
            android:layout_marginLeft="@dimen/d43"
            android:background="@drawable/shape_ffffff_round"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/A1"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d3"
            android:text="@string/battery_4"
            android:textColor="@color/A8"
            android:textSize="@dimen/s16" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d50"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="@dimen/d27"
            android:layout_height="@dimen/d27"
            android:layout_marginLeft="@dimen/d43"
            android:background="@drawable/shape_ffffff_round"
            android:gravity="center"
            android:text="3"
            android:textColor="@color/A1"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d3"
            android:text="@string/battery_5"
            android:textColor="@color/A8"
            android:textSize="@dimen/s16" />

    </LinearLayout>

    <Button
        android:id="@+id/battery_button"
        android:layout_width="@dimen/d168"
        android:layout_height="@dimen/d40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d40"
        android:background="@drawable/shape_ffffff_round"
        android:text="@string/battery_7"
        android:textColor="@color/A1"
        android:textSize="@dimen/s15" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d5"
        android:text="@string/battery_8"
        android:textColor="@color/white_50"
        android:textSize="@dimen/s10" />
</LinearLayout>