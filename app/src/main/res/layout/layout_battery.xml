<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">


        <ImageView
            android:id="@+id/battery_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/d16"
            android:src="@mipmap/battery_cha" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d53"
            android:layout_height="@dimen/d53"
            android:layout_marginTop="@dimen/d15"
            android:src="@mipmap/icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:text="@string/app_name"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s18" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:layout_marginTop="@dimen/d90"
        android:background="@drawable/shape_07_r"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/d16">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d30"
            android:text="@string/battery_3"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d12"
            android:text="@string/battery_4"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d14"
            android:text="@string/battery_5"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d44"
            android:layout_marginTop="@dimen/d14"
            android:text="@string/battery_6"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <Button
            android:id="@+id/battery_button"
            android:layout_width="@dimen/d250"
            android:layout_height="@dimen/d44"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape__a4_r"
            android:text="@string/battery_7"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d6"
            android:text="@string/battery_8"
            android:textColor="@color/A7"
            android:textSize="@dimen/s10" />
    </LinearLayout>


</LinearLayout>