<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">
    <!--android:visibility="gone"-->
    <!--开关-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16"
            android:text="@string/app_name"
            android:textColor="@color/B3"
            android:textSize="@dimen/s18" />

        <LinearLayout
            android:id="@+id/battery_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/d16">

            <ImageView
                android:layout_width="@dimen/d18"
                android:layout_height="@dimen/d18"
                android:layout_gravity="center"
                android:src="@mipmap/close" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d52"
        android:gravity="center">

        <ImageView
            android:id="@+id/battery_2"
            android:layout_width="@dimen/d84"
            android:layout_height="@dimen/d84"
            android:src="@mipmap/battery_2" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d32"
        android:text="@string/battery_2"
        android:textColor="@color/B3"
        android:textSize="@dimen/s18" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d70"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d24"
            android:src="@mipmap/battery1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_19"
            android:textColor="@color/B3"
            android:textSize="@dimen/s16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d24"
            android:src="@mipmap/battery2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_12"
            android:textColor="@color/B3"
            android:textSize="@dimen/s16" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d20"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d24"
            android:src="@mipmap/battery3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/battery_11"
            android:textColor="@color/B3"
            android:textSize="@dimen/s16" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/battery_button"
        android:layout_width="@dimen/d250"
        android:layout_height="@dimen/d38"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d60"
        android:background="@drawable/main_clean_button"
        android:text="@string/battery_7"
        android:textColor="@color/A1"
        android:textSize="@dimen/s20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/d24"
        android:layout_marginTop="@dimen/d14"
        android:text="@string/battery_8"
        android:textColor="@color/B3"
        android:textSize="@dimen/s15" />
</LinearLayout>