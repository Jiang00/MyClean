<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_battery"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_beijing"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="gone">
    <!--android:visibility="gone"-->
    <!--开关-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d80">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16"
            android:text="@string/app_name"
            android:textColor="@color/A5"
            android:textSize="@dimen/s18" />

        <LinearLayout
            android:id="@+id/battery_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/d16">

            <ImageView
                android:layout_width="@dimen/d18"
                android:layout_height="@dimen/d18"
                android:layout_gravity="center"
                android:src="@mipmap/close" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d16"
        android:gravity="center">

        <ImageView
            android:id="@+id/battery_2"
            android:layout_width="@dimen/d93"
            android:layout_height="@dimen/d172"
            android:src="@mipmap/battery_2" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/d301"
        android:layout_height="@dimen/d193"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/d24"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d48"
            android:layout_marginLeft="@dimen/d8"
            android:gravity="center"
            android:text="@string/battery_2"
            android:textColor="@color/A5"
            android:textSize="@dimen/s24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:src="@mipmap/battery1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_20"
                android:textColor="@color/A5"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:src="@mipmap/battery2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_21"
                android:textColor="@color/A5"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d8"
                android:layout_marginRight="@dimen/d8"
                android:src="@mipmap/battery3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/battery_22"
                android:textColor="@color/A5"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <Button
        android:id="@+id/battery_button"
        android:layout_width="@dimen/d240"
        android:layout_height="@dimen/d43"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/main_battery_button"
        android:text="@string/battery_7"
        android:textColor="@color/A1"
        android:textSize="@dimen/s16" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/d14"
        android:layout_marginTop="@dimen/d10"
        android:text="@string/battery_23"
        android:textColor="#66ffffff"
        android:textSize="@dimen/s15" />
</LinearLayout>