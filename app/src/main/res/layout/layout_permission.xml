<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="@dimen/d333"
        android:layout_height="wrap_content"
        android:background="#591e134b">

        <LinearLayout
            android:layout_width="@dimen/d333"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d72"
                android:background="@drawable/normal_rectangle"
                android:gravity="center_horizontal|center_vertical">

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d14"
                    android:fontFamily="sans-serif"
                    android:text="@string/permiss_7"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s14" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/permision_r"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d56"
                android:background="@color/B3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/aaa"
                    android:layout_width="@dimen/d40"
                    android:layout_height="@dimen/d40"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d14"
                    android:background="@mipmap/icon" />

                <com.easy.module.charge.saver.protectview.EasyCustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_toRightOf="@id/aaa"
                    android:fontFamily="sans-serif"
                    android:text="@string/app_name"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s14" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d20"
                    android:src="@mipmap/permiss_k" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d38"
                    android:background="@mipmap/permiss_2" />
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

