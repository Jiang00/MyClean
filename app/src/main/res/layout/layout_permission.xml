<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="@dimen/d333"
        android:layout_height="wrap_content"
        android:background="@color/A7">

        <LinearLayout
            android:layout_width="@dimen/d333"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d53"
                android:background="@drawable/normal_rectangle"
                android:gravity="center_horizontal|center_vertical">

                <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/permission_1"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s19" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d208"
                    android:background="@mipmap/permiss_1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d44"
                    android:layout_marginTop="@dimen/d53"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aaa"
                        android:layout_width="@dimen/d33"
                        android:layout_height="@dimen/d33"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d29"
                        android:background="@mipmap/icon" />

                    <com.vater.module.charge.saver.Mview.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/d12"
                        android:layout_toRightOf="@id/aaa"
                        android:fontFamily="sans-serif"
                        android:text="@string/app_name"
                        android:textColor="@color/A9"
                        android:textSize="@dimen/s12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d44"
                        android:src="@mipmap/permiss_3" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/d39"
                        android:background="@mipmap/permiss_2" />
                </RelativeLayout>

                <Button
                    android:id="@+id/bt"
                    android:layout_width="@dimen/d112"
                    android:layout_height="@dimen/d29"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="@dimen/d9"
                    android:background="@drawable/shape_ffffff_round"
                    android:text="OK"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s15" />
            </FrameLayout>
        </LinearLayout>


    </FrameLayout>


</LinearLayout>

