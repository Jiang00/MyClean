<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="@dimen/d261"
        android:layout_height="wrap_content"
        android:background="#591e134b">

        <LinearLayout
            android:layout_width="@dimen/d261"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d48"
                android:background="@drawable/normal_rectangle"
                android:gravity="center_horizontal|center_vertical">

                <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/permission_1"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s15" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d154"
                    android:background="@mipmap/permiss_1" />

                <RelativeLayout
                    android:id="@+id/permision_r"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d56"
                    android:layout_marginTop="@dimen/d40"
                    android:background="@color/B3"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/aaa"
                        android:layout_width="@dimen/d40"
                        android:layout_height="@dimen/d40"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/d13"
                        android:background="@mipmap/icon" />

                    <com.icleaner.module.charge.saver.protectview.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/d13"
                        android:layout_toRightOf="@id/aaa"
                        android:fontFamily="sans-serif"
                        android:text="@string/app_name"
                        android:textColor="@color/A5"
                        android:textSize="@dimen/s12" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/d12"
                        android:src="@mipmap/side_check_passed" />

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>

