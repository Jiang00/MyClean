<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="@dimen/d225"
            android:layout_height="@dimen/d133"
            android:layout_gravity="center"
            android:background="@drawable/shape_a1_p"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:padding="@dimen/d8"
                android:src="@mipmap/permiss_1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d46"
                android:layout_marginLeft="@dimen/d17"
                android:layout_marginRight="@dimen/d17"
                android:layout_marginTop="@dimen/d8"
                android:background="@drawable/shape_ffffff_permiss"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d24"
                    android:layout_height="@dimen/d24"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d14"
                    android:background="@mipmap/icon" />

                <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d47"
                    android:fontFamily="sans-serif"
                    android:text="@string/app_name"
                    android:textColor="@color/A9"
                    android:textSize="@dimen/s11"
                    app:typeface="lyp_text.otf" />

                <ImageView
                    android:layout_width="@dimen/d20"
                    android:layout_height="@dimen/d30"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d14"
                    android:src="@mipmap/permiss_2" />


            </RelativeLayout>


            <com.mutter.module.charge.saver.Aview.CustomerTypefaceTextView
                android:id="@+id/tishi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d14"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/permiss_tishi"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s14"
                app:typeface="lyp_text.otf" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

