<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/onclick"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_54"
    android:gravity="center">


    <LinearLayout
        android:layout_width="@dimen/d280"
        android:layout_height="@dimen/d225"
        android:background="@drawable/shape_ad"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/d37"
            android:layout_height="@dimen/d37"
            android:layout_centerVertical="true"
            android:background="@mipmap/permiss_icon" />

        <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d20"
            android:fontFamily="sans-serif"
            android:text="@string/permission_1"
            android:textColor="@color/A4"
            android:textSize="@dimen/s19" />

        <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d10"
            android:fontFamily="sans-serif"
            android:text="@string/permiss_2"
            android:textColor="@color/A6"
            android:textSize="@dimen/s15" />

        <Button
            android:id="@+id/bt"
            android:layout_width="@dimen/d112"
            android:layout_height="@dimen/d29"
            android:layout_marginTop="@dimen/d30"
            android:background="@drawable/main_haoping"
            android:text="OK"
            android:textColor="@color/white_100"
            android:textSize="@dimen/s15" />
    </LinearLayout>
</LinearLayout>

