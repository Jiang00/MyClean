<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/backage" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="72dp"
            android:layout_height="64dp"
            android:layout_gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:scaleType="center"
                />
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0 "
                    android:textColor="@color/A3"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_memory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/notifi"
                    android:textColor="@color/white_100"
                    android:textSize="10sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ll_notifi"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginTop="5dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_jiasu"
            android:layout_width="65dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="16dp"
            android:background="@drawable/shape_notifi_button"
            android:gravity="center"
            android:text="@string/notification_button"
            android:textColor="@color/A3"
            android:textSize="12sp" />

    </LinearLayout>
</FrameLayout>
