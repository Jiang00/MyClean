<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="@dimen/d333"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/shape_ad"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginTop="@dimen/d10"
                android:text="@string/power_promiss_1"
                android:textColor="@color/A5"
                android:textSize="@dimen/s17" />


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:layout_marginRight="@dimen/d20"
                android:layout_marginTop="@dimen/d18"
                android:text="@string/power_promiss_2"
                android:textColor="@color/B3"
                android:textSize="@dimen/s14" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="@dimen/d10"
                android:layout_marginTop="@dimen/d30"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/exit_quxiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/d5"
                    android:paddingLeft="@dimen/d15"
                    android:paddingRight="@dimen/d15"
                    android:paddingTop="@dimen/d5"
                    android:text="@string/premiss_4"
                    android:textColor="#4285f4"
                    android:textSize="@dimen/s13" />

                <TextView
                    android:id="@+id/exit_queren"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="@dimen/d5"
                    android:paddingLeft="@dimen/d15"
                    android:paddingRight="@dimen/d15"
                    android:paddingTop="@dimen/d5"
                    android:text="@string/premiss_3"
                    android:textColor="#4285f4"
                    android:textSize="@dimen/s13" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_ad_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d8"
            android:background="@drawable/shape_ad"
            android:orientation="vertical"
            android:visibility="invisible" />

    </LinearLayout>


</FrameLayout>