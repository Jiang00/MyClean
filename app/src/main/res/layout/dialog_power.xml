<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/d280"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/power_promiss_3"
            android:textColor="@color/A1"
            android:textSize="@dimen/s18" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/d16"
            android:layout_marginRight="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:gravity="center"
            android:text="@string/power_promiss_4"
            android:textColor="@color/black_35"
            android:textSize="@dimen/s12" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d8"
            android:layout_marginTop="@dimen/d20"
            android:orientation="horizontal">

            <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/exit_queren"
                android:layout_width="@dimen/d112"
                android:layout_height="@dimen/d36"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/d27"
                android:background="@color/A1"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="#ffffff"
                android:textSize="@dimen/s16" />

            <com.froumobic.module.charge.saver.view.CustomerTypefaceTextView
                android:id="@+id/exit_quxiao"
                android:layout_width="@dimen/d112"
                android:layout_height="@dimen/d36"
                android:layout_marginLeft="@dimen/d27"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/black_35"
                android:textSize="@dimen/s16" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>