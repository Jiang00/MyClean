<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/d280"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/shape_ad"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_cha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:padding="@dimen/d2"
            android:src="@mipmap/eidt_cha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:text="@string/power_promiss_2"
            android:textColor="@color/A1"
            android:textSize="@dimen/s16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d24"
            android:layout_marginRight="@dimen/d24"
            android:layout_marginTop="@dimen/d20"
            android:text="@string/power_promiss_3"
            android:textColor="@color/A9"
            android:textSize="@dimen/s12" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/d16"
            android:layout_marginTop="@dimen/d16"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/bt_quxiao"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d33"
                android:layout_marginRight="@dimen/d8"
                android:background="@color/A15"
                android:gravity="center"
                android:text="@string/premiss_4"
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />

            <TextView
                android:id="@+id/bt_queren"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d33"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d16"
                android:background="@color/A1"
                android:gravity="center"
                android:text="@string/premiss_3"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s14" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>