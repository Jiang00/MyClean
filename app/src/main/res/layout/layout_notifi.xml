<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:elevation="@dimen/d4"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:elevation="@dimen/d4"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.fast.module.charge.saver.view.CustomerTypefaceTextView
            android:id="@+id/white_wu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:text="@string/notifi_nor"
            android:textColor="@color/A9"
            android:textSize="@dimen/s16"
            android:visibility="invisible" />


        <ListView
            android:id="@+id/list_si"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_100"
            android:divider="@drawable/list_divider"
            android:dividerHeight="1px" />

        <View
            android:id="@+id/view_set"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_50"
            android:clickable="true"
            android:visibility="gone" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@mipmap/yinying" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/notifi_button_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72">

        <Button
            android:id="@+id/notifi_button_clean"
            android:layout_width="@dimen/d250"
            android:layout_height="@dimen/d40"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button"
            android:text="@string/notifi_button"
            android:textColor="@color/A7"
            android:textSize="@dimen/s16" />
    </RelativeLayout>
</LinearLayout>