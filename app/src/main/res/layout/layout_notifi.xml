<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A10"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/ad_fl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d7"
        android:layout_marginRight="@dimen/d7"
        android:layout_marginTop="@dimen/d7"
        android:background="@drawable/shape_ad"
        android:elevation="@dimen/d2"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/ll_ad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/white_wu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/no_photo" />

            <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="@dimen/d24"
                android:text="@string/notifi_nor"
                android:textColor="@color/B8"
                android:textSize="@dimen/s17"
                 />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/d7"
            android:background="@drawable/shape_ad"
            android:elevation="@dimen/d2"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/notifi_setting_t"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d33"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.upupup.module.charge.saver.Aview.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/d8"
                    android:text="@string/notifi_kaiguan"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s11"
                     />

                <ImageView
                    android:id="@+id/notifi_all_check"
                    android:layout_width="@dimen/d36"
                    android:layout_height="@dimen/d36"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/d8"
                    android:src="@mipmap/side_check_passed" />
            </RelativeLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ListView
                    android:id="@+id/list_si"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="0px" />

                <View
                    android:id="@+id/view_set"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_50"
                    android:clickable="true"
                    android:elevation="@dimen/d2"
                    android:visibility="gone" />

            </FrameLayout>

        </LinearLayout>


        <Button
            android:id="@+id/notifi_button_clean"
            android:layout_width="@dimen/d95"
            android:layout_height="@dimen/d95"
            android:layout_gravity="center_horizontal|bottom"
            />


    </FrameLayout>


</LinearLayout>