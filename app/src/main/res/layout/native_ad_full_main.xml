<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/A1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ad_delete"
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_marginLeft="@dimen/d3"
                android:layout_marginTop="@dimen/d3"
                android:src="@mipmap/ad_delete" />

            <TextView
                android:id="@+id/main_full_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d33"
                android:background="@color/white_15"
                android:padding="@dimen/d5"
                android:text="Skip"
                android:textColor="@color/white_100"
                android:visibility="gone" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d9"
                android:layout_marginTop="@dimen/d9"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/iv_ic"
                    android:layout_width="@dimen/d72"
                    android:layout_height="@dimen/d72"
                    android:layout_centerHorizontal="true"
                    android:tag="ad_icon" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_ic"
                    android:layout_marginLeft="@dimen/d16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d9"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:fontFamily="sans-serif-regular"
                        android:marqueeRepeatLimit="marquee_forever"
                        android:singleLine="true"
                        android:tag="ad_title"
                        android:textColor="@color/white_100"
                        android:textSize="@dimen/s22"
                        tools:text="Your see" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/d9"
                        android:layout_marginTop="@dimen/d5"
                        android:ellipsize="end"
                        android:fontFamily="sans-serif-light"
                        android:lines="2"
                        android:tag="ad_desc"
                        android:textColor="@color/A7"
                        android:textSize="@dimen/s16"
                        tools:text="Your seeasd df fsfsfsfsf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:tag="ad_choices" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="@dimen/d9"
                android:layout_marginRight="@dimen/d9"
                android:layout_marginTop="@dimen/d9"
                android:layout_weight="1">

                <FrameLayout
                    android:id="@+id/ad_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:tag="ad_image" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/ad_image"
                    android:src="@mipmap/ad" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d56"
                    android:layout_marginBottom="@dimen/d33"
                    android:layout_marginLeft="@dimen/d9"
                    android:layout_marginRight="@dimen/d9"
                    android:layout_marginTop="@dimen/d33"
                    android:background="@drawable/shape__a4_r"
                    android:elevation="@dimen/d4"
                    android:gravity="center"
                    android:tag="ad_action"
                    android:text="Install"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/s16" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/loading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/d53"
                android:layout_height="@dimen/d53"
                android:src="@mipmap/icon" />

            <com.security.module.mView.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/d20"
                android:layout_marginTop="@dimen/d17"
                android:text="@string/app_name"
                android:textColor="@color/white_100"
                android:textSize="@dimen/s17" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>





