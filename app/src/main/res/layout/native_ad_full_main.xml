<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/loading_beijing">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d24" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/d30">

                <ImageView
                    android:id="@+id/ad_delete"
                    android:layout_width="@dimen/d18"
                    android:layout_height="@dimen/d18"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/close" />

                <ImageView
                    android:id="@+id/main_full_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d8"
                    android:padding="@dimen/d8"
                    android:src="@mipmap/close" />
            </RelativeLayout>


            <FrameLayout
                android:id="@+id/ad_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d225"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/d48"
                android:scaleType="centerCrop"
                android:tag="ad_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ad_image"
                android:src="@mipmap/ad" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/ad_image"
                android:orientation="horizontal"
                android:tag="ad_choices" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ic"
                android:layout_width="@dimen/d65"
                android:layout_height="@dimen/d65"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/d10"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_ic"
                android:layout_marginTop="@dimen/d20"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/full_ad__ac_action_green_margin"
                    android:layout_marginRight="@dimen/full_ad__ac_action_green_margin"
                    android:layout_marginTop="@dimen/d10"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-regular"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:tag="ad_title"
                    android:textColor="@color/A9"
                    android:textSize="@dimen/s18"
                    tools:text="Your see" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/full_ad__desc_text_margin"
                    android:layout_marginRight="@dimen/full_ad__desc_text_margin"
                    android:layout_marginTop="@dimen/d10"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:lines="3"
                    android:tag="ad_desc"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s12"
                    tools:text="Your seeasd df fsfsfsfsf" />

                <TextView
                    android:layout_width="@dimen/d313"
                    android:layout_height="@dimen/d43"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/d16"
                    android:background="@drawable/main_dialong_button"
                    android:gravity="center"
                    android:tag="ad_action"
                    android:text="Download"
                    android:textColor="@color/A1"
                    android:textSize="@dimen/s22" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loading_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/d48"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d25"
                android:clickable="false"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/d38"
                    android:layout_height="@dimen/d38"
                    android:layout_marginTop="@dimen/d5"
                    android:src="@mipmap/loading_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d25"
                    android:layout_marginLeft="@dimen/d4"
                    android:orientation="vertical">

                    <com.myboost.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/d2"
                        android:text="@string/app_name"
                        android:textColor="@color/A5"
                        android:textSize="@dimen/s19" />

                    <com.myboost.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/d3"
                        android:text="@string/loading_describe"
                        android:textColor="#99ffffff"
                        android:textSize="@dimen/s12" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>





