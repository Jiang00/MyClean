<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/A1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d56">

        <FrameLayout
            android:id="@+id/title_left"
            android:layout_width="@dimen/d56"
            android:layout_height="@dimen/d56"
            android:layout_centerVertical="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/d8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/tilte_left" />
        </FrameLayout>

        <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/title_left"
            android:text="@string/side_power"
            android:textColor="@color/A0"
            android:textSize="@dimen/s18" />
    </RelativeLayout>

    <com.bruder.clean.myview.PowerScanView
        android:id="@+id/cooling_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/d107"
        android:text="@string/toast_ing"
        android:textColor="#ffffff"
        android:textSize="@dimen/s20"
        android:textStyle="bold" />

    <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
        android:id="@+id/power_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/power_1"
        android:textColor="@color/A1"
        android:textSize="@dimen/s12"
        android:visibility="gone" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/power_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:overScrollMode="never"
        android:paddingTop="@dimen/d16"
        android:scrollbars="none"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d72"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/d16"
        android:layout_marginRight="@dimen/d16"
        android:background="@color/A0"
        android:visibility="gone">

        <Button
            android:id="@+id/junk_button_clean"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d36"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_button"
            android:text="@string/junk_button"
            android:textAllCaps="false"
            android:textColor="@color/A0"
            android:textSize="@dimen/s18" />
    </RelativeLayout>
</FrameLayout>