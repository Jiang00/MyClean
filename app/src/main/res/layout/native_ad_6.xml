<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:padding="@dimen/d5">

        <FrameLayout
            android:id="@+id/ad_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d116"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:tag="ad_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:tag="ad_choices" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ad" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_image"
            android:layout_marginTop="@dimen/d6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="@dimen/d43"
                android:layout_height="@dimen/d43"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d16"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d12"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-regular"
                    android:singleLine="true"
                    android:tag="ad_title"
                    android:textColor="@color/B2"
                    android:textSize="@dimen/s14"
                    tools:text="Your see" />

                <TextView
                    android:id="@+id/ad_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ll"
                    android:layout_marginTop="@dimen/d7"
                    android:fontFamily="sans-serif-light"
                    android:lines="1"
                    android:tag="ad_desc"
                    android:textColor="@color/B3"
                    android:textSize="@dimen/s14"
                    tools:text="Your see Your see Your see Your see" />
            </LinearLayout>

            <TextView
                android:layout_width="@dimen/d56"
                android:layout_height="@dimen/d33"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d10"
                android:background="@color/A7"
                android:gravity="center"
                android:tag="ad_action"
                android:text="Install"
                android:textColor="#fff"
                android:textSize="@dimen/s11" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>