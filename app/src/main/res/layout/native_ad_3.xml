<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00000000">

    <RelativeLayout
        android:layout_width="@dimen/d301"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_radio"
        android:paddingLeft="@dimen/d14"
        android:paddingRight="@dimen/d14">

        <ImageView
            android:id="@+id/ad_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d109"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerCrop"
            android:src="@mipmap/icon"
            android:tag="ad_image" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d3"
            android:layout_marginTop="@dimen/d3"
            android:orientation="horizontal"
            android:tag="ad_choices" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/ad_image"
            android:layout_alignParentRight="true"
            android:layout_gravity="end"
            android:background="#32000000"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:text="AD"
            android:textColor="@android:color/white"
            android:textSize="@dimen/s8" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_image"
            android:layout_marginTop="@dimen/d14"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ad_icon"
                android:layout_width="@dimen/d48"
                android:layout_height="@dimen/d48"
                android:src="@mipmap/icon"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/d15"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/ad_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/ad_image"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-regular"
                    android:lines="1"
                    android:maxLength="45"
                    android:tag="ad_title"
                    android:textColor="#000000"
                    android:textSize="@dimen/s13"
                    tools:text="Your see" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/d5"
                    android:src="@mipmap/ad_xing" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/ad_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll"
            android:layout_marginTop="@dimen/d8"
            android:fontFamily="sans-serif-light"
            android:lines="2"
            android:singleLine="true"
            android:tag="ad_desc"
            android:textColor="#9a9a9a"
            android:textSize="@dimen/s9"
            tools:text="Your see Your see Your see Your see" />


        <!--<ImageButton-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentRight="true"-->
        <!--android:layout_below="@+id/ad_image"-->
        <!--android:layout_gravity="end"-->
        <!--android:layout_marginRight="4dp"-->
        <!--android:layout_marginTop="7dp"-->
        <!--android:background="@mipmap/native_ad_go"-->
        <!--android:tag="ad_action" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/d29"
            android:layout_below="@id/ad_subtitle"
            android:layout_marginBottom="@dimen/d13"
            android:layout_marginTop="@dimen/d8"
            android:background="@drawable/text_ad_a8c600"
            android:gravity="center"
            android:tag="ac_action_green"
            android:text="Install"
            android:textColor="#fff"
            android:textSize="@dimen/s13" />
    </RelativeLayout>
</RelativeLayout>