                android:layout_height="@dimen/d56"
                android:layout_marginLeft="@dimen/d8"
                android:gravity="center_vertical"
                android:text="@string/setting_tongzhilan"
                android:textColor="@color/A1"
                android:textSize="@dimen/s15" />
            <!--清理通知-->
