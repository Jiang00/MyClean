<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:elevation="@dimen/d4"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <ScrollView
        android:id="@+id/setting_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_100"
            android:orientation="vertical">


            <com.vector.module.mView.CustomerTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/d16"
                android:text="@string/setting_kaiguanllei"
                android:textColor="@color/A1"
                android:textSize="@dimen/s14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/B3" />

            <RelativeLayout
                android:id="@+id/setting_tongzhi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:id="@+id/tongzhi_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_tongzhi"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:id="@+id/setting_tongzhi_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:scaleType="center" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_tongzhilan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:id="@+id/tongzhilan_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_tongzhilan"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:id="@+id/setting_tongzhilan_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_float"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:id="@+id/float_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_float"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:id="@+id/setting_float_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_battery"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:id="@+id/battery_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/setting_battery"
                        android:textColor="@color/Z1"
                        android:textSize="@dimen/s16" />

                    <com.vector.module.mView.CustomerTypefaceTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/battery_8"
                        android:textColor="@color/Z2"
                        android:textSize="@dimen/s12" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/setting_battery_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/d10"
                android:background="@color/B2" />

            <com.vector.module.mView.CustomerTypefaceTextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d40"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:text="@string/setting_gongneng"
                android:textColor="@color/A1"
                android:textSize="@dimen/s14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/B3" />


            <RelativeLayout
                android:id="@+id/setting_picture"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/side_picture"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_hui"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/picture_hui"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/main_msg_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/main_msg_title"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_file"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/side_file"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_notifi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/side_notifi"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_power"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/side_power"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_white"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_white"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_short"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_short"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/setting_rotate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d61"
                android:layout_marginLeft="@dimen/d16"
                android:background="@color/white_100">


                <com.vector.module.mView.CustomerTypefaceTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/setting_rotate"
                    android:textColor="@color/Z1"
                    android:textSize="@dimen/s16" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/d16"
                    android:src="@mipmap/setting_rig" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>
