<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_100"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/junk_title_backg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_color_first"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <include layout="@layout/layout_title" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#f1f1f1"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/setting_kaiguanllei"
        android:textColor="@color/black_54"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/setting_tongzhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_tongzhi"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/setting_tongzhi" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_tongzhi"
            android:text="@string/setting_tongzhi"
            android:textColor="@color/black_87"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/setting_tongzhi_check"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:scaleType="center" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:id="@+id/setting_tongzhilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_tongzhilan"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_tongzhilan"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_tongzhilan"
            android:text="@string/setting_tongzhilan"
            android:textColor="@color/black_87"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/setting_tongzhilan_check"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:scaleType="center" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:id="@+id/setting_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_float"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_float"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_float"
            android:text="@string/setting_float"
            android:textColor="@color/black_87"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/setting_float_check"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:scaleType="center" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:id="@+id/setting_battery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_battery"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@mipmap/setting_battery"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_battery"
            android:text="@string/setting_battery"
            android:textColor="@color/black_87"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/setting_battery_check"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:scaleType="center" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:background="#f1f1f1"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:text="@string/setting_gongneng"
        android:textColor="@color/black_54"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/setting_white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_white"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/setting_white"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_white"
            android:text="@string/setting_white"
            android:textColor="@color/black_87"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/setting_rig" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f1f1" />

    <RelativeLayout
        android:id="@+id/setting_rotate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_rotate"
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:src="@mipmap/setting_rotate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/rl_rotate"
            android:text="@string/setting_rotate"
            android:textColor="@color/black_87"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="72dp"
            android:layout_height="56dp"
            android:layout_alignParentRight="true"
            android:scaleType="center"
            android:src="@mipmap/setting_rig" />
    </RelativeLayout>
</LinearLayout>