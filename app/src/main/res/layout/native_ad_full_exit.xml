<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/A1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d30"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/ad_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d190"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:tag="ad_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ad_image"
                android:src="@mipmap/ad" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/ad_image"
                android:orientation="horizontal"
                android:tag="ad_choices" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ic"
                android:layout_width="@dimen/d65"
                android:layout_height="@dimen/d65"
                android:layout_centerHorizontal="true"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_ic"
                android:layout_marginTop="@dimen/d10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/d28"
                    android:layout_marginRight="@dimen/d28"
                    android:layout_marginTop="@dimen/d10"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-regular"
                    android:gravity="center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:tag="ad_title"
                    android:textColor="@color/A8"
                    android:textSize="18sp"
                    tools:text="Your see" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d40"
                    android:layout_marginRight="@dimen/d40"
                    android:layout_marginTop="@dimen/d14"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:lines="3"
                    android:tag="ad_desc"
                    android:textColor="@color/A8"
                    android:textSize="@dimen/s12"
                    tools:text="Your seeasd df fsfsfsfsf" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d50"
                    android:layout_marginBottom="@dimen/d20"
                    android:layout_marginLeft="@dimen/d28"
                    android:layout_marginRight="@dimen/d28"
                    android:layout_marginTop="@dimen/d16"
                    android:background="@drawable/select_text_ad"
                    android:gravity="center"
                    android:tag="ad_action"
                    android:text="Install"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/s16" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>





