<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/A7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/d30"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/d9"
            android:layout_marginTop="@dimen/d9"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/iv_ic"
                android:layout_width="@dimen/d72"
                android:layout_height="@dimen/d72"
                android:layout_centerHorizontal="true"
                android:tag="ad_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/iv_ic"
                android:layout_marginLeft="@dimen/d16"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d9"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="sans-serif-regular"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:tag="ad_title"
                    android:textColor="@color/white_100"
                    android:textSize="@dimen/s22"
                    tools:text="Your see" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/d9"
                    android:layout_marginTop="@dimen/d5"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:lines="2"
                    android:tag="ad_desc"
                    android:textColor="@color/A7"
                    android:textSize="@dimen/s16"
                    tools:text="Your seeasd df fsfsfsfsf" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:tag="ad_choices" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/d9"
            android:layout_marginRight="@dimen/d9"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/ad_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:tag="ad_image" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/ad_image"
                android:src="@mipmap/ad" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/d56"
                android:layout_marginBottom="@dimen/d33"
                android:layout_marginLeft="@dimen/d9"
                android:layout_marginRight="@dimen/d9"
                android:layout_marginTop="@dimen/d33"
                android:background="@drawable/shape__a4_r"
                android:elevation="@dimen/d4"
                android:gravity="center"
                android:tag="ad_action"
                android:text="Install"
                android:textColor="#ffffff"
                android:textSize="@dimen/s16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>





