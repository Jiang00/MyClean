<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="0dp" />

        <include layout="@layout/layout_title" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/null_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/null_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/null_apk" />

            <com.my.bruder.charge.saver.view.CustomerTypefaceMyTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d16"
                android:text="@string/file_null"
                android:textColor="@color/black_50"
                android:textSize="@dimen/d16" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/file_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/file_progressbar"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:indeterminateTint="@color/A1"
                android:indeterminateTintMode="src_atop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <ListView
                    android:id="@+id/file_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/d72"
                    android:divider="@drawable/list_divider"
                    android:dividerHeight="@dimen/d1" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/file_clean_rl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/d72"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/d16"
                android:layout_marginRight="@dimen/d16">

                <Button
                    android:id="@+id/junk_button_clean1"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d36"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_button"
                    android:text="@string/junk_button"
                    android:textAllCaps="false"
                    android:textColor="@color/A0"
                    android:textSize="@dimen/s18" />
            </RelativeLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>