<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:elevation="@dimen/d4"
        android:orientation="vertical">

        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <include layout="@layout/layout_title" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/null_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/null_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/null_apk" />

            <com.my.module.charge.saver.view.CustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d16"
                android:text="@string/file_null"
                android:textColor="@color/A9"
                android:textSize="@dimen/s16" />
        </LinearLayout>


        <FrameLayout
            android:id="@+id/file_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/file_progressbar"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:indeterminateTint="@color/A1"
                android:indeterminateTintMode="src_atop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ListView
                        android:id="@+id/file_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:divider="@drawable/list_divider"
                        android:dividerHeight="1px" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:background="@mipmap/yinying" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/file_clean_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d72"
                    android:layout_gravity="bottom">

                    <Button
                        android:id="@+id/file_button_clean"
                        android:layout_width="@dimen/d250"
                        android:layout_height="@dimen/d40"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_button"
                        android:text="@string/junk_button"
                        android:textAllCaps="false"
                        android:textColor="@color/A7"
                        android:textSize="@dimen/s16" />
                </RelativeLayout>
            </LinearLayout>


        </FrameLayout>
    </FrameLayout>

</LinearLayout>