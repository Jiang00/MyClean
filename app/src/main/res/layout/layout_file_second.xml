<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/A1"
        android:orientation="vertical">
        <!--android:elevation="@dimen/d4"-->
        <View
            android:id="@+id/view_title_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d24" />

        <include layout="@layout/layout_title" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/null_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/null_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/null_apk" />

            <com.privacy.module.charge.saver.protectview.PrivacyCustomerTypefaceTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/d16"
                android:text="@string/file_null"
                android:textColor="@color/A4"
                android:textSize="@dimen/s16" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/file_fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/file_progressbar"
                style="?android:attr/progressBarStyleInverse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:indeterminateTint="@color/A1"
                android:indeterminateTintMode="src_atop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/A11"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/ll_ad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d8"
                    android:orientation="vertical" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="@dimen/d8"
                    android:layout_marginRight="@dimen/d8"
                    android:layout_marginTop="@dimen/d4"
                    android:layout_weight="1">

                    <ListView
                        android:id="@+id/file_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/B3"
                        android:divider="@color/B1"
                        android:dividerHeight="1px"
                        android:scrollbars="none" />
                </FrameLayout>

                <RelativeLayout
                    android:id="@+id/file_clean_rl"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/d56"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/A5">

                    <TextView
                        android:id="@+id/file_button_clean"
                        android:layout_width="@dimen/d333"
                        android:layout_height="@dimen/d43"
                        android:layout_centerInParent="true"
                        android:background="@drawable/main_haoping"
                        android:gravity="center"
                        android:text="@string/picture_14"
                        android:textColor="@color/A5"
                        android:textSize="@dimen/s16" />
                </RelativeLayout>
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
</LinearLayout>