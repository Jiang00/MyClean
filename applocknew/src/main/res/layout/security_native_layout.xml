<?xml version="1.0" encoding="utf-8"?>
<FrameLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="230dp"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:background="@android:color/white">

    <TextView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="190dp"
        android:background="#32000000"
        android:fontFamily="sans-serif-light"
        android:gravity="center"
        android:text="AD"
        android:textColor="@android:color/white"
        android:textSize="8sp"/>

    <ImageButton
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="202dp"
        android:tag="ad_action"
        android:id="@+id/abc" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/security_select_green"
        android:layout_marginTop="190dp"
        android:layout_marginRight="4dp"
        android:textSize="16sp"
        android:text="Install"
        android:textColor="#fff"
        android:tag="ac_action_green"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="217dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-light"
        android:singleLine="true"
        android:tag="ad_subtitle"
        android:textColor="#8a000000"
        android:textSize="10sp"
        tools:text="Your see Your see Your see Your see"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="202dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-regular"
        android:maxLength="45"
        android:singleLine="true"
        android:tag="ad_title"
        android:textColor="#de000000"
        android:textSize="14sp"
        tools:text="Your see"/>

    <com.android.view.RoundImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        rightBottom="false"
        leftBottom="false"
        android:tag="ad_image"/>


</FrameLayout>