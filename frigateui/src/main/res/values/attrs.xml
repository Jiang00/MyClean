<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="AutoLayout_Layout">
        <attr name="jsonfile" format="string" />
        <attr name="layout_auto_basewidth">
            <flag name="width" value="1"></flag>
            <flag name="height" value="2"></flag>
            <flag name="textSize" value="4"></flag>
            <flag name="padding" value="8"></flag>
            <flag name="margin" value="16"></flag>
            <flag name="marginLeft" value="32"></flag>
            <flag name="marginTop" value="64"></flag>
            <flag name="marginRight" value="128"></flag>
            <flag name="marginBottom" value="256"></flag>
            <flag name="paddingLeft" value="512"></flag>
            <flag name="paddingTop" value="1024"></flag>
            <flag name="paddingRight" value="2048"></flag>
            <flag name="paddingBottom" value="4096"></flag>
        </attr>

        <attr name="layout_auto_baseheight">
            <flag name="width" value="1"></flag>
            <flag name="height" value="2"></flag>
            <flag name="textSize" value="4"></flag>
            <flag name="padding" value="8"></flag>
            <flag name="margin" value="16"></flag>
            <flag name="marginLeft" value="32"></flag>
            <flag name="marginTop" value="64"></flag>
            <flag name="marginRight" value="128"></flag>
            <flag name="marginBottom" value="256"></flag>
            <flag name="paddingLeft" value="512"></flag>
            <flag name="paddingTop" value="1024"></flag>
            <flag name="paddingRight" value="2048"></flag>
            <flag name="paddingBottom" value="4096"></flag>
            <flag name="minWidth" value="8192"></flag>
            <flag name="maxWidth" value="16384"></flag>
            <flag name="minHeight" value="32768"></flag>
            <flag name="maxHeight" value="65536"></flag>
        </attr>

    </declare-styleable>


    <declare-styleable name="AutoView">
        <attr name="typeface" format="string" />//字体类型
        <attr name="strokeWidth" format="dimension" />//shape边宽
        <attr name="tl_roundRadius" format="dimension" />//shape左上圆角
        <attr name="roundRadius" format="dimension" />//shape圆角
        <attr name="tr_roundRadius" format="dimension" />//shape右上圆角
        <attr name="bl_roundRadius" format="dimension" />//shape左下圆角
        <attr name="br_roundRadius" format="dimension" />//shape右下圆角
        <attr name="strokeColor" format="color|reference" />//shape边颜色
        <attr name="soildColor" format="color|reference" />//shape填充色
        <attr name="gradient_startColor" format="color|reference" />//shape填充色
        <attr name="gradient_centerColor" format="color|reference" />//shape填充色
        <attr name="gradient_endColor" format="color|reference" />//shape填充色
        <attr name="gradient_angle">
            <enum name="TOP_BOTTOM" value="0" />
            <enum name="TR_BL" value="1" />
            <enum name="RIGHT_LEFT" value="2" />
            <enum name="BR_TL" value="3" />
            <enum name="BOTTOM_TOP" value="4" />
            <enum name="BL_TR" value="5" />
            <enum name="LEFT_RIGHT" value="6" />
            <enum name="TL_BR" value="7" />
        </attr>
        //shape填充色
    </declare-styleable>
    <declare-styleable name="AutoRecycleView">
        <attr name="listItem" format="reference" />
    </declare-styleable>

    <declare-styleable name="MetroLayout">
        <attr name="metro_divider" format="dimension"></attr>
    </declare-styleable>


</resources>