<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/d72"
        android:layout_height="@dimen/d56"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="@dimen/d40"
            android:layout_height="@dimen/d40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/d16" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/d217"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rl"
        android:gravity="clip_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/call_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="1111"
            android:textColor="@color/black_87"
            android:textSize="@dimen/s14"


            />

        <TextView
            android:id="@+id/call_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/d5"
            android:textColor="@color/black_54"
            android:textSize="@dimen/s11" />
    </LinearLayout>

    <ImageView
        android:id="@+id/call_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/d8"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/d8"
        android:scaleType="center"
        android:src="@mipmap/no_checked" />
</RelativeLayout>