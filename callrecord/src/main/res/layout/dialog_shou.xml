<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/d333"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/shape_ffffff_r"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d48"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/d20"
            android:text="@string/call_3"
            android:textColor="@color/B2"
            android:textSize="@dimen/s17" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:text="@string/call_4"
                android:textColor="@color/B2"
                android:textSize="@dimen/s14" />

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d40"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/d40"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d20"
                android:text="@string/call_5"
                android:textColor="@color/B2"
                android:textSize="@dimen/s14" />

            <EditText
                android:id="@+id/num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/d40"
                android:digits="1234567890"
                android:theme="@style/MyEditText" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/d40"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/d10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:padding="@dimen/d8"
                android:text="@string/call_7"
                android:textColor="@color/A5"
                android:textSize="@dimen/s13" />

            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/d20"
                android:gravity="center"
                android:padding="@dimen/d8"
                android:text="@string/call_6"
                android:textColor="@color/A5"
                android:textSize="@dimen/s13" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>